@model MonPDReborn.Models.MonitoringWilayah.MonitoringWilayahVM.DetailModal

<div class="mb-3">
    <h5 class="mb-0">
        Monitoring Wilayah - @Model.DataModalRow.Wilayah
    </h5>
    <p class="text-muted mb-0">
        Tanggal: @Model.DataModalRow.Tanggal.ToString("dd/MM/yyyy") |
        Hari: @Model.DataModalRow.Tanggal.ToString("dddd", new System.Globalization.CultureInfo("id-ID")) |
        Jenis Pajak: @Model.DataModalRow.JenisPajak
    </p>
</div>

<div class="table-responsive">
    @(
        Html.DevExtreme().DataGrid<MonPDReborn.Models.MonitoringWilayah.MonitoringWilayahVM.DataDetailModal>()
        .ID("modalGrid")
        .DataSource(Model.DataModalRow.Detail)
        .KeyExpr("NOP")  // pakai NOP karena unik
        .ShowBorders(true)
        .RowAlternationEnabled(true)
        .ColumnAutoWidth(true)
        .SearchPanel(sp => sp
        .Visible(true)
        .Placeholder("Cari NOP atau Realisasi...")
        .Width(300)
        )
        .Paging(p => p.PageSize(5))
        .Pager(pg =>
        {
            pg.ShowPageSizeSelector(true);
            pg.AllowedPageSizes(new[] { 5, 10, 20 });
            pg.ShowInfo(true);
        })
        .Columns(columns =>
        {
            columns.AddFor(m => m.NOP)
            .Caption("NOP");

            columns.AddFor(m => m.NamaOP)
            .Caption("Nama OP");

            columns.AddFor(m => m.AlamatOP)
            .Caption("Alamat OP");

            columns.AddFor(m => m.Realisasi)
            .Caption("Realisasi")
            .Format("#,##0");
        })
        .Summary(s =>
        {
            s.TotalItems(items =>
            {
                items.AddFor(m => m.NOP)
                .SummaryType(SummaryType.Sum)
                .DisplayFormat("Total");

                items.AddFor(m => m.Realisasi)
                .SummaryType(SummaryType.Sum)
                .ValueFormat("#,##0")
                .DisplayFormat("{0}");
            });
        })
        )
</div>
