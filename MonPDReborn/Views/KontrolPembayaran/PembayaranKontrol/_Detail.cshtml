@model MonPDReborn.Models.KontrolPembayaran.PembayaranKontrolVM.Detail

<div class="table-responsive">
    @(
            Html.DevExtreme().DataGrid<MonPDReborn.Models.KontrolPembayaran.PembayaranKontrolVM.DetailPembayaranOP>()
            .ID("detailPembayaranGrid")
            .DataSource(Model.Data)
            .ShowBorders(true)
            .ShowColumnHeaders(true)
            .ShowColumnLines(true)
            .ShowRowLines(true)
            .AllowColumnResizing(true)
            .RowAlternationEnabled(true)
            .ColumnAutoWidth(true)
            .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
            .FilterRow(f => f.Visible(true))
            .HeaderFilter(h => h.Visible(true))
            .Sorting(s => s.Mode(GridSortingMode.Multiple))
            @* .Paging(p => p.PageSize(10))
            .Pager(p => p
            .ShowPageSizeSelector(true)
            .AllowedPageSizes(new[] { 10, 20, 50 })
            .ShowInfo(true)
            ) *@
            .Columns(columns =>
            {
                columns.AddFor(m => m.Reff).Caption("Reff");
                columns.AddFor(m => m.Rekening).Caption("Rekening");
                columns.AddFor(m => m.TanggalBayar).Caption("Tgl Pembayaran").Format("dd-MM-yyyy");
                columns.AddFor(m => m.Status).Caption("Status");
                columns.Add()
                    .Type(GridCommandColumnType.Buttons)
                    .Buttons(b =>
                    {
                        b.Add()
                    .Text("Detail")
                    .Icon("search")
                    @* .OnClick("onDetail") *@;
                    });
            })
            .Summary(s => {
                s.TotalItems(items => {
                    items.AddFor(m => m.Reff)
                        .SummaryType(SummaryType.Sum)
                        .DisplayFormat("Total:");

                    
                   
                });
            })
        )
</div>

