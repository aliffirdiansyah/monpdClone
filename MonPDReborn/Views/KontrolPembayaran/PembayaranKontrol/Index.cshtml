@model MonPDReborn.Models.KontrolPembayaran.PembayaranKontrolVM.Index

@{
    ViewData["Title"] = "Kontrol Pembayaran";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-0">
                        Dashboard Kontrol Pembayaran
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-3 ms-0">

                    <div class="col-lg-3">
                        @(Html.DevExtreme().DateBox()
                                                .ID("tanggalAwal")
                                                .Type(DateBoxType.Date)
                                                .Placeholder("Tanggal Awal")
                                                .StylingMode(EditorStylingMode.Outlined)
                                                .Value(DateTime.Now)
                                                .Max(DateTime.Now)
                                                )
                    </div>

                    <div class="col-lg-3">
                        @(Html.DevExtreme().DateBox()
                                                .ID("tanggalAkhir")
                                                .Type(DateBoxType.Date)
                                                .Placeholder("Tanggal Akhir")
                                                .StylingMode(EditorStylingMode.Outlined)
                                                )
                    </div>

                    <div class="col-lg-3">
                        @(Html.DevExtreme().SelectBox()
                                                .ID("rekeningBank")
                                                .Value(Model.RekeningBankList)
                                                .DataSource(Model.RekeningBankList)
                                                .DisplayExpr("Text")
                                                .ValueExpr("Value")
                                                .Value(Model.RekeningBank.ToString())
                                                .SearchEnabled(true)
                                                .StylingMode(EditorStylingMode.Outlined)
                                                .ElementAttr("class", "form-select mb-3")
                                                )
                    </div>

                    <div class="col-lg-3">
                        <button type="button" id="btnTerapkanFilter" class="btn btn-success w-100">
                            Terapkan Filter
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Pembayaran
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script>
        $('#btnTerapkanFilter').on('click', function() {
            const tglAwalDate = $('#tanggalAwal').dxDateBox('instance').option('value');
            const tglAkhirDate = $('#tanggalAkhir').dxDateBox('instance').option('value');
            const rekening = $("#rekeningBank").dxSelectBox("instance").option("value");

            let tglAwalFormatted = null;
            if (tglAwalDate) {
                const yyyy = tglAwalDate.getFullYear();
                const mm = String(tglAwalDate.getMonth() + 1).padStart(2, '0');
                const dd = String(tglAwalDate.getDate()).padStart(2, '0');
                tglAwalFormatted = `${yyyy}-${mm}-${dd}`;
            }

            let tglAkhirFormatted = null;
            if (tglAkhirDate) {
                const yyyy = tglAkhirDate.getFullYear();
                const mm = String(tglAkhirDate.getMonth() + 1).padStart(2, '0');
                const dd = String(tglAkhirDate.getDate()).padStart(2, '0');
                tglAkhirFormatted = `${yyyy}-${mm}-${dd}`;
            }

            fnShow(tglAwalFormatted, tglAkhirFormatted, rekening);
        });

        function fnShow(tanggalAwal, tanggalAkhir, rekening) {
            $.ajax({
                url: '@Url.Action("Show", "PembayaranKontrol")',
                type: 'GET',
                data: {
                    tanggalAwal: tanggalAwal,
                    tanggalAkhir: tanggalAkhir,
                    rekening: rekening
                },
                beforeSend: function () {
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    $('#loading2-Show').hide();

                    if (result.Status === undefined) {
                        $('#Show').html(result).show();

                        
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: result.Message
                        });
                    }
                },
                error: function (xhr) {
                    $('#loading2-Show').hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: '⚠ Gagal memuat data dari server.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }



    </script>
    <script>
        function onDetail(e) {
            // Ambil data baris yang diklik
            var enumPajak = e.row.enumPajak;

            // Ubah judul modal
            $("#modalTitle").text("Detail Pajak");

            // Kosongkan isi body dulu
            $("#modalBody").html("<div class='text-center p-3'><div class='spinner-border text-primary'></div></div>");

            // Panggil action untuk ambil detail (PartialView)
            $.ajax({
                url: '/PembayaranKontrol/Detail', // ganti dengan Controller/Action detail kamu
                type: 'GET',
                data: { enumPajak: enumPajak },
                success: function (result) {
                    $("#modalBody").html(result);
                },
                error: function () {
                    $("#modalBody").html("<div class='alert alert-danger'>⚠ Gagal memuat detail</div>");
                }
            });

            // Tampilkan modal
            var myModal = new bootstrap.Modal(document.getElementById('staticBackdropLargeScrollable'));
            myModal.show();
        }
    </script>

}