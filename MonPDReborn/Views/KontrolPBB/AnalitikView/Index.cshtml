                },
                success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowKontribusi').hide();
                        $('#ShowKontribusi').show();
                        $('#ShowKontribusi').html(response);
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    $('#loading2-ShowKontribusi').hide();
                    $('#ShowKontribusi').hide();
                    $('#ShowKontribusi').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                }
            });
        }

        function fnShowTunggakan(uptb, kec) {
            console.log("KIRIM DATA:", { uptb, kec });
            $.ajax({
                url: '@(Url.Action("ShowTunggakan"))',
                type: 'GET',
                data: { wilayah: uptb, kec: kec},
                beforeSend: function () {
                    $('#loading2-ShowTunggakan').show();
                    $('#ShowTunggakan').hide();
                },
                success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowTunggakan').hide();
                        $('#ShowTunggakan').show();
                        $('#ShowTunggakan').html(response);
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    $('#loading2-ShowTunggakan').hide();
                    $('#ShowTunggakan').hide();
                    $('#ShowTunggakan').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                }
            });
        }

        </script>
}
