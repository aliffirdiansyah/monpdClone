                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    $('#loading2-ShowSegmentasi').hide();
                    $('#ShowSegmentasi').hide();
                    $('#ShowSegmentasi').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                }
            });
        }

        function fnShowKontribusi(uptb, kec) {
            console.log("KIRIM DATA:", { uptb, kec });
            $.ajax({
                url: '@(Url.Action("ShowKontribusi"))',
                type: 'GET',
                data: { wilayah: uptb, kec: kec},
                beforeSend: function () {
                    $('#loading2-ShowKontribusi').show();
