@model MonPDReborn.Models.KontrolPBB.StrategicViewVM.Index

@{
    ViewData["Title"] = "Dashboard Stategi";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-3">
        <div class="card card-animate h-80 shadow-lg rounded-3" style="border-top: 6px solid #5EA8A4 ;">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-danger me-3"><i class="bx bx-bar-chart-alt-2"></i></div>
                <div>
                    <div class="text-uppercase fw-bold">Target PBB</div>
                    <div class="fs-1 fw-semibold"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card card-animate h-80 shadow-lg rounded-3" style="border-top: 6px solid #5EA8A4 ;">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-primary me-3"><i class="bx bx-calendar-check"></i></div>
                <div>
                    <div class="text-uppercase fw-bold">Realisasi</div>
                    <div class="fs-1 fw-semibold"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card card-animate h-80 shadow-lg rounded-3" style="border-top: 6px solid #5EA8A4 ;">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-success me-3"><i class="bx bx-calendar-check"></i></div>
                <div>
                    <div class="text-uppercase fw-bold">Capaian (%)</div>
                    <div class="fs-1 fw-semibold"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card card-animate h-80 shadow-lg rounded-3" style="border-top: 6px solid #5EA8A4 ;">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-success me-3"><i class="bx bx-calendar-check"></i></div>
                <div>
                    <div class="text-uppercase fw-bold">Potensi Tertagih</div>
                    <div class="fs-1 fw-semibold"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Analisis Komprehensif PBB
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-border-top nav-border-top-primary mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#capaian" role="tab">
                            Capaian Komprehensif
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#op-kategori" role="tab" onclick="fnShowKategori()">
                            Kategori Objek Pajak
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tunggakan" role="tab" onclick="fnShowTunggakan()">
                            Capaian Tunggakan
                        </a>
                    </li>
                </ul>
                <div class="tab-content text-muted">

                    <div class="tab-pane active" id="capaian" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowCapaian" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div id="ShowCapaian"></div>
                    </div>

                    <div class="tab-pane" id="op-kategori" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowKategori" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div id="ShowKategori"></div>
                    </div>

                    <div class="tab-pane" id="tunggakan" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowTunggakan" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div id="ShowTunggakan"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            fnShowCapaian();
        });

        function fnShowCapaian()
        {
            $.ajax({
              url: '@(Url.Action("ShowCapaian"))',
              type: 'GET',
              beforeSend: function () {
                 $('#loading2-ShowCapaian').show();
                 $('#ShowCapaian').hide();
              },
              success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowCapaian').hide();
                        $('#ShowCapaian').show();
                        $('#ShowCapaian').html(response);
                    }
                    else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        })
                    }
              },
              error: function (xhr, status, error) {
                 $('#loading2-ShowCapaian').hide();
                 $('#ShowCapaian').hide();
                 $('#ShowCapaian').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
              }
           });
        }

        function fnShowKategori()
        {
            $.ajax({
              url: '@(Url.Action("ShowKategori"))',
              type: 'GET',
              beforeSend: function () {
                 $('#loading2-ShowKategori').show();
                 $('#ShowKategori').hide();
              },
              success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowKategori').hide();
                        $('#ShowKategori').show();
                        $('#ShowKategori').html(response);
                    }
                    else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        })
                    }
              },
              error: function (xhr, status, error) {
                 $('#loading2-ShowKategori').hide();
                 $('#ShowKategori').hide();
                 $('#ShowKategori').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
              }
           });
        }

        function fnShowTunggakan()
        {
            $.ajax({
              url: '@(Url.Action("ShowTunggakan"))',
              type: 'GET',
              beforeSend: function () {
                 $('#loading2-ShowTunggakan').show();
                 $('#ShowTunggakan').hide();
              },
              success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowTunggakan').hide();
                        $('#ShowTunggakan').show();
                        $('#ShowTunggakan').html(response);
                    }
                    else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        })
                    }
              },
              error: function (xhr, status, error) {
                 $('#loading2-ShowTunggakan').hide();
                 $('#ShowTunggakan').hide();
                 $('#ShowTunggakan').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
              }
           });
        }
    </script>
}
