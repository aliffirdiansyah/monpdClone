@using static MonPDReborn.Models.KontrolPBB.PencarianPBBVM.ViewModels
@model MonPDReborn.Models.KontrolPBB.PencarianPBBVM.Show

<div class="table-responsive">
    

@(Html.DevExtreme().DataGrid<PencarianPBB>()
    .ID("gridPencarianPBB")
    .DataSource(Model.Data)
    .KeyExpr("NOP")
    .ShowBorders(true)
    .ShowColumnHeaders(true)
    .ShowColumnLines(true)
    .ShowRowLines(true)
    .AllowColumnResizing(true)
    .ColumnAutoWidth(true)
        .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
        .FilterRow(f => f.Visible(true))
        .HeaderFilter(h => h.Visible(true))
        .Sorting(s => s.Mode(GridSortingMode.Multiple))
    .Paging(p => p.PageSize(10))
    .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 10, 20, 50 })
        .ShowInfo(true)
    )
    .Export(e => e.Enabled(true).AllowExportSelectedData(false).Formats(new[] { "xlsx", "pdf" }))
    .OnExporting("exportGrid")
    .NoDataText("Objek Pajak Tidak Ditemukan")
    .Columns(columns => {
        columns.AddFor(m => m.NOP).Caption("NOP");
        columns.AddFor(m => m.NamaWP).Caption("Nama WP");
        columns.AddFor(m => m.Alamat).Caption("Alamat WP");
        columns.AddFor(m => m.Wilayah).Caption("Wilayah");
        columns.AddFor(m => m.Kategori).Caption("Kategori");
        columns.Add()
            .Caption("Aksi")
            .Type(GridCommandColumnType.Buttons)
            .Buttons(b =>
            {
                b.Add()
            .Text("Detail")
            .Icon("search")
            .OnClick("onDetailClick");
        });
    })
)
</div>