@model MonPDReborn.Models.Reklame.InputReklameVM.ShowView

@(
        Html.DevExtreme().DataGrid<MonPDReborn.Models.Reklame.InputReklameVM.ViewInputan>()
        .ID("viewInputanGrid")
        .DataSource(Model.Data)
        .ShowBorders(true)
        .ShowColumnHeaders(true)
        .ShowColumnLines(true)
        .ShowRowLines(true)
        .AllowColumnResizing(true)
        .RowAlternationEnabled(true)
        .ColumnAutoWidth(true)
        .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
        .FilterRow(f => f.Visible(true))
        .HeaderFilter(h => h.Visible(true))
        .Sorting(s => s.Mode(GridSortingMode.Multiple))
        .Paging(p => p.PageSize(10))
        .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 10, 20, 50 })
        .ShowInfo(true)
        )
        .SearchPanel(sp => sp
        .Visible(true)
        .Width(240)
        .Placeholder("Cari...")
        )
        .Export(e => e.Enabled(true).AllowExportSelectedData(false).Formats(new[] { "xlsx", "pdf" }))
        .OnExporting("exportGrid")
        .Columns(columns =>
        {
            columns.AddFor(m => m.NamaPetugas).Caption("Nama Petugas");
            columns.Add().Caption("Total").Columns(sub =>
            {
                sub.AddFor(m => m.JmlSurveys).Caption("Surveys").Format("#,##0");
                sub.AddFor(m => m.JmlSilang).Caption("Sk. Silang").Format("#,##0");
                sub.AddFor(m => m.JmlBongkar).Caption("Sk. Bongkar").Format("#,##0");
                sub.AddFor(m => m.JmlBantip).Caption("Bantip").Format("#,##0");
            });
        })
        )
