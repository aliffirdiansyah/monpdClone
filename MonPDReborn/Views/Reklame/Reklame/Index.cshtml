@model MonPDReborn.Models.Reklame.ReklameVM.Index
@using DevExtreme.AspNet.Mvc

@{
    ViewData["Title"] = "Detail Reklame";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Informasi Reklame
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Cari Informasi Reklame
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-5 col-md-12">
                        @(Html.DevExtreme().SelectBoxFor(m => m.SelectedJalan)
                                                .ID("selectJalan")
                                                .DataSource(Model.JalanList)
                                                .ValueExpr("Value")
                                                .DisplayExpr("Text")
                                                .SearchEnabled(true)
                                                .Placeholder("Semua Nama Jalan")
                                                .StylingMode(EditorStylingMode.Outlined)
                                                )
                    </div>

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                                                .ID("tanggalAwal")
                                                .Type(DateBoxType.Date)
                                                .Placeholder("Tanggal Awal") // Menggantikan <label>
                                                .StylingMode(EditorStylingMode.Outlined) // Terapkan styling DevExtreme
                                                .Value(DateTime.Now) // Nilai default: hari ini
                                                )
                    </div>

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                                                .ID("tanggalAkhir")
                                                .Type(DateBoxType.Date)
                                                .Placeholder("Tanggal Akhir") // Menggantikan <label>
                                                .StylingMode(EditorStylingMode.Outlined) // Terapkan styling DevExtreme
                                                )
                    </div>

                    <div class="col-lg-2 col-md-12">
                        <button type="button" id="btnTerapkanFilter" class="btn btn-success w-100">
                            <i class="ri-filter-3-line me-1"></i> Terapkan
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @* Dashboard baru *@
    <div class="col-lg-4 mb-3">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body d-flex align-items-center">
                <!-- Logo Besar -->
                <div class="flex-shrink-0 me-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="ri-bar-chart-line fs-1"></i>
                    </div>
                </div>

                <!-- Teks Kanan -->
                <div class="flex-grow-1">
                    <h4 class="fw-bold text-primary mb-2">Reklame Insidentil</h4>

                    <div class="mb-2">
                        <span class="text-muted">Total:</span>
                        <span class="fw-semibold float-end">XX</span>
                    </div>

                    <div class="mb-2">
                        <span class="text-muted">Aktif:</span>
                        <span class="fw-semibold float-end">XX</span>
                    </div>

                    <div>
                        <span class="text-muted">Expire:</span>
                        <span class="fw-semibold float-end">XX</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-3">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body d-flex align-items-center">
                <!-- Logo Besar -->
                <div class="flex-shrink-0 me-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="ri-bar-chart-line fs-1"></i>
                    </div>
                </div>

                <!-- Teks Kanan -->
                <div class="flex-grow-1">
                    <h4 class="fw-bold text-primary mb-2">Reklame Permanen</h4>

                    <div class="mb-2">
                        <span class="text-muted">Total:</span>
                        <span class="fw-semibold float-end">XX</span>
                    </div>

                    <div class="mb-2">
                        <span class="text-muted">Aktif:</span>
                        <span class="fw-semibold float-end">XX</span>
                    </div>

                    <div>
                        <span class="text-muted">Expire:</span>
                        <span class="fw-semibold float-end">XX</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-3">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body d-flex align-items-center">
                <!-- Logo Besar -->
                <div class="flex-shrink-0 me-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="ri-bar-chart-line fs-1"></i>
                    </div>
                </div>

                <!-- Teks Kanan -->
                <div class="flex-grow-1">
                    <h4 class="fw-bold text-primary mb-2">Reklame Terbatas</h4>

                    <div class="mb-2">
                        <span class="text-muted">Total:</span>
                        <span class="fw-semibold float-end">XX</span>
