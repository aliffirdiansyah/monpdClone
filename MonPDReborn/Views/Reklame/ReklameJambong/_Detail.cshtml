@using static MonPDReborn.Models.Reklame.ReklameJambongVM.ViewModels
@model MonPDReborn.Models.Reklame.ReklameJambongVM.Detail

<div class="table-responsive">
    @(
        Html.DevExtreme().DataGrid<DetailJambong>()
        .ID("detailJambongGrid")
        .DataSource(Model.Data)
        .ShowBorders(true)
        .ShowColumnHeaders(true)
        .ShowColumnLines(true)
        .ShowRowLines(true)
        .AllowColumnResizing(true)
        .RowAlternationEnabled(true)
        .ColumnAutoWidth(true)
        .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
        .FilterRow(f => f.Visible(true))
        .HeaderFilter(h => h.Visible(true))
        .Sorting(s => s.Mode(GridSortingMode.Multiple))
        .Paging(p => p.PageSize(10))
        .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 10, 20, 50 })
        .ShowInfo(true)
        )
        .SearchPanel(sp => sp
        .Visible(true)
        .Width(240)
        .Placeholder("Cari...")
        )
        .Export(e => e.Enabled(true).AllowExportSelectedData(false).Formats(new[] { "xlsx", "pdf" }))
        .OnExporting("exportGrid")
        .Columns(columns =>
        {
            columns.AddFor(m => m.NoFormulir).Caption("Nomor Formulir").Fixed(true);
            columns.AddFor(m => m.NamaSatu).Caption("Nama (Nama Perusahaan)");
            columns.AddFor(m => m.AlamatReklame).Caption("Alamat Reklame");
            columns.AddFor(m => m.IsiReklame).Caption("Isi Reklame");
            columns.AddFor(m => m.NilaiJambong).Caption("Nilai Jambong").Format("#,##0");

        })
        .Summary(s =>
        {
            s.TotalItems(items =>
            {
                items.AddFor(x => x.NoFormulir)
            .DisplayFormat("Total")
            .SummaryType(SummaryType.Sum);
                items.AddFor(x => x.NilaiJambong)
            .ValueFormat("#,##0")
            .DisplayFormat("Rp {0}")
            .SummaryType(SummaryType.Sum);

            });
        })

        )
</div>