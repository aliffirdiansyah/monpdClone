@using static MonPDReborn.Models.DashboardVM
@model MonPDReborn.Models.DashboardVM.JumlahObjekPajakSeries


@{
    var currentYear = DateTime.Now.Year;
    var tahun1 = (currentYear - 4).ToString();
    var tahun2 = (currentYear - 3).ToString();
    var tahun3 = (currentYear - 2).ToString();
    var tahun4 = (currentYear - 1).ToString();
    var tahun5 = currentYear.ToString();
}

@(
            Html.DevExtreme().DataGrid<ViewModel.JumlahObjekPajakSeries>()
            .ID("dg-JmlObjekPajakSeries")
            .ShowBorders(true)
            .ShowColumnHeaders(true)
            .ShowColumnLines(true)
            .ShowRowLines(true)
            .ColumnAutoWidth(true)
            .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
            .FilterRow(f => f.Visible(true))
            .HeaderFilter(h => h.Visible(true))
            .Sorting(s => s.Mode(GridSortingMode.Multiple))
            .AllowColumnResizing(true)
            .DataSource(Model.Data)
            .KeyExpr("ID")
            .Export(e => e.Enabled(true).AllowExportSelectedData(false).Formats(new[] { "xlsx", "pdf" }))
            .OnExporting("exportGrid")
            .Columns(columns =>
            {
                columns.AddFor(x => x.JenisPajak).DataType(GridColumnDataType.String).Caption("JENIS PAJAK").Fixed(true).FixedPosition(HorizontalEdge.Left).CssClass("fw-bold");
                columns.AddFor(x => x.Jumlah1).DataType(GridColumnDataType.Number).Format("#,##0").Caption(tahun1);
                columns.AddFor(x => x.Jumlah2).DataType(GridColumnDataType.Number).Format("#,##0").Caption(tahun2);
                columns.AddFor(x => x.Jumlah3).DataType(GridColumnDataType.Number).Format("#,##0").Caption(tahun3);
                columns.AddFor(x => x.Jumlah4).DataType(GridColumnDataType.Number).Format("#,##0").Caption(tahun4);
                columns.AddFor(x => x.Jumlah5).DataType(GridColumnDataType.Number).Format("#,##0").Caption(tahun5);
            })
            .Summary(s => {
                s.TotalItems(items => {
                    items.AddFor(x => x.Jumlah1)
                        .ValueFormat("#,##0")
                        .DisplayFormat("Total: {0}")
                        .SummaryType(SummaryType.Sum);
                    items.AddFor(x => x.Jumlah2)
                        .ValueFormat("#,##0")
                        .DisplayFormat("{0}")
                        .SummaryType(SummaryType.Sum);
                    items.AddFor(x => x.Jumlah3)
                        .ValueFormat("#,##0")
                        .DisplayFormat("{0}")
                        .SummaryType(SummaryType.Sum);
                    items.AddFor(x => x.Jumlah4)
                        .ValueFormat("#,##0")
                        .DisplayFormat("{0}")
                        .SummaryType(SummaryType.Sum);
                    items.AddFor(x => x.Jumlah5)
                        .ValueFormat("#,##0")
                        .DisplayFormat("{0}")
                        .SummaryType(SummaryType.Sum);
                });
            })
        )