@model MonPDReborn.Models.AktivitasOP.RealisasiPendapatanOPDVM.Index

@{
    ViewData["Title"] = "Realisasi Pendapatan Daerah per OPD";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center justify-content-between">
                <h4 class="card-title text-dark fs-16 mb-0">
                    Realisasi Pendapatan Daerah
                </h4>
            </div>
            <div class="card-body">
                <div class="row g-3 align-items-center mb-3">

                    <div class="col-lg-3 col-md-4">
                        @(Html.DevExtreme().DateBox()
                                                .ID("selectTanggal")
                                                .Type(DateBoxType.Date)
                                                .Value(DateTime.Now)
                                                .DisplayFormat("dd/MM/yyyy")
                                                .Width(350)
                                                .StylingMode(EditorStylingMode.Outlined)
                                                .ElementAttr("class", "form-select-lg")
                                                .Placeholder("Pilih Tanggal"))
                    </div>

                    <div class="col-lg-2 col-md-3">
                        <button type="button" onclick="fnShow()" class="btn btn-success w-100">
                            <i class="ri-search-line me-1"></i> Terapkan
                        </button>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownCetak" data-bs-toggle="dropdown" aria-expanded="false">
                        Cetak
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownCetak">
                        <li><a class="dropdown-item" href="#" onclick="printAsPDF()">📄 Cetak PDF</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportToExcel()">📊 Export Excel</a></li>
                    </ul>
                </div>
                <div id="loading2-Show" style="display:none;">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <div id="Show"></div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function printReport() {
            Swal.fire({
                title: 'Pilih Format Cetak',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'PDF',
                denyButtonText: 'Excel',
                cancelButtonText: 'Batal',
                confirmButtonColor: '#3085d6',
                denyButtonColor: '#28a745',
            }).then((result) => {
                if (result.isConfirmed) {
                    printAsPDF();
                } else if (result.isDenied) {
                    exportToExcel();
                }
            });
        }

        // CETAK SEBAGAI PDF (langsung print area)
        function printAsPDF() {
            var printContents = document.getElementById('Show').innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }

        // EKSPOR KE EXCEL (dengan format tabel)
        function exportToExcel() {
            var content = document.getElementById('Show').outerHTML;
            var blob = new Blob(['\ufeff' + content], {
                type: 'application/vnd.ms-excel;charset=utf-8;'
            });

            var url = URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = 'Laporan_' + new Date().toISOString().slice(0,10) + '.xls';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
    </script>
    <script>
        $(document).ready(function () {
            // Inisialisasi komponen DateBox DevExtreme
            const dateBox = $("#selectTanggal").dxDateBox("instance");

            // Auto-load saat pertama kali halaman dibuka
            fnShow();
        });

        // Fungsi utama untuk memanggil data Show
        function fnShow() {
            const dateBox = $("#selectTanggal").dxDateBox("instance");
            const selectedDate = dateBox.option("value");

            if (!selectedDate) {
                DevExpress.ui.notify("Silakan pilih tanggal terlebih dahulu.", "warning", 2000);
                return;
            }

            // Format ke yyyy-MM-dd agar cocok dengan parameter DateTime di controller
            const formattedDate = selectedDate.toISOString().split('T')[0];

            // Tampilkan loading spinner
            $("#loading2-Show").show();
            $("#Show").hide();

            $.ajax({
                url: '/RealisasiPendapatanOPD/Show', // Ganti dengan route action kamu
                type: 'GET',
                data: { tglCutoff: formattedDate },
                success: function (response) {
                    // Tampilkan hasil partial view ke dalam #Show
                    $("#Show").html(response);
                },
                error: function (xhr, status, error) {
                    console.error("Gagal memuat data:", error);
                    $("#Show").html("<div class='text-danger text-center'>Terjadi kesalahan saat memuat data.</div>");
                },
                complete: function () {
                    // Sembunyikan spinner dan tampilkan hasil
                    $("#loading2-Show").hide();
                    $("#Show").show();
                }
            });
        }
    </script>
}