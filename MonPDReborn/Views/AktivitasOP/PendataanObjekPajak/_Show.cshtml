@using MonPDReborn.Models.AktivitasOP
@model PendataanObjekPajakVM.Show

<div class="table-responsive">
    @(Html.DevExtreme().DataGrid<MonPDReborn.Models.AktivitasOP.PendataanObjekPajakVM.DataPendataan>()
        .ID("gridPendataanShow")
        .DataSource(Model.DataPendataanList)
        .ShowBorders(true)
        .ShowRowLines(true)
        .ColumnAutoWidth(true)
        .ShowColumnLines(true)

        // ✅ ENABLE FILTERING PER KOLOM
        .FilterRow(f => f
            .Visible(true)       // Tampilkan filter row
            .ApplyFilter(GridApplyFilterMode.Auto) // Filter otomatis saat ketik
        )

        .Columns(columns => {
            columns.AddFor(m => m.Tahun)
                   .Caption("Tahun Pelaksanaan")
                   .Alignment(HorizontalAlignment.Center)
                   .Fixed(true);
            columns.AddFor(m => m.JenisPajak)
                   .Caption("Jenis Pajak")
                   .Alignment(HorizontalAlignment.Center);
            columns.AddFor(m => m.JumlahOp)
                   .Caption("Jumlah OP")
                   .Alignment(HorizontalAlignment.Center);
            columns.AddFor(m => m.Potensi)
                   .Caption("Perhitungan Pengedookan")
                   .Alignment(HorizontalAlignment.Center)
                   .Format("currency");
            columns.AddFor(m => m.TotalRealisasi)
                   .Caption("Total Realisasi")
                   .Alignment(HorizontalAlignment.Center)
                   .Format("currency");
            columns.AddFor(m => m.Selisih)
                   .Caption("Selisih")
                   .Alignment(HorizontalAlignment.Center)
                   .Format("currency");

            // 🔽 Kolom untuk tombol Detail
            columns.Add()
                .Caption("Aksi")
                .Alignment(HorizontalAlignment.Center)
                .CellTemplate(@<text>
                    <button class="btn btn-sm btn-primary"
                            onclick="loadDetail('<%- data.JenisPajak %>', <%- data.Tahun %>)">
                        Detail
                    </button>
                </text>);

        })
    )
</div>

