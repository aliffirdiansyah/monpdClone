@using MonPDReborn.Models.AktivitasOP
@model PendataanObjekPajakVM.Index

@{
    ViewData["Title"] = "Pendataan Objek";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Pengedokan Pajak
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card border border-danger border-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="fs-14 text-muted mb-3">Total Pengedokan Pajak Tahun Ini</h4>
                                        <h4 class="fs-16 fw-bold mb-0">@Model.TotalOpDiperiksa</h4>
                                    </div>
                                    <i class="ri-search-eye-line fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card border border-danger border-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="fs-14 text-muted mb-3">Rata-Rata Realisasi Tahun Ini</h4>
                                        <h4 class="fs-16 fw-bold mb-0">@Model.RataRataRealisasi</h4>
                                    </div>
                                    <i class="ri-bar-chart-box-line fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card border border-danger border-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="fs-14 text-muted mb-3">Total Realisasi Tahun Ini</h4>
                                        <h4 class="fs-16 fw-bold mb-0">@Model.TotalRealisasi</h4>
                                    </div>
                                    <i class=" ri-money-dollar-box-line  fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header d-flex align-items-center" style="background-color: #d35400;">
                        <div class="flex-grow-1">
                            <h4 class="card-title fs-16 text-white mb-0">
                                Pengedokan Pajak
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <button class="btn btn-sm btn-outline-light" title="Segarkan data realisasi pajak" onclick="fnSeriesPajakDaerah()">
                                <i class="mdi mdi-refresh align-middle"></i> Refresh
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="Show"></div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header d-flex align-items-center" style="background-color: #d35400;">
                        <div class="flex-grow-1">
                            <h4 class="card-title text-white fs-16 mb-0">
                                Detail Pengedokan Pajak
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <button class="btn btn-sm btn-outline-light" title="Segarkan data realisasi pajak" onclick="fnSeriesPajakDaerah()">
                                <i class="mdi mdi-refresh align-middle"></i> Refresh
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="Detail"></div>
                    </div>
                </div>
            </div>
            
        </div>
        
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadShow(); // Load data rekap
        });

        // Muat partial _Show.cshtml
        function loadShow() {
            $.ajax({
                url: '@Url.Action("Show", "PendataanObjekPajak")',
                type: 'GET',
                success: function (result) {
                    $('#Show').html(result);
                },
                error: function () {
                    $('#Show').html('<div class="alert alert-danger">Gagal memuat data rekap.</div>');
                }
            });
        }

        // Muat partial _Detail.cshtml berdasarkan jenis pajak dan tahun
        function loadDetail(jenisPajak, tahun) {
            $('#Detail').html('<div class="text-center p-3">Memuat data detail...</div>');

            $.ajax({
                url: '@Url.Action("Detail", "PendataanObjekPajak")',
                type: 'GET',
                data: {
                    jenisPajak: jenisPajak,
                    tahun: tahun
                },
                success: function (result) {
                    $('#Detail').html(result);
                },
                error: function () {
                    $('#Detail').html('<div class="alert alert-danger">Gagal memuat data detail.</div>');
                }
            });
        }

        // Contoh: bisa digunakan jika ingin memfilter via dropdown
        function onJenisPajakChanged(jenis, tahun) {
            loadDetail(jenis, tahun);
        }
    </script>
}
