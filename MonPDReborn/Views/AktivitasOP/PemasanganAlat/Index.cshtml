@using MonPDReborn.Models.AktivitasOP
@model PemasanganAlatVM.Index

@{
    ViewData["Title"] = "Pemasangan Alat";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Pemasangan Alat
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Jumlah Terpasang dan Belum Terpasang Tahun
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="Show"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Detail Pemasangan Alat Pada Objek Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="Detail"></div>
                <div class="modal fade" id="subDetailModal" tabindex="-1" role="dialog" aria-labelledby="subDetailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="subDetailModalLabel">Detail OP per Kategori</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="subDetailModalContainer"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadShow("");      // Panggil data rekap jumlah
            loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function loadShow() {
            $.ajax({
                url: '@Url.Action("Show", "PemasanganAlat")',
                type: 'GET',
                success: function (result) {
                    $('#Show').html(result);
                },
                error: function () {
                    $('#Show').html('<div class="alert alert-danger">Gagal memuat data Show.</div>');
                }
            });
        }

        function loadDetail(jenisPajak) {
            $.ajax({
                url: '@Url.Action("Detail", "PemasanganAlat")',
                type: 'GET',
                data: { jenisPajak: jenisPajak },
                success: function (result) {
                    $('#Detail').html(result);
                },
                error: function () {
                    $('#Detail').html('<div class="alert alert-danger">Gagal memuat data Detail.</div>');
                }
            });
        }

        function onDetailClick(id, jenis) {
            console.log("Detail clicked:", id, jenis);
            // Tambahkan aksi lain seperti buka modal, load data, dll.
        }


        function subDetailTemplate(container, options) {
            var jenisPajak = options.data?.JenisPajak;
            console.log("subDetailTemplate - JenisPajak:", jenisPajak);

            var innerContainer = $("<div>").addClass("p-2").text("Memuat data...");
            container.append(innerContainer);

            if (!jenisPajak) {
                innerContainer.html('<div class="text-danger">Jenis Pajak tidak ditemukan.</div>');
                return;
            }

            $.ajax({
                url: '@Url.Action("SubDetail", "PemasanganAlat")',
                type: 'GET',
                data: { jenisPajak: jenisPajak },
                success: function (result) {
                    innerContainer.html(result);
                },
                error: function () {
                    innerContainer.html('<div class="text-danger">Gagal memuat data sub-detail.</div>');
                }
            });
        }

                function showSubDetailModal(e) {
            const kategori = e.row.data.Kategori;

            $.ajax({
                url: '/PemasanganAlat/SubDetailModal',
                type: 'GET',
                data: { kategori: kategori },
                success: function (result) {
                    $("#subDetailModalContainer").html(result);

                    const $modal = $("#subDetailModal");
                    $modal.modal("show");
                },
                error: function () {
                    alert("Gagal memuat data detail.");
                }
            });
        }

    </script>
}

