@model List<MonPDReborn.Models.AktivitasOP.PemasanganAlatVM.SubDetailModal>

<!-- Grid langsung dari Razor, ID tetap unik -->
<h4 class="card-title fs-16 mb-3">
    Kategori Pajak: @Model.FirstOrDefault()?.Kategori
</h4>
<div class="table-responsive">
    @(Html.DevExtreme().DataGrid<MonPDReborn.Models.AktivitasOP.PemasanganAlatVM.SubDetailModal>()
        .ID("SubDetailGrid")
        .DataSource(Model)
        .ShowColumnLines(true)
        .ShowRowLines(true)
        .ShowBorders(true)
        .ShowColumnHeaders(true)
        .RowAlternationEnabled(true)
        .Paging(p => p.PageSize(10))
        .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 5, 10, 20 })
        .ShowInfo(true)
        )
        .Columns(columns =>
        {
            columns.AddFor(m => m.NOP).Caption("NOP");
            columns.AddFor(m => m.NamaOP).Caption("Nama OP");
            columns.AddFor(m => m.Alamat).Caption("Alamat");
            columns.AddFor(m => m.TanggalPemasangan).Caption("Tanggal Pemasangan");
            columns.AddFor(m => m.JenisPajak).Caption("Jenis Pajak");
            columns.AddFor(m => m.Kategori).Caption("Kategori");
        })
        )
</div>

