@model MonPDReborn.Models.AktivitasOP.PemeriksaanPajakUploadVM.Index

@{
    ViewData["Title"] = "Pemeriksaan Pajak Upload";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Upload Pemeriksaan Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <form id="UploadExcel" asp-action="UploadExcel" asp-controller="PemeriksaanPajakUpload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Tahun">Tahun</label>
                        <select asp-for="Tahun" asp-items="Model.TahunList" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <label for="FileExcel">Upload Excel</label>
                        <input type="file" class="form-control" asp-for="FileExcel" name="file" />
                    </div>

                    <button type="button" class="btn btn-primary mt-2" onclick="UploadExcel()">Upload</button>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        function UploadExcel() {
            var formData = new FormData($('#UploadExcel')[0]);

            $.ajax({
                url: '@Url.Action("UploadExcel", "PemeriksaanPajakUpload")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function () {
                    $("#loader").show();
                },
                complete: function () {
                    $("#loader").hide();
                },
                success: function (response) {
                    if (response.Status === 1) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Berhasil',
                            text: response.Message
                        });

                        $('#UploadExcel')[0].reset();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Gagal',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Terjadi kesalahan saat mengirim data.'
                    });
                }
            });
        }
    </script>
}