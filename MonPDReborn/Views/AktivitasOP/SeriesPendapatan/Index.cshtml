@model MonPDReborn.Models.AktivitasOP.SeriesPendapatanVM.Index

@{
    ViewData["Title"] = "Series Pendapatan OPD";
    var tahunSekarang = DateTime.Now.Year;
    var tahunList = Enumerable.Range(tahunSekarang - 6, 7).Reverse().ToList();
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center justify-content-between">
                <h4 class="card-title text-dark fs-16 mb-0">
                    Series Pendapatan Daerah
                </h4>
                @(Html.DevExtreme().SelectBox()
                                .ID("selectTahun")
                                .DataSource(tahunList)
                                .Value(tahunSekarang)
                                .Width(120)
                                .StylingMode(EditorStylingMode.Outlined)
                                .ElementAttr("class", "form-select-sm"))
            </div>
            <div class="card-body">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownCetak" data-bs-toggle="dropdown" aria-expanded="false">
                        Cetak
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownCetak">
                        <li><a class="dropdown-item" href="#" onclick="printAsPDF()">📄 Cetak PDF</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportToExcel()">📊 Export Excel</a></li>
                    </ul>
                </div>
                @* <div class="flex-shrink-0">
                    <button class="btn btn-primary" onclick="printReport()">Cetak</button>
                </div> *@
                <div id="loading2-Show" style="display:none;">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <div id="Show"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // function printReport() {
        //     var printContents = document.getElementById('Show').innerHTML;
        //     var originalContents = document.body.innerHTML;

        //     document.body.innerHTML = printContents;
        //     window.print();
        //     document.body.innerHTML = originalContents;
        // }

        $(document).ready(function () {
            var tahunSelect = $("#selectTahun").dxSelectBox("instance");

            var defaultYear = 2025;
            var selectedYear = tahunSelect.option("value") || defaultYear;
            tahunSelect.option("value", selectedYear);

            loadData(selectedYear);

            tahunSelect.on("valueChanged", function (e) {
                var tahun = e.value;
                loadData(tahun);
            });

            function loadData(tahun) {
                $.ajax({
                    url: '/SeriesPendapatan/Show',
                    type: 'GET',
                    data: { year: tahun },
                    beforeSend: function () {
                         $('#loading2-Show').show();
                         $('#Show').hide();
                      },
                      success: function (response) {
                            if (response.Status === undefined) {
                                $('#loading2-Show').hide();
                                $('#Show').show();
                                $('#Show').html(response);
                            }
                            else {
                                swal.fire({
                                    icon: 'warning',
                                    title: '<b style="color:orange">Peringatan</b>',
                                    text: response.Message
                                })
                            }
                      },
                      error: function (xhr, status, error) {
                         $('#loading2-Show').hide();
                         $('#Show').hide();
                         $('#Show').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                      }
                });
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function printReport() {
            Swal.fire({
                title: 'Pilih Format Cetak',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'PDF',
                denyButtonText: 'Excel',
                cancelButtonText: 'Batal',
                confirmButtonColor: '#3085d6',
                denyButtonColor: '#28a745',
            }).then((result) => {
                if (result.isConfirmed) {
                    printAsPDF();
                } else if (result.isDenied) {
                    exportToExcel();
                }
            });
        }

        // CETAK SEBAGAI PDF (langsung print area)
        function printAsPDF() {
            var printContents = document.getElementById('Show').innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }

        // EKSPOR KE EXCEL (dengan format tabel)
        function exportToExcel() {
            var content = document.getElementById('Show').outerHTML;
            var blob = new Blob(['\ufeff' + content], {
                type: 'application/vnd.ms-excel;charset=utf-8;'
            });

            var url = URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = 'Laporan_' + new Date().toISOString().slice(0,10) + '.xls';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
    </script>
