@using MonPDReborn.Models.AktivitasOP
@model PemeriksaanPajakVM.Index

@{
    ViewData["Title"] = "Pemeriksaan Pajak";
    Layout = "_Layout";
}
<style>
    .neon-left-glow {
        border-left: 6px solid #39FF14;
        box-shadow: -5px 0 5px #39FF14, -10px 0 10px #39FF14, -20px 0 20px #39FF14, -30px 0 30px #0f0, -40px 0 40px #0f0;
        color: #39FF14;
    }


</style>
<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Pemeriksaan Pajak
                    </h4>
                </div>
            </div>
        </div>
    </div>

    @* dashboard baru *@
    <div class="col-lg-4">
        <div class="card card-animate h-80 shadow-lg rounded-3 neon-left-glow" @* style="border-left: 6px solid #66BB6A;" *@>
            <div class="card-body">
                <div class="d-flex justify-content-start align-items-center mb-2">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-search-eye-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h5 class="text-muted">Total OP Diperiksa</h5>
                        <h4 class="mb-0 fw-bold">@Model.TotalOpDiperiksa</h4>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card card-animate h-80 shadow-lg rounded-3 neon-left-glow" @* style="border-left: 6px solid #66BB6A;" *@>
            <div class="card-body">
                <div class="d-flex justify-content-start align-items-center mb-2">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-bar-chart-box-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h5 class="text-muted">Rata-Rata Kurang Bayar</h5>
                        <h4 class="mb-0 fw-bold">@Model.RataRataKurangBayar.ToString("C")</h4>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card card-animate h-80 shadow-lg rounded-3 neon-left-glow" @* style="border-left: 6px solid #66BB6A;" *@>
            <div class="card-body">
                <div class="d-flex justify-content-start align-items-center mb-2">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-money-dollar-box-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h5 class="text-muted">Total Kurang Bayar</h5>
                        <h4 class="mb-0 fw-bold">@Model.TotalKurangBayar.ToString("C")</h4>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center" >
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-0">
                        Pemeriksaan Pajak
                    </h4>
                </div>
                <div class="flex-shrink-0 text-end">
                    <button class="btn btn-sm btn-outline-dark" title="Segarkan data realisasi pajak" onclick="fnSeriesPajakDaerah()">
                        <i class="mdi mdi-refresh align-middle"></i> Refresh
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center" >
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-0">
                        Detail Pemeriksaan Objek Pajak
                    </h4>
                </div>
                <div class="flex-shrink-0 text-end">
                    <button class="btn btn-sm btn-outline-dark" title="Segarkan data realisasi pajak" onclick="fnSeriesPajakDaerah()">
                        <i class="mdi mdi-refresh align-middle"></i> Refresh
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Detail" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Detail"></div>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    <script>
        // Saat halaman selesai dimuat
        $(document).ready(function () {
            // HANYA memuat tabel rekap utama di awal
            loadShow();
            // Kosongkan tabel detail di awal
            $('#Detail').html('<p class="text-center text-muted">Klik ikon 🔍 pada tabel di atas untuk melihat detail.</p>');
        });

        // Fungsi untuk memuat data rekap pemeriksaan (tidak berubah)
        function loadShow() {
            $.ajax({
                url: '@Url.Action("Show", "PemeriksaanPajak")',
                type: 'GET',
                beforeSend: function () { $('#loading2-Show').show(); $('#Show').hide(); },
                success: function (result) { $('#loading2-Show').hide(); $('#Show').html(result).show(); },
                error: function () { $('#loading2-Show').hide(); $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data rekap.</div>').show(); }
            });
        }

        // FUNGSI INI DIPANGGIL DARI TOMBOL SEARCH DI TABEL SHOW
        function onDetailPemeriksaanClick(jenisPajak, tahun) {
            // Panggil fungsi loadDetail dengan parameter yang sesuai
            loadDetail(jenisPajak, tahun);
        }

        // FUNGSI INI SEKARANG DIMODIFIKASI untuk menerima parameter dan memuat data detail
        function loadDetail(jenisPajak, tahun) {
            $.ajax({
                url: '@Url.Action("Detail", "PemeriksaanPajak")',
                type: 'GET',
                // Kirim data jenisPajak dan tahun ke controller
                data: {
                    jenisPajak: jenisPajak,
                    tahun: tahun
                },
                beforeSend: function () {
                    $('#loading2-Detail').show();
                    $('#Detail').hide();
                },
                success: function (result) {
                    $('#loading2-Detail').hide();
                    $('#Detail').html(result).show();
                },
                error: function () {
                    $('#loading2-Detail').hide();
                    $('#Detail').html('<div class="alert alert-danger">❌ Gagal memuat data detail.</div>').show();
                }
            });
        }
    </script>
}


