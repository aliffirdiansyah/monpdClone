                function onDetailPemeriksaanClick(jenisPajak, tahun) {
            if (!jenisPajak || !tahun) {
                alert("Jenis pajak atau tahun tidak valid.");
                return;
            }

            loadDetail(jenisPajak, tahun);
        }
                function loadDetail(jenisPajak, tahun) {
            const namaPajak = EPajak[jenisPajak] || 'Jenis Pajak Tidak Diketahui';

            $.ajax({
                url: '@Url.Action("Detail", "PemeriksaanPajak")',
                type: 'GET',
                data: {
                    jenisPajak: jenisPajak,
                    tahun: tahun
                },
                beforeSend: function () {
                    $('#loading2-Detail').show();
                    $('#Detail').hide();
                    $('#judulDetail').text(`📋 Detail Pemeriksaan: ${namaPajak} (${tahun})`);
                },
                success: function (result) {
                    $('#loading2-Detail').hide();
                    $('#Detail').html(result).show();
                },
                error: function () {
                    $('#loading2-Detail').hide();
                    $('#Detail').html('<div class="alert alert-danger">❌ Gagal memuat data detail.</div>').show();
                }
            });
        }

