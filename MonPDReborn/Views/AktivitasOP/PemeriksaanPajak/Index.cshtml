@using MonPDReborn.Models.AktivitasOP
@model PemeriksaanPajakVM.Index

@{
    ViewData["Title"] = "Pemeriksaan Pajak";
    Layout = "_Layout";
}

<div class="row">
    <div class="card">
        <div class="card-header d-flex">
            <div class="flex-grow-1">
                <h4 class="card-title fs-16 mb-0">
                    Dashboard Pemeriksaan Pajak
                </h4>
            </div>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card border border-danger border-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="fs-14 text-muted mb-3">Total OP Yang DIperiksa Tahun Ini</h4>
                                    <h4 class="fs-16 fw-bold mb-0">@Model.TotalOpDiperiksa</h4>
                                </div>
                                <i class="ri-search-eye-line fs-2 text-danger"></i> <!-- Ikon di kanan -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card border border-danger border-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="fs-14 text-muted mb-3">Rata-Rata Kurang Bayar Tahun Ini</h4>
                                    <h4 class="fs-16 fw-bold mb-0">@Model.RataRataKurangBayar</h4>
                                </div>
                                <i class="ri-bar-chart-box-line fs-2 text-danger"></i> <!-- Ikon di kanan -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card border border-danger border-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="fs-14 text-muted mb-3">Total Kurang Bayar Tahun Ini</h4>
                                    <h4 class="fs-16 fw-bold mb-0">@Model.TotalKurangBayar</h4>
                                </div>
                                <i class=" ri-money-dollar-box-line  fs-2 text-danger"></i> <!-- Ikon di kanan -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center" style="background-color: #d35400;">
                        <div class="flex-grow-1">
                            <h4 class="card-title text-white fs-16 mb-0">
                                Pemeriksaan Pajak
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <button class="btn btn-sm btn-outline-light" title="Segarkan data realisasi pajak" onclick="fnSeriesPajakDaerah()">
                                <i class="mdi mdi-refresh align-middle"></i> Refresh
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="Show"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center" style="background-color: #d35400;">
                        <div class="flex-grow-1">
                            <h4 class="card-title text-white fs-16 mb-0">
                                Detail Pemeriksaan Objek Pajak
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <button class="btn btn-sm btn-outline-light" title="Segarkan data realisasi pajak" onclick="fnSeriesPajakDaerah()">
                                <i class="mdi mdi-refresh align-middle"></i> Refresh
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-4">
                            @{
                                Html.DevExtreme().SelectBox()
                                .ID("jenisPajakSelect")
                                .DataSource(new[] {
                            new { value = "hotel", text = "Hotel" },
                            new { value = "restoran", text = "Restoran" },
                            new { value = "reklame", text = "Reklame" },
                            new { value = "hiburan", text = "Hiburan" },
                            new { value = "parkir", text = "Parkir" },
                            new { value = "ppj", text = "PPJ" },
                            new { value = "pbb", text = "PBB" },
                            new { value = "bphtb", text = "BPHTB" },
                            new { value = "airtanah", text = "Air Tanah" },
                            new { value = "opsenpkb", text = "OPSEN PKB" },
                            new { value = "opsenbbnkb", text = "OPSEN BBNKB" }
            })
                                .ValueExpr("value")
                                .DisplayExpr("text")
                                .Placeholder("Pilih Jenis Pajak")
                                .OnValueChanged("onJenisPajakChanged")
                                .Width("100%")
                                .Render();
                            }
                        </div>
                        <br />
                        <div id="Detail"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Saat halaman selesai dimuat
        $(document).ready(function () {
            loadShow("");       // Load rekap awal
            loadDetail("");   // Load semua detail awal
        });

        // Fungsi untuk memuat data rekap pemeriksaan
        function loadShow() {
            $.ajax({
                url: '@Url.Action("Show", "PemeriksaanPajak")',
                type: 'GET',
                success: function (result) {
                    $('#Show').html(result);
                },
                error: function () {
                    $('#Show').html('<div class="alert alert-danger">Gagal memuat data rekap.</div>');
                }
            });
        }

        // Fungsi untuk memuat data detail pemeriksaan
        function loadDetail(keyword) {
            $.ajax({
                url: '@Url.Action("Detail", "PemeriksaanPajak")',
                type: 'GET',
                data: { jenisPajak: keyword },
                success: function (result) {
                    $('#Detail').html(result);
                },
                error: function () {
                    $('#Detail').html('<div class="alert alert-danger">Gagal memuat data detail.</div>');
                }
            });
        }

        // Event ketika select box berubah
       /* function onJenisPajakChanged(e) {
            const keyword = e.value;
            loadDetail(keyword); // Kirim value terpilih ke server untuk memfilter
        }*/
    </script>
}


