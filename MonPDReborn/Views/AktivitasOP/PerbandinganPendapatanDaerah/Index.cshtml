@model MonPDReborn.Models.AktivitasOP.PerbandinganPendapatanDaerahVM.Index

@{
    ViewData["Title"] = "Perbandingan Pendapatan Daerah per OPD";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center justify-content-between">
                <h4 class="card-title text-dark fs-16 mb-0">
                    Realisasi Pendapatan Daerah
                </h4>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-border-top nav-border-top-primary mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#op-rekap" role="tab">
                            Pendapatan Perbulan
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#op-series" role="tab" onclick="fnAkumulasi()">
                            Akumulasi Pendapatan
                        </a>
                    </li>
                </ul>
                <div class="tab-content text-muted">
                    <div class="tab-pane active" id="op-rekap" role="tabpanel">
                        <div class="row g-3 align-items-center mb-3">

                            <div class="col-lg-3 col-md-4">
                                @(Html.DevExtreme().SelectBox()
                                                                .ID("SelectedBulan")
                                                                .Value(Model.SelectedBulan)
                                                                .DataSource(Model.BulanList)
                                                                .DisplayExpr("Text")
                                                                .ValueExpr("Value")
                                                                .SearchEnabled(true)
                                                                .Value(Model.SelectedBulan.ToString())
                                                                .Placeholder("Pilih Bulan")
                                                                .StylingMode(EditorStylingMode.Outlined)
                                                                .ElementAttr("class", "form-select mb-3")
                                                                )
                            </div>

                            <div class="col-lg-2 col-md-3">
                                <button type="button" onclick="fnShow()" class="btn btn-success w-100">
                                    <i class="ri-search-line me-1"></i> Terapkan
                                </button>
                            </div>

                        </div>

                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownCetak" data-bs-toggle="dropdown" aria-expanded="false">
                                Cetak
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownCetak">
                                <li><a class="dropdown-item" href="#" onclick="printAsPDF()">📄 Cetak PDF</a></li>
                                <li><a class="dropdown-item" href="#" onclick="exportToExcel()">📊 Export Excel</a></li>
                            </ul>
                        </div>
                        <div id="loading2-Show" style="display:none;">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </div>
                        <div id="Show"></div>

                    </div>

                    <div class="tab-pane" id="op-series" role="tabpanel">
                        <div class="row g-3 align-items-center mb-3">

                            <div class="col-lg-3 col-md-4">
                                @(Html.DevExtreme().SelectBox()
                                        .ID("SelectedBulanAkumulasi")
                                        .Value(Model.SelectedBulan)
                                        .DataSource(Model.BulanList)
                                        .DisplayExpr("Text")
                                        .ValueExpr("Value")
                                        .SearchEnabled(true)
                                        .Value(Model.SelectedBulan.ToString())
                                        .Placeholder("Pilih Bulan")
                                        .StylingMode(EditorStylingMode.Outlined)
                                        .ElementAttr("class", "form-select mb-3")
                                        )
                            </div>

                            <div class="col-lg-2 col-md-3">
                                <button type="button" onclick="fnShow()" class="btn btn-success w-100">
                                    <i class="ri-search-line me-1"></i> Terapkan
                                </button>
                            </div>

                        </div>

                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownCetak" data-bs-toggle="dropdown" aria-expanded="false">
                                Cetak
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownCetak">
                                <li><a class="dropdown-item" href="#" onclick="printAsPDF()">📄 Cetak PDF</a></li>
                                <li><a class="dropdown-item" href="#" onclick="exportToExcel()">📊 Export Excel</a></li>
                            </ul>
                        </div>
                        <div id="loading2-Akumulasi" style="display:none;">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </div>
                        <div id="Akumulasi"></div>
                    </div>
                </div>
                

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function printReport() {
            Swal.fire({
                title: 'Pilih Format Cetak',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'PDF',
                denyButtonText: 'Excel',
                cancelButtonText: 'Batal',
                confirmButtonColor: '#3085d6',
                denyButtonColor: '#28a745',
            }).then((result) => {
                if (result.isConfirmed) {
                    printAsPDF();
                } else if (result.isDenied) {
                    exportToExcel();
                }
            });
        }

        // CETAK SEBAGAI PDF (langsung print area)
        function printAsPDF() {
            var printContents = document.getElementById('Show').innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }

        // EKSPOR KE EXCEL (dengan format tabel)
        function exportToExcel() {
            var content = document.getElementById('Show').outerHTML;
            var blob = new Blob(['\ufeff' + content], {
                type: 'application/vnd.ms-excel;charset=utf-8;'
            });

            var url = URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = 'Laporan_' + new Date().toISOString().slice(0,10) + '.xls';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
    </script>
    <script>
        $(document).ready(function () {
            // Auto-load data saat halaman pertama kali dibuka
            fnShow();
            fnAkumulasi();
        });

        function fnShow() {
            const bulanBox = $("#SelectedBulan").dxSelectBox("instance");
            const selectedBulan = bulanBox.option("value");

            if (!selectedBulan) {
                DevExpress.ui.notify("Silakan pilih bulan terlebih dahulu.", "warning", 2000);
                return;
            }

            // Tampilkan loading spinner
            $("#loading2-Show").show();
            $("#Show").hide();

            $.ajax({
                url: '/PerbandinganPendapatanDaerah/Show', // Ganti sesuai action controller kamu
                type: 'GET',
                data: { month: selectedBulan },
                success: function (response) {
                    // Render hasil partial view
                    $("#Show").html(response);
                },
                error: function (xhr, status, error) {
                    console.error("Gagal memuat data:", error);
                    $("#Show").html("<div class='text-danger text-center'>Terjadi kesalahan saat memuat data.</div>");
                },
                complete: function () {
                    // Sembunyikan spinner dan tampilkan hasil
                    $("#loading2-Show").hide();
                    $("#Show").show();
                }
            });
        }

        function fnAkumulasi() {
            const bulanBox = $("#SelectedBulan").dxSelectBox("instance");
            const selectedBulan = bulanBox.option("value");

            if (!selectedBulan) {
                DevExpress.ui.notify("Silakan pilih bulan terlebih dahulu.", "warning", 2000);
                return;
            }

            $("#loading2-Akumulasi").show();
            $("#Akumulasi").hide();

            $.ajax({
                url: '/PerbandinganPendapatanDaerah/Akumulasi',
                type: 'GET',
                data: { month: selectedBulan },
                success: function (response) {
                    // Render hasil partial view
                    $("#Akumulasi").html(response);
                },
                error: function (xhr, status, error) {
                    console.error("Gagal memuat data:", error);
                    $("#Akumulasi").html("<div class='text-danger text-center'>Terjadi kesalahan saat memuat data.</div>");
                },
                complete: function () {
                    // Sembunyikan spinner dan tampilkan hasil
                    $("#loading2-Akumulasi").hide();
                    $("#Akumulasi").show();
                }
            });
        }

    </script>
}