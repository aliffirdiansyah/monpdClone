@model MonPDReborn.Models.AktivitasOP.ReklameSummaryVM.DetailPermanenBP

@{
    ViewData["Title"] = "Reklame Permanen Belum Perpanjang";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Permanen
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-2">
                        Kategori : Belum Perpanjangan
                    </h4>
                    <h4 class="card-title fs-16 mb-1">
                        Jenis : Permanen
                    </h4>
                </div>
                <div class="table-responsive">
                    @(
                       Html.DevExtreme().DataGrid<MonPDReborn.Models.AktivitasOP.ReklameSummaryVM.PermanenBP>()
                       .ID("permanenReklameBPGrid")
                       .DataSource(Model.Data)
                       .ShowBorders(true)
                       .ShowColumnHeaders(true)
                       .ShowColumnLines(true)
                       .ShowRowLines(true)
                       .AllowColumnResizing(true)
                       .RowAlternationEnabled(true)
                       .ColumnAutoWidth(true)
                       .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
                       .FilterRow(f => f.Visible(true))
                       .HeaderFilter(h => h.Visible(true))
                       .Sorting(s => s.Mode(GridSortingMode.Multiple))
                       .Paging(p => p.PageSize(10))
                       .Pager(p => p
                       .ShowPageSizeSelector(true)
                       .AllowedPageSizes(new[] { 10, 20, 50 })
                       .ShowInfo(true)
                       )
                       .SearchPanel(sp => sp
                       .Visible(true)
                       .Width(240)
                       .Placeholder("Cari...")
                       )
                       .Columns(columns =>
                       {
                           columns.AddFor(m => m.NoFormulir).Caption("Nomor Formulir");
                           columns.AddFor(m => m.Nama).Caption("Nama (Nama Perusahaan)");
                           columns.AddFor(m => m.AlamatOP).Caption("Alamat OP");
                           columns.AddFor(m => m.IsiReklame).Caption("Isi Reklame");
                           columns.AddFor(m => m.Status).Caption("AKR Berlaku (Status)");
                           columns.AddFor(m => m.TahunPajak).Caption("Tahun Pajak");
                           columns.AddFor(m => m.JumlahNilai).Caption("Jumlah Nilai").Format("#,##0");
                           columns.AddFor(m => m.JmlUpaya).Caption("Jumlah Upaya");


                       })

                       )
                </div>
            </div>
        </div>
    </div>

</div>
