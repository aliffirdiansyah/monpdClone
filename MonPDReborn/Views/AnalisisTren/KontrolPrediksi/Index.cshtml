@model MonPDReborn.Models.AnalisisTren.KontrolPrediksiVM.Index

@{
    ViewData["Title"] = "Kontrol Prediksi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Pajak
                    </h4>
                    <p class="text-dark mb-0">Monitoring dan Analisis Pendapatan Pajak Daerah</p>
                </div>
                <div class="text-dark mb-1">Periode: <strong>Januari - Desember 2023</strong></div>
            </div>
            <div class="card-body">
                @using DevExtreme.AspNet.Mvc

                <div class="row g-3 align-items-center">

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                                                .ID("tanggalAwal")
                                                .Type(DateBoxType.Date)
                                                .Placeholder("Tanggal Awal") // Menggantikan <label>
                                                .StylingMode(EditorStylingMode.Outlined) // Terapkan styling DevExtreme
                                                .Value(DateTime.Now) // Nilai default: hari ini
                                                )
                    </div>

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                                                .ID("tanggalAkhir")
                                                .Type(DateBoxType.Date)
                                                .Placeholder("Tanggal Akhir") // Menggantikan <label>
                                                .StylingMode(EditorStylingMode.Outlined) // Terapkan styling DevExtreme
                                                )
                    </div>

                    <div class="col-lg col-md-6">
                        <button type="button" id="btnTerapkanFilter" class="btn btn-success w-100">
                            Terapkan Filter
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="  ri-focus-3-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.TotalTarget.ToString("C")</h3>
                        <small class="text-dark">Total Target</small>

                        
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-money-dollar-box-line text-warning fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.TotalRealisasi.ToString("C")</h3>
                        <small class="text-dark">Total Realisasi</small>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-bar-chart-2-line text-success fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.RataRataPencapaian.ToString("N2")%</h3>
                        <small class="text-dark">Rata-Rata Pencapaian</small>
                        
                    </div>
                </div>


            </div>
        </div>
    </div>


    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Pajak Daerah
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Saat halaman pertama kali dimuat, langsung panggil klik tombol filter
            // untuk mengambil nilai default dan memuat data awal.
        });

        // Event handler untuk klik tombol filter
        $('#btnTerapkanFilter').on('click', function() {
            // Ambil objek Date dari DevExtreme
            const tglAwalDate = $('#tanggalAwal').dxDateBox('instance').option('value');
            const tglAkhirDate = $('#tanggalAkhir').dxDateBox('instance').option('value');

            // Format tanggal ke "YYYY-MM-DD" HANYA JIKA ada nilainya
            let tglAwalFormatted = null;
            if (tglAwalDate) {
                const yyyy = tglAwalDate.getFullYear();
                const mm = String(tglAwalDate.getMonth() + 1).padStart(2, '0'); // Bulan dimulai dari 0
                const dd = String(tglAwalDate.getDate()).padStart(2, '0');
                tglAwalFormatted = `${yyyy}-${mm}-${dd}`;
            }

            let tglAkhirFormatted = null;
            if (tglAkhirDate) {
                const yyyy = tglAkhirDate.getFullYear();
                const mm = String(tglAkhirDate.getMonth() + 1).padStart(2, '0');
                const dd = String(tglAkhirDate.getDate()).padStart(2, '0');
                tglAkhirFormatted = `${yyyy}-${mm}-${dd}`;
            }

            // Panggil kembali fnShow dengan nilai filter baru yang sudah diformat
            fnShow(tglAwalFormatted, tglAkhirFormatted);
        });
        function fnShow(tanggalAwal, tanggalAkhir) {
            $.ajax({
                url: '@Url.Action("Show", "KontrolPrediksi")',
                type: 'GET',
                data: {
                    tanggalAwal: tanggalAwal,
                    tanggalAkhir: tanggalAkhir
                },
                beforeSend: function () {
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    $('#loading2-Show').hide();

                    if (result.Status === undefined) {
                        // Render PartialView (Grid)
                        $('#Show').html(result).show();

                        // ⬇️ Update caption grid setelah grid selesai di-render
                        setTimeout(function () {
                            var grid = $("#KontrolPrediksiGrid").dxDataGrid("instance");
                            if (grid) {
                                var tgl = DevExpress.localization.formatDate(new Date(tanggalAkhir), "dd/MM/yyyy");
                                grid.columnOption("RealisasiHari", "caption", "Prediksi Hari Ini S.D Dengan Tanggal " + tgl);
                            }
                        }, 200); // kasih delay kecil biar grid sempat ter-render

                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: result.Message
                        });
                    }
                },
                error: function (xhr) {
                    $('#loading2-Show').hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: '⚠ Gagal memuat data dari server.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }


    </script>
}

