@model MonPDReborn.Models.AnalisisTren.KontrolPrediksiVM.Index

<div class="container-fluid">
    <h4 class="fw-bold mb-3">📊 Dashboard Realisasi & Prediksi Pajak</h4>

    <form id="form-cari" method="get">
        <div class="input-group mb-3">
            <input type="text" name="keyword" class="form-control" value="@Model.Keyword" placeholder="Cari jenis pajak..." />
            <button type="submit" class="btn btn-primary">🔍 Cari</button>
        </div>
    </form>

    <div id="kontrol-prediksi-tabel">
        <div class="text-center">🔄 Memuat data...</div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const loadData = () => {
                const keyword = $('input[name="keyword"]').val();
                $("#kontrol-prediksi-tabel").load(`/AnalisisTren/KontrolPrediksi/Show?keyword=${encodeURIComponent(keyword)}`);
            };

            loadData();

            $("#form-cari").on("submit", function (e) {
                e.preventDefault();
                loadData();
            });
        });
    </script>
}
