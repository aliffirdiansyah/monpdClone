@model MonPDReborn.Models.AnalisisTren.KontrolPrediksiVM.Index

@{
    ViewData["Title"] = "Kalkulator Prediksi Pendapatan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Pajak
                    </h4>
                    <p class="text-dark mb-0">Monitoring dan Analisis Pendapatan Pajak Daerah</p>
                </div>
                <div class="text-dark mb-1">Periode: <strong id="periodeLabel">-</strong></div>
            </div>
            <div class="card-body">
                @using DevExtreme.AspNet.Mvc

                <div class="row g-3 align-items-center">

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                            .ID("tanggalAwal")
                            .Type(DateBoxType.Date)
                            .Placeholder("Tanggal Awal")
                            .StylingMode(EditorStylingMode.Outlined)
                            .Value(DateTime.Now)
                            .Max(DateTime.Now)
                            )
                    </div>

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                            .ID("tanggalAkhir")
                            .Type(DateBoxType.Date)
                            .Placeholder("Tanggal Akhir")
                            .StylingMode(EditorStylingMode.Outlined)
                            )
                    </div>

                    <div class="col-lg col-md-6">
                        <button type="button" id="btnTerapkanFilter" class="btn btn-success w-100">
                            Terapkan Filter
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Pajak Daerah
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        function updatePeriode() {
            var tglAwal = $("#tanggalAwal").dxDateBox("instance").option("value");
            var tglAkhir = $("#tanggalAkhir").dxDateBox("instance").option("value");

            if (tglAwal && tglAkhir) {
                var awal = DevExpress.localization.formatDate(new Date(tglAwal), "dd MMMM yyyy");
                var akhir = DevExpress.localization.formatDate(new Date(tglAkhir), "dd MMMM yyyy");

                $("#periodeLabel").text(awal + " - " + akhir);
            }
        }

        // update saat load pertama
        $(function () {
            updatePeriode();

            // update kalau tanggal berubah
            $("#tanggalAwal").dxDateBox("instance").on("valueChanged", updatePeriode);
            $("#tanggalAkhir").dxDateBox("instance").on("valueChanged", updatePeriode);

            // juga pas klik tombol filter
            $("#btnTerapkanFilter").on("click", updatePeriode);
        });
    </script>

    <script>
        $(document).ready(function () {


        });


        $('#btnTerapkanFilter').on('click', function() {

            const tglAwalDate = $('#tanggalAwal').dxDateBox('instance').option('value');
            const tglAkhirDate = $('#tanggalAkhir').dxDateBox('instance').option('value');


            let tglAwalFormatted = null;
            if (tglAwalDate) {
                const yyyy = tglAwalDate.getFullYear();
                const mm = String(tglAwalDate.getMonth() + 1).padStart(2, '0');
                const dd = String(tglAwalDate.getDate()).padStart(2, '0');
                tglAwalFormatted = `${yyyy}-${mm}-${dd}`;
            }

            let tglAkhirFormatted = null;
            if (tglAkhirDate) {
                const yyyy = tglAkhirDate.getFullYear();
                const mm = String(tglAkhirDate.getMonth() + 1).padStart(2, '0');
                const dd = String(tglAkhirDate.getDate()).padStart(2, '0');
                tglAkhirFormatted = `${yyyy}-${mm}-${dd}`;
            }


            fnShow(tglAwalFormatted, tglAkhirFormatted);
        });
        function fnShow(tanggalAwal, tanggalAkhir) {
            $.ajax({
                url: '@Url.Action("Show", "KontrolPrediksi")',
                type: 'GET',
                data: {
                    tanggalAwal: tanggalAwal,
                    tanggalAkhir: tanggalAkhir
                },
                beforeSend: function () {
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    $('#loading2-Show').hide();

                    if (result.Status === undefined) {

                        $('#Show').html(result).show();


                        setTimeout(function () {
                            var grid = $("#KontrolPrediksiGrid").dxDataGrid("instance");
                            if (grid) {
                                var tglAwal = DevExpress.localization.formatDate(
                                    new Date(new Date(tanggalAwal).setDate(new Date(tanggalAwal).getDate() + 1)),
                                    "dd/MM/yyyy"
                                );
                                var tglAkhir = DevExpress.localization.formatDate(new Date(tanggalAkhir), "dd/MM/yyyy");

                                var tglAwalRealisasi = DevExpress.localization.formatDate(
                                    new Date(new Date(tanggalAwal).getFullYear(), new Date(tanggalAwal).getMonth(), 1),
                                    "dd/MM/yyyy"
                                );
                                var tglAkhirRealisasi = DevExpress.localization.formatDate(new Date(tanggalAwal), "dd/MM/yyyy");

                                grid.columnOption("Realisasi", "caption", "Realisasi Tgl " + tglAwalRealisasi + " s.d " + tglAkhirRealisasi);
                                grid.columnOption("Prediksi", "caption", "Prediksi " + tglAwal + " s.d " + tglAkhir);
                            }
                        }, 200);


                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: result.Message
                        });
                    }
                },
                error: function (xhr) {
                    $('#loading2-Show').hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: '⚠ Gagal memuat data dari server.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }


    </script>
}

