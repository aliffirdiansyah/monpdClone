@model MonPDReborn.Models.AnalisisTren.KontrolPrediksiVM.Index

@{
    ViewData["Title"] = "Kontrol Prediksi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive shadow-sm border rounded bg-white">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-dark text-center">
            <tr>
                <th>Jenis Pajak</th>
                <th>Target</th>
                <th>Realisasi</th>
                <th>Prediksi</th>
                <th>Potensi</th>
                <th>Pencapaian</th>
                <th>Tren</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-start">Pajak Hotel</td>
                <td>Rp1.000.000.000</td>
                <td>Rp800.000.000</td>
                <td class="text-warning">Rp950.000.000</td>
                <td class="text-success">Rp1.200.000.000</td>
                <td>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar bg-info fw-bold" style="width: 80%">80%</div>
                    </div>
                </td>
                <td><span class="text-success fw-bold">🔼 Naik</span></td>
                <td><button class="btn btn-sm btn-primary">Detail</button></td>
            </tr>
            <tr>
                <td class="text-start">Pajak Restoran</td>
                <td>Rp1.200.000.000</td>
                <td>Rp700.000.000</td>
                <td class="text-warning">Rp850.000.000</td>
                <td class="text-success">Rp1.300.000.000</td>
                <td>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar bg-danger fw-bold" style="width: 58%">58%</div>
                    </div>
                </td>
                <td><span class="text-danger fw-bold">🔽 Turun</span></td>
                <td><button class="btn btn-sm btn-primary">Detail</button></td>
            </tr>
        </tbody>
    </table>
</div>

