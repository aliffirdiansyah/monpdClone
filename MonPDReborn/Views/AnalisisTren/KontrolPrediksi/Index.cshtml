@model MonPDReborn.Models.AnalisisTren.KontrolPrediksiVM.Index

@{
    ViewData["Title"] = "Kontrol Prediksi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Rekap Pajak
                    </h4>
                    <p class="text-muted mb-0">Monitoring dan Analisis Pendapatan Pajak Daerah</p>
                </div>
                <div class="text-muted mb-1">Periode: <strong>Januari - Desember 2023</strong></div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="  ri-focus-3-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.TotalTarget.ToString("C")</h3>
                        <small class="text-muted">Total Target</small>

                        
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-money-dollar-box-line text-warning fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.TotalRealisasi.ToString("C")</h3>
                        <small class="text-muted">Total Realisasi</small>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-bar-chart-2-line text-success fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.RataRataPencapaian.ToString("N2")%</h3>
                        <small class="text-muted">Rata-Rata Pencapaian</small>
                        
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Filter Prediksi
                    </h4>
                </div>
            </div>

            <div class="card-body">
                @using DevExtreme.AspNet.Mvc

                <div class="row g-3 align-items-center">

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                            .ID("tanggalAwal")
                            .Type(DateBoxType.Date)
                            .Placeholder("Tanggal Awal") // Menggantikan <label>
                            .StylingMode(EditorStylingMode.Outlined) // Terapkan styling DevExtreme
                            .Value(DateTime.Now) // Nilai default: hari ini
                            )
                    </div>

                    <div class="col-lg col-md-6">
                        @(Html.DevExtreme().DateBox()
                            .ID("tanggalAkhir")
                            .Type(DateBoxType.Date)
                            .Placeholder("Tanggal Akhir") // Menggantikan <label>
                            .StylingMode(EditorStylingMode.Outlined) // Terapkan styling DevExtreme
                            )
                    </div>

                    <div class="col-lg col-md-6">
                        <button type="button" class="btn btn-success w-100">
                            Terapkan Filter
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Rekap Pajak Daerah
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            fnShow("");      // Panggil data rekap jumlah
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function fnShow() {
            $.ajax({
                url: '@Url.Action("Show", "KontrolPrediksi")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },
                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

            document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0'); // Bulan dimulai dari 0
            const dd = String(today.getDate()).padStart(2, '0');

            const formattedToday = `${yyyy}-${mm}-${dd}`;

            // Atur nilai input tanggal awal ke hari ini
            document.getElementById('tanggalAwal').value = formattedToday;
        });

    </script>
}

