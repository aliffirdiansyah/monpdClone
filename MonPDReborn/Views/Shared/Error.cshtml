@model MonPDReborn.Models.ErrorViewModel

@{
    var statusCode = ViewData["StatusCode"] != null ? (int)ViewData["StatusCode"] : 500;
    string title, subtitle, message;
    string btnText = "Kembali ke Beranda";

    switch (statusCode)
    {
        case 404:
            title = "404";
            subtitle = "Halaman Tidak Ditemukan";
            message = "Maaf, halaman yang Anda cari tidak ada atau sudah dipindahkan.";
            break;
        case 403:
            title = "403";
            subtitle = "Akses Ditolak";
            message = "Anda tidak memiliki izin untuk mengakses halaman ini.";
            break;
        case 503:
            title = "503";
            subtitle = "Service Unavailable";
            message = "Sedang dalam pemeliharaan. Silakan kembali nanti.";
            break;
        default:
            title = statusCode.ToString();
            subtitle = "Terjadi Kesalahan";
            message = "Ada kesalahan saat memproses permintaan Anda.";
            break;
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = $"{title} - {subtitle}";
}

<!-- Container fullscreen untuk particles -->
<div class="error-page position-relative d-flex align-items-center justify-content-center min-vh-100 text-center">
    <div id="particles-js" class="particles-bg"></div>

    <div class="overlay"></div>

    <div class="content position-relative px-3">
        <h1 class="display-1 fw-bold gradient-text mb-0">@title</h1>
        <h4 class="mb-3 text-uppercase">@subtitle</h4>
        <p class="lead mb-4">@message</p>

        @if (Model.ShowRequestId)
        {
            <p class="small">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <a href="/" class="btn btn-info btn-sm mt-3 shadow">
            <i class="ri-home-5-line me-1 align-middle"></i> @btnText
        </a>
        <div class="mt-3">
            <a href="#" class="small">Laporkan Masalah</a>
        </div>
    </div>
</div>

<style>
    /* Background utama (gradien) */
    .error-page {
        background: #ffffff; /* putih polos */
        position: relative;
        overflow: hidden;
    }

    /* particles container harus absolute dan menutupi seluruh area */
    .particles-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    /* overlay pattern / soften effect supaya teks tetap terbaca */
    .error-page .overlay {
        position: absolute;
        inset: 0;
        z-index: 1;
        pointer-events: none;
    }

    .error-page .content {
        z-index: 2;
        max-width: 820px;
    }

    /* Gradient text untuk kode error */
    .gradient-text {
        background: linear-gradient(90deg, #ffd166, #ff6b6b, #845ef7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 6.5rem;
        line-height: 0.9;
        margin-bottom: 0.4rem;
        animation: bounceIn 900ms ease;
    }

    .error-page h1 {
        font-size: 8rem;
        animation: bounceIn 1s ease;
        color: #000000; /* tosca biar matching sidebar */
    }

    .error-page h4 {
        font-weight: 600;
        color: #000000;
    }

    .error-page p {
        color: #000000;
    }

    .error-page p.lead {
            color: #000000;
    }

   /*  .btn-light {
        background: #000000;
        color: #FFFFFF;
        border: none;
    } */

    @@keyframes bounceIn {
        0%

    {
        transform: scale(0.6);
        opacity: 0;
    }

    60% {
        transform: scale(1.08);
        opacity: 1;
    }

    100% {
        transform: scale(1);
    }

    }

    /* responsive */
    @@media (max-width: 768px) {
        .gradient-text

    {
        font-size: 4.5rem;
    }

    }
</style>

@section Scripts {
    <!-- particles.js library (CDN). Jika perlu, pindahkan ke _Layout.cshtml -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

    <script>
        /* Particles config */
        particlesJS('particles-js',
            {
                "particles": {
                    "number": {
                        "value": 55,
                        "density": {
                            "enable": true,
                            "value_area": 800
                        }
                    },
                    "color": {
                        "value": ["#0f172a", "#ffd166", "#0f3b63"]
                    },
                    "shape": {
                        "type": "circle"
                    },
                    "opacity": {
                        "value": 0.7,
                        "random": true,
                        "anim": {
                            "enable": true,
                            "speed": 1.2,
                            "opacity_min": 0.2,
                            "sync": false
                        }
                    },
                    "size": {
                        "value": 3,
                        "random": true,
                        "anim": {
                            "enable": false,
                            "speed": 40,
                            "size_min": 0.1,
                            "sync": false
                        }
                    },
                    "line_linked": {
                        "enable": true,
                        "distance": 120,
                        "color": "#ffffff",
                        "opacity": 0.08,
                        "width": 1
                    },
                    "move": {
                        "enable": true,
                        "speed": 1.2,
                        "direction": "none",
                        "random": false,
                        "straight": false,
                        "out_mode": "out",
                        "bounce": false,
                        "attract": {
                            "enable": false
                        }
                    }
                },
                "interactivity": {
                    "detect_on": "canvas",
                    "events": {
                        "onhover": {
                            "enable": true,
                            "mode": "repulse"
                        },
                        "onclick": {
                            "enable": true,
                            "mode": "push"
                        },
                        "resize": true
                    },
                    "modes": {
                        "grab": {
                            "distance": 200,
                            "line_linked": {
                                "opacity": 0.5
                            }
                        },
                        "bubble": {
                            "distance": 200,
                            "size": 6,
                            "duration": 2,
                            "opacity": 0.8,
                            "speed": 3
                        },
                        "repulse": {
                            "distance": 120,
                            "duration": 0.6
                        },
                        "push": {
                            "particles_nb": 4
                        },
                        "remove": {
                            "particles_nb": 2
                        }
                    }
                },
                "retina_detect": true
            }
        );
    </script>
}
