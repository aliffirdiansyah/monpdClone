<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg">

<head>

    <meta charset="utf-8" />
    <title>Sign In | MONPD</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Pendataan PBJT Surabaya" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">

    <!-- Layout config Js -->
    <script src="~/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/assets/css/custom.min.css" rel="stylesheet" type="text/css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .bglogin {
            position: relative;
            background-image: url('/Login/img/bg-login.png'); /* ganti sesuai gambar kamu */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }

            /* Layer putih semi transparan */
            .bglogin::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.1); /* putih 75% */
                z-index: 0;
            }

        .auth-page-wrapper {
            flex: 1; /* Supaya konten dorong footer ke bawah */
            display: flex;
            flex-direction: column;
        }

        .auth-page-content {
            flex: 1; /* Isi utama fleksibel */
        }

        /* Footer biru */
        .footer-login {
            background-color: #5EA8A4 !important;
            color: white !important;
        }
        .text-outline-black {
            color: white;
            -webkit-text-stroke: 0.5px #5da8a3;
        }

    </style>

</head>

<body class="bglogin">

    <div class="auth-page-wrapper">

        <!-- Konten login -->
        <div class="auth-page-content">
            <div class="container">
                <!-- Logo dan Judul -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-black">
                            <a href="~/index.html" class="d-inline-block auth-logo">
                                <img src="~/assets/images/logo-surabaya.png" alt="" height="150">
                            </a>
                            <p class="mt-3 fs-22 fw-bold text-outline-black">
                                MONPD<br />Monitoring Pajak Daerah Surabaya
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Konten utama -->
                <div class="row justify-content-center">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer footer-login">
            <div class="container">
                <div class="text-center">
                    <p class="mb-0 fw-medium">
                        &copy; <script>document.write(new Date().getFullYear())</script> Badan Pendapatan Daerah Kota Surabaya.
                    </p>
                </div>
            </div>
        </footer>

    </div>
    <!-- end auth-page-wrapper -->
    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/bootstrap/bootstrap.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/node-waves.min.js"></script>
    <script src="~/assets/libs/feather-icons/feather-icons.min.js"></script>
    <script src="~/assets/js/pages/plugins/lord-icon-2.1.0.min.js"></script>
    <script src="~/assets/js/plugins.min.js"></script>

    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>