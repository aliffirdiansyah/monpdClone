@model MonPDReborn.Models.MonitoringGlobal.MonitoringBulananVM.Index
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">LAPORAN BULANAN PAJAK DAERAH KOTA SURABAYA</h4>
    </div>
    <div class="card-body">
        @using DevExtreme.AspNet.Mvc

        @using DevExtreme.AspNet.Mvc

        <div class="row g-3 align-items-center mb-3">

            <div class="col-lg-3 col-md-4">
                @(Html.DevExtreme().SelectBoxFor(m => m.SelectedPajak)
                    .DataSource(Model.JenisPajakList)
                    .ValueExpr("Value")
                    .DisplayExpr("Text")
                    .ID("select-jnspajak")
                    .Placeholder("Semua Jenis Pajak...")
                    // 1. Atur styling agar mirip form-select
                    .StylingMode(EditorStylingMode.Outlined)
                    // 2. Tambahkan kelas untuk membuatnya berbentuk kapsul
                    .ElementAttr(new { @class = "rounded-pill" })
                    )
            </div>

            <div class="col-lg-2 col-md-3">
                <button type="button" onclick="fnShow()" class="btn btn-success rounded-pill w-100">
                    <i class="ri-filter-3-line me-1"></i> Terapkan
                </button>
            </div>

        </div>
    </div>
</div>

<div class="text-center">
    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div id="card-Show" class="card" style="display:none">
    <div class="card-header d-flex">
        <div class="flex-grow-1">
            <h4 class="card-title"></h4>
        </div>
        <div class="flex-shrink-0"></div>
    </div>
    <div class="card-body">
        <div id="Show"></div>
    </div>
</div>

@section Scripts {
    <script>
        function fnShow() {
            var tglCutOff = $("#TanggalCutOff").val();
            var selectedPajak = $("#select-jnspajak").dxSelectBox("instance").option("value");
            var filterData = {
                jenisPajak: selectedPajak,
                tahun: new Date().getFullYear() // Mengirim tahun saat ini sebagai default
            };
            $.ajax({
                url: '@Url.Action("Show")',
                type: 'GET',
                data: filterData ,
                beforeSend: function () {
                    $("#card-Show").hide();
                    $("#loading2-Show").show();
                },
                success: function (response) {
                    if(response.Status === undefined){
                        $("#card-Show").show();
                        $("#Show").html(response);
                    } else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        })
                    }
                },
                error: function (xhr, status, error) {
                    $('#Show').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                },
                complete: function () {
                    $("#loading2-Show").hide();
                }
            });
        }
    </script>
}