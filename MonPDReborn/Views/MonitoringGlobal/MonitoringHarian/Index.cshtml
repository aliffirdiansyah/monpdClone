@model MonPDReborn.Models.MonitoringGlobal.MonitoringHarianVM.Index

@{
    ViewData["Title"] = "Monitoring Harian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Monitoring Capaian Pendapatan Pajak Daerah Harian
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Filter Data
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <div class="col-lg col-md-6">
                        <label for="filterTahun" class="form-label ms-2">Tahun</label>
                        <select id="filterTahun" class="form-select rounded-pill" aria-label="Pilih Tahun">
                            <option value="2025" selected>2025</option>
                            <option value="2024">2024</option>
                            <option value="2023">2023</option>
                            <option value="2022">2022</option>
                        </select>
                    </div>

                    <div class="col-lg col-md-6">
                        <label for="filterBulan" class="form-label ms-2">Bulan</label>
                        <select id="filterBulan" class="form-select rounded-pill" aria-label="Pilih Bulan">
                            <option value="0">Semua Bulan</option>
                            <option value="1">Januari</option>
                            <option value="2">Februari</option>
                            <option value="3">Maret</option>
                            <option value="4">April</option>
                            <option value="5">Mei</option>
                            <option value="6">Juni</option>
                            <option value="7" selected>Juli</option>
                            <option value="8">Agustus</option>
                            <option value="9">September</option>
                            <option value="10">Oktober</option>
                            <option value="11">November</option>
                            <option value="12">Desember</option>
                        </select>
                    </div>

                    <div class="col-lg col-md-6">
                        <label for="filterJenisPajak" class="form-label ms-2">Jenis Pajak</label>
                        <select id="filterJenisPajak" class="form-select rounded-pill" aria-label="Pilih Jenis Pajak">
                            <option selected>Semua Jenis Pajak</option>
                            <option value="hotel">Pajak Hotel</option>
                            <option value="restoran">Pajak Restoran</option>
                            <option value="hiburan">Pajak Hiburan</option>
                            <option value="reklame">Pajak Reklame</option>
                            <option value="parkir">Pajak Parkir</option>
                        </select>
                    </div>

                    <div class="col-lg col-md-6">
                        <button type="button" class="btn btn-success rounded-pill w-100">
                            <i class="ri-filter-3-line me-1"></i> Terapkan
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="  ri-focus-3-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">xxxx</h3>
                        <small class="text-muted">Total Target</small>


                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-money-dollar-box-line text-warning fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">xxxx</h3>
                        <small class="text-muted">Total Realisasi</small>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-bar-chart-2-line text-success fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">xxxx</h3>
                        <small class="text-muted">Pencapaian</small>

                    </div>
                </div>


            </div>
        </div>
    </div>

    

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Rekap Realisasi Per Hari
                    </h4>
                </div>
            </div>
            
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            fnShow("");      // Panggil data rekap jumlah
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function fnShow() {
            $.ajax({
                url: '@Url.Action("Show", "MonitoringHarian")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },
                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

            document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0'); // Bulan dimulai dari 0
            const dd = String(today.getDate()).padStart(2, '0');

            const formattedToday = `${yyyy}-${mm}-${dd}`;

            // Atur nilai input tanggal awal ke hari ini
            document.getElementById('tanggalAwal').value = formattedToday;
        });

    </script>
}

