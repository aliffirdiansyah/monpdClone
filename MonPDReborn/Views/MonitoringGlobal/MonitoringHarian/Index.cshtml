@model MonPDReborn.Models.MonitoringGlobal.MonitoringHarianVM.Index
@using DevExtreme.AspNet.Mvc

@{
    ViewData["Title"] = "Monitoring Harian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Monitoring Capaian Pendapatan Pajak Daerah Harian
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Filter Data
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row g-3 align-items-center">

                    <div class="col-lg-3 col-md-6">
                        @(Html.DevExtreme().SelectBoxFor(m => m.SelectedPajak)
                            .ID("selectPajak")
                            .DataSource(Model.JenisPajakList)
                            .Value(0.ToString())
                            .ValueExpr("Value")
                            .DisplayExpr("Text")
                            .Placeholder("Semua Jenis Pajak")
                            .StylingMode(EditorStylingMode.Outlined)
                            )
                    </div>

                    <div class="col-lg-3 col-md-6">
                        @(Html.DevExtreme().SelectBoxFor(m => m.SelectedTahun)
                            .ID("ddlTahun")
                            .DataSource(Model.TahunList)
                            .Value(DateTime.Now.Year.ToString())
                            .ValueExpr("Value")
                            .DisplayExpr("Text")
                            .Placeholder("Pilih Tahun")
                            .StylingMode(EditorStylingMode.Outlined)
                            )
                    </div>

                    <div class="col-lg-3 col-md-6">
                        @(Html.DevExtreme().SelectBoxFor(m => m.SelectedBulan)
                            .ID("selectBulan")
                            .DataSource(Model.BulanList)
                            .Value(DateTime.Now.Month.ToString())
                            .ValueExpr("Value")
                            .DisplayExpr("Text")
                            .Placeholder("Semua Bulan") // Ditambahkan agar konsisten
                            .StylingMode(EditorStylingMode.Outlined)
                            )
                    </div>

                    <div class="col-lg-2 col-md-6">
                        <button type="button" id="btnTerapkanFilter" class="btn btn-success w-100">
                            Terapkan Filter
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Rekap Realisasi Per Hari
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Panggil data saat halaman pertama kali dimuat
            loadShow();

            // Ketika tombol filter diklik
            $("#btnTerapkanFilter").on("click", function () {
                loadShow();
            });
        });

        // Ganti seluruh fungsi fnShow Anda dengan ini
        function loadShow() {
            // Ambil semua nilai dari setiap filter
            let jenisPajak = $("#selectPajak").dxSelectBox("instance").option("value");
            let tahun = $("#ddlTahun").dxSelectBox("instance").option("value");
            let bulan = $("#selectBulan").dxSelectBox("instance").option("value");

            // Siapkan data untuk dikirim ke controller
            const filterData = {
                jenisPajak: jenisPajak == null ? 0 : jenisPajak, // Kirim 0 jika null/semua
                tahun: tahun,
                bulan: bulan == null ? 0 : bulan // Kirim 0 jika null/semua
            };

            $.ajax({
                url: '@Url.Action("Show", "MonitoringHarian")', // Pastikan Controller adalah MonitoringHarian
                type: 'GET',
                data: filterData,
                beforeSend: function () {
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },
                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data.</div>').show();
                }
            });
        }
    </script>
}

