@model MonPDReborn.Models.MonitoringGlobal.MonitoringHarianVM.Index

@{
    ViewData["Title"] = "Monitoring Harian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Monitoring Capaian Pendapatan Pajak Daerah Harian
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Filter Data
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row mt-3 ms-0">

                    <div class="col-lg-3">
                        @Html.DropDownListFor(model => model.SelectedPajak,
                                 new SelectList(Model.JenisPajakList, "Value", "Text"),
                                 "Semua Jenis Pajak",
                                 new { @class = "form-select mb-3", @aria_label = "Default select example" })
                    </div>
                    <div class="col-lg-2">
                        @Html.DropDownListFor(model => model.SelectedTahun,
                                 new SelectList(Model.TahunList, "Value", "Text"),
                                 "Pilih Tahun",
                                 new { @class = "form-select mb-3", @id = "ddlTahun", @aria_label = "Default select example" })
                    </div>

                    <div class="col-lg-2">
                        @Html.DropDownListFor(model => model.SelectedBulan,
                                 new SelectList(Model.BulanList, "Value", "Text"),
                                 new { @class = "form-select mb-3" })
                    </div>

                    <div class="col-lg col-md-6">
                        <button type="button" id="btnTerapkanFilter" class="btn btn-success rounded-pill w-100">
                            <i class="ri-filter-3-line me-1"></i> Terapkan
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Rekap Realisasi Per Hari
                    </h4>
                </div>
            </div>

            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            fnShow("");      // Panggil data rekap jumlah
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function fnShow() {
            $.ajax({
                url: '@Url.Action("Show", "MonitoringHarian")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },
                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

       
        $(document).ready(function() {
            // Event handler saat tombol filter diklik
            $('#btnTerapkanFilter').on('click', function () {
                // Cukup panggil 'refresh' pada DataGrid.
                // Grid akan otomatis mengambil parameter baru dari 'LoadParams'.
                $('#KontrolPrediksiGrid').dxDataGrid('instance').refresh();
            });
        });

    </script>
}

