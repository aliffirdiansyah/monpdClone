@model MonPDReborn.Models.MonitoringGlobal.MonitoringHarianVM.Show

<div class="row">
    <div class="col-lg-4">
        <div class="card card-animate shadow-lg rounded-3 p-3" style="border-top: 6px solid #66BB6A; height:80%;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="  ri-focus-3-line text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h5 class="text-muted">Total Target</h5>
                        <h3 class="mb-0 fw-bold">@MonPDLib.General.Extension.FormatRupiahFull(Model.Data.TotalTarget)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card card-animate shadow-lg rounded-3 p-3" style="border-top: 6px solid #66BB6A; height:80%;">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-money-dollar-box-line text-warning fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h5 class="text-muted">Total Realisasi</h5>
                        <h3 class="mb-0 fw-bold">@MonPDLib.General.Extension.FormatRupiahFull(Model.Data.TotalRealisasi)</h3>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card card-animate shadow-lg rounded-3 p-3" style="border-top: 6px solid #66BB6A; height:80%;">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-bar-chart-2-line text-success fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h5 class="text-muted">Pencapaian</h5>
                        <h3 class="mb-0 fw-bold">@Model.Data.Pencapaian.ToString("N2")%</h3>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    @(
            Html.DevExtreme().DataGrid<MonPDReborn.Models.MonitoringGlobal.MonitoringHarianVM.MonitoringHarian>()
            .ID("KontrolPrediksiGrid")
            .DataSource(Model.DataMonitoringHarianList)
            .KeyExpr("JenisPajak")
            .ShowBorders(true)
            .ShowColumnLines(true)
            .ShowColumnHeaders(true)
            .AllowColumnResizing(true)
            .ShowRowLines(true)
            .ColumnAutoWidth(true)
            .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
            .FilterRow(f => f.Visible(true))
            .HeaderFilter(h => h.Visible(true))
            .Sorting(s => s.Mode(GridSortingMode.Multiple))
            .Paging(p => p.PageSize(10))
            .Pager(pager =>
            {
                pager.ShowPageSizeSelector(true);
                pager.AllowedPageSizes(new[] { 10, 20, 50 });
                pager.ShowInfo(true);
            })
            .Columns(columns =>
            {

                columns.AddFor(m => m.Tanggal).Format("dd MMM yyyy")
            .Caption("Tanggal");

                columns.AddFor(m => m.JenisPajak)
            .Caption("Jenis Pajak");

                columns.AddFor(m => m.TargetHarian)
            .Caption("Target Harian").Format(f => f.Type(Format.Currency).Precision(0).Currency("IDR")).Alignment(HorizontalAlignment.Right);

                columns.AddFor(m => m.Realisasi)
            .Caption("Realisasi").Format(f => f.Type(Format.Currency).Precision(0).Currency("IDR")).Alignment(HorizontalAlignment.Right);

                columns.AddFor(m => m.Pencapaian)
            .Caption("Pencapaian")
            // Tambahkan baris di bawah ini
            .Format(new JS("function(value) { return value.toFixed(2) + ' %'; }"))
            .Alignment(HorizontalAlignment.Right); // Tambahan agar rata kanan

                columns.AddFor(m => m.Status)
            .Caption("Status")
            .Alignment(HorizontalAlignment.Center) // Agar badge di tengah
            .CellTemplate(
        @<text>
        <%
        var status = data.Status;
        var colorClass = "badge "; // Awal kelas

        // Logika untuk menentukan warna berdasarkan 3 atau lebih status
        if (status === "Tercapai") {
        colorClass += "bg-success"; // Hijau
        } else if (status === "Belum Tercapai") {
        colorClass += "bg-warning text-dark"; // Oranye/Kuning
        } else { // Untuk status "Di Bawah Target" atau lainnya
        colorClass += "bg-danger"; // Merah
        }
        %>

        <span class="<%= colorClass %>"><%= status %></span>
    </text>
        );

            })
        )
</div>