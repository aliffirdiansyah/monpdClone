@model MonPDReborn.Models.DataWP.ProfilePembayaranWPVM.Index

@{
    ViewData["Title"] = "Profil Pembayaran Wajib Pajak";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Profil Pembayaran Wajib Pajak
                    </h4>
                    <p class="text-muted mb-0">Analisis Kepatuhan dan Perilaku Pembayaran Pajak Daerah</p>
                </div>
                <div class="text-muted mb-1">Periode: <strong>Januari - Desember 2023</strong></div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-team-fill text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.TotalWP.ToString("N0")</h3>
                        <small class="text-muted">Total Wajib Pajak</small>

                        <h3>
                            <span class="badge bg-light-success text-success fw-semibold ps-0">
                                ↑ @Model.Data.PresentaseWP.ToString("F1")% dari bulan lalu
                            </span>
                        </h3>
                    </div>
                </div>
                
                
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-team-fill text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.PersentaseKepatuhan.ToString("F2")%</h3>
                        <small class="text-muted">Tingkat Kepatuhan</small>
                        <h3>
                            <span class="badge bg-light-success text-info fw-semibold ps-0">
                                Target: @Model.Data.TargetKepatuhan.ToString("F1")%
                            </span>
                        </h3>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm rounded-xl p-3 text-center">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary-subtle p-2 me-2">
                        <i class="ri-team-fill text-primary fs-1"></i>
                    </div>
                    <div class="text-start">
                        <h3 class="mb-0 fw-bold">@Model.Data.TotalTunggakan.ToString("C0")</h3>
                        <small class="text-muted">Total Tunggakan</small>
                        <h3>
                            <span class="badge bg-light-success text-danger fw-semibold ps-0">
                                @Model.Data.WPMenunggak WP menunggak
                            </span>
                        </h3>
                    </div>
                </div>
                
                
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Wajib Pajak Daerah
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>

                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            fnShow("");      // Panggil data rekap jumlah
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function fnShow() {
            $.ajax({
                url: '@Url.Action("Show", "ProfilePembayaranWP")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },
                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

         function aksiTemplate(cellElement, cellInfo) {
            const npwpd = cellInfo.data.NPWPD;

            $('<button>')
                .attr('type', 'button')
                .attr('data-npwpd', npwpd)
                .addClass('btn btn-sm btn-outline-primary btn-detail')
                .html('<i class="bx bx-show"></i>')
                .appendTo(cellElement);
        }

        // Klik detail
        $(document).on('click', '.btn-detail', function () {
            const npwpd = $(this).data('npwpd');
            fnDetail(npwpd);
        });

                function fnDetail(NPWPD) {
            $.ajax({
                url: '@Url.Action("Detail", "ProfilePembayaranWP")',
                type: 'GET',
                data: { NPWPD: NPWPD }, // Sesuai dengan parameter di controller (huruf besar/kecil penting di C#)
                beforeSend: function () {
                    $("#loader").show();

                    // Bersihkan modal sebelum isi data baru
                    const $modal = $("#staticBackdropLargeScrollable");
                    $modal.find(".modal-title").text("");
                    $modal.find(".modal-body").html("");
                },
                success: function (response) {
                    $("#loader").hide();

                    const $modal = $("#staticBackdropLargeScrollable");

                    if (response.Status === undefined) {
                        $modal.find(".modal-title").html("Detail WP");
                        $modal.find(".modal-body").html(response);
                        $modal.modal('show');
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    $("#loader").hide();

                    const $modal = $("#staticBackdropLargeScrollable");
                    $modal.find(".modal-title").html("Detail WP");
                    $modal.find(".modal-body").html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                    $modal.modal('show');
                },
                complete: function () {
                    $("#loader").hide();
                }
            });
        }


    </script>
}