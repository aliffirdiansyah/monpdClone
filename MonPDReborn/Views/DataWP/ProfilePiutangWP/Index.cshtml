        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Daftar Piutang Wajib Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-fnShowRekap" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="fnShowRekap"></div>
                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Realisasi Penagihan
                    </h4>
                </div>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Metode Penagihan
                    </h4>
                </div>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Efektivitas Penagihan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-lg-4">
                        <div class="card bg-soft-success text-dark">
                            <div class="card-body text-center">
                                <div class="display-4 text-success mb-2">
                                    <i class=" ri-checkbox-circle-fill "></i>
                                </div>
                                <h4 class="mb-0 fs-20">@Model.Data.WPRespon</h4>
                                <p class="fs-14">WP Responsif</p>
                            </div>
                        </div>
                    </div>

                    <!-- Badan Usaha -->
                    <div class="col-lg-4">
                        <div class="card bg-soft-danger text-dark">
                            <div class="card-body text-center">
                                <div class="display-4 text-danger mb-2">
                                    <i class="ri-close-circle-fill "></i>
                                </div>
                                <h4 class="mb-0">@Model.Data.WPTidakRespon</h4>
                                <p class="fs-14">WP Non-Responsif</p>
                            </div>
                        </div>
                    </div>

                    <!-- Total WP -->
                    <div class="col-lg-4">
                        <div class="card bg-soft-secondary text-dark">
                            <div class="card-body text-center">
                                <div class="display-4 text-secondary mb-2">
                                    <i class="ri-funds-fill "></i>
                                </div>
                                <h4 class="mb-0">@Model.Data.PersentaseRespon.ToString("F0")%</h4>
                                <p class="fs-14">Tingkat Respon</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-1">
                        Riwayat Tindakan Penagihan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-fnShowRiwayat" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="fnShowRiwayat"></div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            fnShowRekap("");      // Panggil data rekap jumlah
            fnShowRiwayat("");      // Panggil data rekap jumlah

           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function fnShowRekap() {
            $.ajax({
                url: '@Url.Action("ShowRekap", "ProfilePiutangWP")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-fnShowRekap').show();
                    $('#fnShowRekap').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-fnShowRekap').hide();
                    $('#fnShowRekap').html(result).show();
                },
                error: function () {
                    $('#loading2-fnShowRekap').hide();
                    $('#fnShowRekap').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

        function fnShowRiwayat() {
            $.ajax({
                url: '@Url.Action("ShowRiwayat", "ProfilePiutangWP")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-fnShowRiwayat').show();
                    $('#fnShowRiwayat').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-fnShowRiwayat').hide();
                    $('#fnShowRiwayat').html(result).show();
                },
                error: function () {
                    $('#loading2-fnShowRiwayat').hide();
                    $('#fnShowRiwayat').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

        function aksiTemplate(cellElement, cellInfo) {
            const npwpd = cellInfo.data.NPWPD;

            $('<button>')
                .attr('type', 'button')
                .attr('data-npwpd', npwpd)
                .addClass('btn btn-sm btn-outline-primary btn-detail')
                .html('<i class="bx bx-show"></i>')
                .appendTo(cellElement);
        }

        // Klik detail
        $(document).on('click', '.btn-detail', function () {
            const npwpd = $(this).data('npwpd');
            const url = '@Url.Action("Detail", "ProfilePiutangWP")' + '?npwpd=' + encodeURIComponent(npwpd);

            $('#detailModalContent').html(`
                <div class="text-center p-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            `);

            $('#detailModal').modal('show');

            $.get(url, function (data) {
                $('#detailModalContent').html(data);
            });
        });
    </script>
}