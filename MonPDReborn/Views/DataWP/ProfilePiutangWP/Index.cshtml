                            </div>
                        </div>
                    </div>

                    <!-- Badan Usaha -->
                    <div class="col-lg-4">
                        <div class="card bg-light text-dark">
                            <div class="card-body text-center">
                                <div class="display-4 text-primary mb-2">
                                    <i class="ri-building-line"></i>
                                </div>
                                <h4 class="mb-0">@Model.Data.BadanUsaha</h4>
                                <p class="fs-14">Badan Usaha</p>
                            </div>
                        </div>
                    </div>

                    <!-- Total WP -->
                    <div class="col-lg-4">
                        <div class="card bg-light text-dark">
                            <div class="card-body text-center">
                                <div class="display-4 text-primary mb-2">
                                    <i class="ri-group-line"></i>
                                </div>
                                <h4 class="mb-0">@Model.Data.TotalWP</h4>
                                <p class="fs-14">Total WP</p>
                            </div>
                        </div>
                    </div>
                </div>
