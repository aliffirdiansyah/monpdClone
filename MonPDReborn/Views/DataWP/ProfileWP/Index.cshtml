@model MonPDReborn.Models.DataWP.ProfileWPVM.Index

@{
    ViewData["Title"] = "Profil Wajib Pajak";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-1">
                        Rekap Wajib Pajak Daerah
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>
                
                <div class="modal fade" id="detailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div id="detailModalContent">
                                <div class="text-center p-5">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            fnShow("");      // Panggil data rekap jumlah
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function fnShow() {
            $.ajax({
                url: '@Url.Action("Show", "ProfileWP")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },
                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

        function aksiTemplate(cellElement, cellInfo) {
            const npwpd = cellInfo.data.NPWPD;

            $('<button>')
                .attr('type', 'button')
                .attr('data-npwpd', npwpd)
                .addClass('btn btn-sm btn-outline-primary btn-detail')
                .html('<i class="bx bx-show"></i>')
                .appendTo(cellElement);
        }

                // Hapus blok "// Klik detail" Anda yang lama, dan ganti dengan dua blok ini:

        // Event handler saat tombol detail diklik
        $(document).on('click', '.btn-detail', function () {
            const npwpd = $(this).data('npwpd');
            // Panggil fungsi fnDetail yang baru
            fnDetail(npwpd);
        });

        // Fungsi baru untuk memuat detail via AJAX (meniru pola yang Anda inginkan)
        function fnDetail(npwpd) {
            $.ajax({
                url: '@Url.Action("Detail", "ProfileWP")', // URL sudah benar mengarah ke ProfileWP
                type: 'GET',
                data: { npwpd: npwpd }, // Mengirim data dengan nama parameter yang benar
                beforeSend: function () {
                    // Tampilkan spinner di dalam modal sebelum konten dimuat
                    $('#detailModalContent').html(`
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    `);
                    // Tampilkan modalnya
                    $('#detailModal').modal('show');
                },
                success: function (response) {
                    // Cek jika ada pesan error dari server
                    if (response.Status === undefined) {
                        // Jika sukses, ganti spinner dengan konten detail
                        $('#detailModalContent').html(response);
                    } else {
                        // Sembunyikan modal dan tampilkan peringatan
                        $('#detailModal').modal('hide');
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    // Ganti spinner dengan pesan error jika AJAX gagal
                    $('#detailModalContent').html('<p class="text-danger p-5">Terjadi kesalahan saat memuat data detail.</p>');
                }
            });
        }


    </script>
}