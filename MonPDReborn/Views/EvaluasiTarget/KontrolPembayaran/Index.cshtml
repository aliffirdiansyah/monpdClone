            $('#jenisPajakTabs').on('click', '.jenis-pajak-tab', function (e) {
                e.preventDefault();

                $('#jenisPajakTabs .jenis-pajak-tab').removeClass('active');
                $(this).addClass('active');

                const jenisDipilih = $(this).data('jenis');
                loadShow(jenisDipilih, currentTahun);
            });
        });


