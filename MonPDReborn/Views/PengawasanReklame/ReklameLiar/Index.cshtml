@section Scripts {
    <script>
        // Saat halaman siap, langsung panggil fungsi untuk memuat data tabel
        $(document).ready(function () {
            // Langsung panggil klik tombol filter untuk memuat data awal
            // dengan tahun default yang sudah terpasang di SelectBox.
            fnShow();
        });

        


        // Fungsi untuk memuat tabel, sekarang menerima parameter tahun (opsional)

        function fnShow(tahun) {
            $.ajax({
                url: '@Url.Action("Show", "ReklameLiar")', // Pastikan Controller 'ReklameLiar'
                type: 'GET',
                data: {
                    tahun: tahun

                },
                beforeSend: function () {
                    $('#loading2-Show').show();
                    $('#Show').hide();
                },

                success: function (result) {
                    $('#loading2-Show').hide();
                    $('#Show').html(result).show();
                },

                error: function () {
                    $('#loading2-Show').hide();
                    $('#Show').html('<div class="alert alert-danger text-center">❌ Gagal memuat data.</div>').show();
                }
            });

        }
        function getBulan(columnName) {
            switch (columnName) {
                case 'Jan': return 1;
                case 'Feb': return 2;
                case 'Mar': return 3;
                default: return 0; // fallback
            }
        }

        function detailReklameCellTemplate(cellElement, cellInfo) {
            const value = cellInfo.value ?? 0;
            if (value === 0) {
                $(cellElement).text('0');
                return;
            }
            const namaJalan = cellInfo.data.NamaJalan;
            const kelasJalan = cellInfo.data.KelasJalan;
            // const bulan = cellInfo.column.dataField;
            const namaBulan = cellInfo.column.dataField;
            const bulan = getBulan(namaBulan);

            const $link = $('<a>').addClass('text-primary fw-semibold')
                .attr('href', 'javascript:void(0);')
                .text(value.toLocaleString('id-ID'))
                .on('click', () => showDetailModal(namaJalan, kelasJalan, bulan));
            $(cellElement).append($link);
        }

        function showDetailModal(namaJalan, kelasJalan, bulan) {
            const tahun = new Date().getFullYear(); // Asumsikan tahun saat ini
            const url = '/ReklameLiar/Detail'; // Ganti sesuai controller & action Anda

            $.ajax({
                url: url,
                type: 'GET',
                data: {
                    namaJalan: namaJalan,
                    kelasJalan: kelasJalan,
                    bulan: bulan,
                    tahun: tahun // jika diperlukan di sisi server
                },
                beforeSend: function () {
                    $("#loader").show();

                    const $modal = $("#staticBackdropExtraLargeScrollableCenter");
                    $modal.find(".modal-title").text("");
                    $modal.find(".modal-body").html("");
                },
                success: function (response) {
                    const $modal = $("#staticBackdropExtraLargeScrollableCenter");

                    // Jika response adalah HTML
                    if (typeof response === "string" && response.trim().length > 0) {
                        $modal.find(".modal-title").html(`Detail – ${namaJalan}`);
                        $modal.find(".modal-body").html(response);
                        $modal.modal('show');
                    } else if (response.Status !== undefined) {
                        // Jika response dalam format JSON error
                        Swal.fire({
                            icon: 'warning',
                            title: 'Peringatan',
                            text: response.Message
                        });
                    } else {
                        $modal.find(".modal-title").html("Kosong");
                        $modal.find(".modal-body").html('<p class="text-center text-muted">Tidak ada data ditampilkan.</p>');
                        $modal.modal('show');
                    }
                },
                error: function () {
                    const $modal = $("#staticBackdropExtraLargeScrollableCenter");
                    $modal.find(".modal-title").html("Error");
                    $modal.find(".modal-body").html('<p class="text-danger text-center">Terjadi kesalahan saat memuat data.</p>');
                    $modal.modal('show');
                },
                complete: function () {
                    $("#loader").hide();
                }
            });
        }

    </script>

