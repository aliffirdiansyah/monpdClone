@model MonPDReborn.Models.PengawasanReklame.PencarianReklameVM.Index

@{
    ViewData["Title"] = "Pencarian Reklame";
    Layout = "_Layout";
}

<style>
    .search-wrapper {
        position: relative;
    }

        .search-wrapper .search-icon {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #888;
            pointer-events: none;
        }

        .search-wrapper input {
            padding-left: 35px; /* supaya teks tidak ketimpa ikon */
        }
</style>

<div class="row">

    <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h2 class="h5 mb-1 d-flex align-items-center text-dark">
                        <svg class="me-2" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Pencarian Data
                    </h2>
                </div>
            </div>
            <div class="card-body">
                <form id="formPencarian" onsubmit="event.preventDefault(); searchData();">

                    <div class="row gy-2">

                        <div class="col-lg-4">
                            @(Html.DevExtreme().SelectBoxFor(m => m.selectedUpaya)
                                                            .ID("namaJalanView")
                                                            .ValueExpr("Value")
                                                            .DisplayExpr("Text")
                                                            .DataSource(d => d.Mvc()
                                                            .Controller("PencarianReklame")
                                                            .LoadAction("GetNama").Key("filter"))
                                                            .SearchExpr("Text")
                                                            .SearchEnabled(true)
                                                            .Placeholder("Pilih Nama Jalan")
                                                            .MinSearchLength(3)
                                                            )
                        </div>

                        <div class="col-lg-4">
                            @(Html.DevExtreme().SelectBoxFor(m => m.lokasiUpaya)
                                                        .ID("lokasiReklameView")
                                                        .ValueExpr("Value")
                                                        .DisplayExpr("Text")
                                                        .DataSource(d => d.Mvc()
                                                        .Controller("PencarianReklame")
                                                        .LoadAction("GetLokasi").Key("filter"))
                                                        .SearchExpr("Text")
                                                        .SearchEnabled(true)
                                                        .Placeholder("Pilih Detail Lokasi")
                                                        .MinSearchLength(2)
                                                        )
                        </div>

                        <div class="col-lg-2">
                            @(Html.DevExtreme().SelectBox()
                                                .ID("statusReklameView")
                                                .DataSource(new[] {
                                                new { Value = "aktif", Text = "Aktif" },
                                                new { Value = "expired", Text = "Expired" }
                                                })
                                                .ValueExpr("Value")
                                                .DisplayExpr("Text")
                                                .Placeholder("Pilih Status Reklame")
                                                .Value("aktif") // default aktif
                                                )

                        </div>

                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-custom w-100 py-2">
                                🔍 Cari Data Reklame
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
    <div class="col-lg-12 col-sm-12">
        <div id="resultsSection" class="d-none">

            <div class="card shadow-sm">
                <!-- Header Card -->
                <div class="card-header bg-header-color d-flex align-items-center">
                    <h2 class="h5 fw-semibold text-dark mb-0">
                        Hasil Pencarian Data Reklame
                    </h2>
                </div>

                <!-- Body Card -->
                <div class="card-body">
                    <!-- Loading Indicator -->
                    <div id="loadingIndicator" class="text-center py-3 d-none">
                        <div class="spinner-border text-primary mb-2" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted small mb-0">Memuat data, mohon tunggu...</p>
                    </div>

                    <!-- Hasil AJAX akan dimuat di sini -->
                    <div id="resultsContent"></div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script>
        function searchData() {
            let namaJalan = $("#namaJalanView").dxSelectBox("instance").option("value");
            let detailLokasi = $("#lokasiReklameView").dxSelectBox("instance").option("value");
            const status = $("#statusReklameView").dxSelectBox("instance").option("value");

            // Normalisasi input (kalau kosong → null)
            namaJalan = (namaJalan && namaJalan.trim() !== "") ? namaJalan : null;
            detailLokasi = (detailLokasi && detailLokasi.trim() !== "") ? detailLokasi : null;

            // Validasi minimal salah satu terisi
            if (!namaJalan && !detailLokasi) {
                $('#resultsSection').removeClass('d-none');
                $('#resultsContent').html('<p class="text-danger">⚠ Isi minimal Nama Jalan atau Detail Lokasi!</p>');
                return; // stop sebelum AJAX
            }

            $('#loadingIndicator').removeClass('d-none');
            $('#resultsSection').removeClass('d-none');
            $('#resultsContent').html('');

            $.ajax({
                url: '@Url.Action("Show", "PencarianReklame")',
                type: 'POST',
                data: {
                    namaJalan: namaJalan,
                    detailLokasi: detailLokasi,
                    status: status
                },
                success: function (result) {
                    console.log(result);
                    $('#loadingIndicator').addClass('d-none');

                    if (result.Status === undefined) {
                        $('#resultsContent').html(result);
                    } else {
                        $('#resultsContent').html(`<p class="text-danger">⚠ ${result.Message}</p>`);
                    }

                    document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
                },
                error: function () {
                    $('#loadingIndicator').addClass('d-none');
                    $('#resultsContent').html('<p class="text-danger">⚠ Gagal memuat data. Silakan coba lagi.</p>');
                }
            });
        }



    </script>
}