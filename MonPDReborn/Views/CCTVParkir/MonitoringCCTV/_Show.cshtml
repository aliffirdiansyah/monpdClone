@model MonPDReborn.Models.CCTVParkir.MonitoringCCTVVM.Show

<div class="table-responsive">
    @(
        Html.DevExtreme().DataGrid<MonPDReborn.Models.CCTVParkir.MonitoringCCTVVM.MonitoringCCTV>()
        .ID("MonitoringCCTVGrid")
        .DataSource(Model.MonitoringCCTVList)
        .ShowBorders(true)
        .ShowColumnLines(true)
        .RowAlternationEnabled(true)
        .ShowRowLines(true)
        .ShowColumnHeaders(true)
        .ColumnAutoWidth(true)
        .Paging(p => p.PageSize(10))
        .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 5, 10, 20 })
        .ShowInfo(true)
        )
        .Columns(columns =>
        {
            columns.AddFor(m => m.Nop).Caption("NOP").Fixed(true);
            columns.AddFor(m => m.NamaOp).Caption("Nama OP");
            columns.AddFor(m => m.AlamatOp).Caption("Alamat OP");
            columns.AddFor(m => m.StatusAktif).Caption("Status Aktif");
            columns.AddFor(m => m.TglTerakhirAktif).Caption("Terakhir Aktif");

            // ✅ Kolom Action
            columns.Add()
            .Caption("Action")
            .Width(200)
            .Alignment(HorizontalAlignment.Center)
            .CellTemplate(@<text>
                <div class="d-flex justify-content-center gap-2">
                    <!-- Tombol Modal -->
                    <button class="btn btn-sm btn-primary" onclick="lihatDetailModal('<%- data.Nop %>')">
                        <i class="bi bi-eye"></i> Modal
                    </button>
                    <!-- Tombol New Tab -->
                    <button class="btn btn-sm btn-secondary" onclick="lihatDetailNewTab('<%- data.Nop %>')">
                        <i class="bi bi-box-arrow-up-right"></i> Tab Baru
                    </button>
                </div>
            </text>);
        })
        )

</div>

