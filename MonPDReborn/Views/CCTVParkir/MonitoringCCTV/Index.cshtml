@model MonPDReborn.Models.CCTVParkir.MonitoringCCTVVM.Index

@{
    ViewData["Title"] = "Monitoring CCTV Parkir";
    Layout = "_Layout";
}
<style>
    .neon-left-glow {
        border-left: 6px solid #00FFFF;
        box-shadow: -5px 0 5px #00FFFF, -10px 0 10px #00FFFF, -20px 0 20px #00FFFF, -30px 0 30px #0ff, -40px 0 40px #0ff;
        color: #00FFFF;
    }

</style>

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-header-color">
                <h4 class="card-title text-dark mb-0">Rekap Vendor Monitoring Parkir</h4>
            </div>
            <div class="card-body">
                @using DevExtreme.AspNet.Mvc

                <div class="row g-3 align-items-center mb-3">

                    @(Html.DevExtreme().SelectBox()
                                        .ID("SelectedUPTB")
                                        .Value(Model.SelectedUPTB)
                                        .DataSource(Model.JenisUptbList)
                                        .DisplayExpr("Text")
                                        .ValueExpr("Value")
                                        .SearchEnabled(true)
                                        .Value(Model.SelectedUPTB.ToString())
                                        .StylingMode(EditorStylingMode.Outlined)
                                        .ElementAttr("class", "form-select mb-3")
                                        )

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-header-color">
                <h4 class="card-title text-dark mb-0">Vendor Monitoring Parkir</h4>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
          
            loadShow();

            $("#SelectedUPTB").dxSelectBox("instance").option("onValueChanged", function (e) {
                loadShow(e.value);
            });
        });

        function loadShow(selectedUptb = null) {
            $("#loading2-Show").show();

            $.ajax({
                url: '/MonitoringCCTV/Show', 
                type: 'GET',
                data: { uptb: selectedUptb }, 
                success: function (result) {
                    $("#Show").html(result);
                },
                error: function () {
                    $("#Show").html("<div class='text-danger'>Gagal memuat data.</div>");
                },
                complete: function () {
                    $("#loading2-Show").hide();
                }
            });
        }
    </script>
    <script>
        function lihatDetailModal(nop) {
            // Tampilkan modal
            $("#staticBackdropLargeScrollable").modal("show");

            // Kosongkan / tampilkan loading spinner saat request
            $("#staticBackdropLargeScrollable .modal-body").html(`
                <div class="text-center p-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `);

            // Ambil konten detail via AJAX
            $.get('/MonitoringCCTV/Detail', { nop: nop })
                .done(function (html) {
                    $("#staticBackdropLargeScrollable .modal-body").html(html);
                })
                .fail(function () {
                    $("#staticBackdropLargeScrollable .modal-body").html(
                        `<div class="text-danger text-center p-3">
                            Gagal memuat data detail.
                        </div>`
                    );
                });
        }

        function lihatDetailNewTab(nop) {
            // Buka halaman detail di tab baru
            window.open('/MonitoringCCTV/Kapasitas?nop=' + encodeURIComponent(nop), '_blank');
        }
    </script>


}
