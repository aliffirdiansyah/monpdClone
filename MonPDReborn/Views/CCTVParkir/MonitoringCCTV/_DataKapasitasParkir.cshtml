@model MonPDReborn.Models.CCTVParkir.MonitoringCCTVVM.DataKapasitasParkir
@{

}

@(
    Html.DevExtreme().DataGrid<MonPDReborn.Models.CCTVParkir.MonitoringCCTVVM.MonitoringCCTVKapasitas>()
    .ID("vendorParkirGrid")
    .DataSource(Model.MonitoringCCTVKapasitasList)
    .ShowBorders(true)
    .ShowColumnLines(true)
    .RowAlternationEnabled(true)
    .ShowRowLines(true)
    .ShowColumnHeaders(true)
    .ColumnAutoWidth(true)
    .Paging(p => p.PageSize(10))
    .Pager(p => p
    .ShowPageSizeSelector(true)
    .AllowedPageSizes(new[] { 5, 10, 20 })
    .ShowInfo(true)
    )
    .Columns(columns =>
    {
        columns.AddFor(m => m.Tanggal).Caption("Tanggal").Format("dd MMM yyyy");
        columns.AddFor(m => m.Kapasitas).Caption("Jumlah Kendaraan").Format("#.##0");
        columns.AddFor(m => m.Tarif).Caption("Tarif").Format("#.##0");
    })
)