@model MonPDReborn.Models.CCTVParkir.VendorParkirVM.Index

@{
    ViewData["Title"] = "Vendor Parkir";
    Layout = "_Layout";
}
<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-header-color">
                <h4 class="card-title text-dark mb-0">Rekap Vendor Monitoring Parkir</h4>
            </div>
            <div class="card-body">
                @using DevExtreme.AspNet.Mvc

                <div class="row g-3 align-items-center mb-3">

                    @(Html.DevExtreme().SelectBox()
                                        .ID("SelectedUPTB")
                                        .Value(Model.SelectedUPTB)
                                        .DataSource(Model.JenisUptbList)
                                        .DisplayExpr("Text")
                                        .ValueExpr("Value")
                                        .SearchEnabled(true)
                                        .Value(Model.SelectedUPTB.ToString())
                                        .StylingMode(EditorStylingMode.Outlined)
                                        .ElementAttr("class", "form-select mb-3")
                                        )

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-header-color">
                <h4 class="card-title text-dark mb-0">Vendor Monitoring Parkir</h4>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-Show" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="Show"></div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            // ✅ Panggil Show pertama kali dengan "semua wilayah"
            loadShow();

            // ✅ Event onValueChanged di SelectBox
            $("#SelectedUPTB").dxSelectBox("instance").option("onValueChanged", function (e) {
                loadShow(e.value);
            });
        });

        function loadShow(selectedUptb = null) {
            $("#loading2-Show").show();

            $.ajax({
                url: '/VendorParkir/Show', // ✅ sesuaikan dengan action kamu
                type: 'GET',
                data: { uptb: selectedUptb }, // ✅ kirim filter (null = semua wilayah)
                success: function (result) {
                    $("#Show").html(result);
                },
                error: function () {
                    $("#Show").html("<div class='text-danger'>Gagal memuat data.</div>");
                },
                complete: function () {
                    $("#loading2-Show").hide();
                }
            });
        }
    </script>

}


