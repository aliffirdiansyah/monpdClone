@model MonPDReborn.Models.DataOP.PelaporanOPVM.Index
@{  
    ViewData["Title"] = "Dashboard Rekap Pelaporan Pajak";  
    Layout = "_Layout";
}  

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Pelaporan Pajak
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card crm-widget">
            <div class="card-body p-0">
                <div class="row row-cols-xxl-5 row-cols-md-3 row-cols-1 g-0">
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Total Wajib Pajak</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-group fs-3 text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Total Nilai Laporan</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-money fs-3 text-success"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Masa Pajak Terlapor</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-calendar-check fs-3 text-info"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Masa Pajak Belum Lapor</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-calendar-exclamation fs-3 text-warning"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Tingkat Kepatuhan</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-check-shield fs-3 text-success"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Rekap Pelaporan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="Show"></div>
                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="detailModalLabel">Detail Pelaporan</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                            </div>
                            <div class="modal-body" id="detailModalContent">
                                <!-- Konten _Detail.cshtml akan dimuat di sini -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
            // Panggil action Show di controller PelaporanOP
            $.ajax({
                url: '@Url.Action("Show", "PelaporanOP")',
                type: 'GET',
                success: function (result) {
                    $('#Show').html(result); // tampilkan hasil ke div id="Show"
                },
                error: function (xhr, status, error) {
                    console.error("Gagal memuat data _Show:", error);
                    $('#Show').html('<div class="text-danger">Gagal memuat data.</div>');
                }
            });
        });
        function onDetailClick(e) {
            const nop = e.row.data.NOP;

            if (!nop) {
                alert("NOP tidak ditemukan.");
                return;
            }

            $.ajax({
                url: '/PelaporanOP/Detail',
                type: 'GET',
                data: { nop: nop },
                success: function (response) {
                    $('#detailModalContent').html(response);
                    $('#detailModal').modal('show');
                },
                error: function () {
                    alert("Gagal memuat detail.");
                }
            });

            e.event.preventDefault(); // mencegah reload halaman
        }
    </script>
}