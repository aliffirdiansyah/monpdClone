@model MonPDReborn.Models.DataOP.PelaporanOPVM.Index
@{  
    ViewData["Title"] = "Dashboard Rekap Pelaporan Pajak";  
    Layout = "_Layout";
}  

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-0">
                        Dashboard Pelaporan Pajak
                    </h4>
                </div>
            </div>
            <div class="car-body">
                <div class="row mt-3 ms-0">

                    <div class="col-lg-3">
                        @Html.DropDownListFor(model => model.SelectedPajak,
                        new SelectList(Model.JenisPajakList, "Value", "Text"),
                                                "Pilih Jenis Pajak",
                                                new { @class = "form-select rounded-pill mb-3", @aria_label = "Default select example" })
                    </div>

                    <div class="col-lg-2">
                        <button type="button" class="btn btn-custom w-80">
                            <i class="bx bx-search-alt-2  me-1"></i> Terapkan Filter
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12" id="rekapCard">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-0">
                        Rekap Pelaporan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="Show"></div>
                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="detailModalLabel">Detail Pelaporan</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                            </div>
                            <div class="modal-body" id="detailModalContent">
                                <!-- Konten _Detail.cshtml akan dimuat di sini -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // awal: sembunyikan semua card + kontainer Show
            $('#rekapCard').hide();
            $('#Show').hide();

            // ketika tombol Terapkan Filter diklik
            $('.btn-custom').on('click', function () {
                loadData();
            });

            function loadData() {
                let jenisPajak = $('#SelectedPajak').val();

                if (!jenisPajak) {
                    jenisPajak = 0;
                }

                $.ajax({
                    url: '@Url.Action("Show", "PelaporanOP")',
                    type: 'GET',
                    data: {
                        jenisPajak: jenisPajak
                    },
                    beforeSend: function () {
                        $('#Show').html(`
                            <div class="d-flex justify-content-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        `);
                        $('#rekapCard').show();
                        $('#Show').show();
                    },
                    success: function (result) {
                        $('#Show').html(result).show();
                    },
                    error: function (xhr, status, error) {
                        console.error("Gagal memuat data _Show:", error);
                        $('#Show').html('<div class="text-danger">Gagal memuat data.</div>').show();
                    }
                });
            }
        });




        function onDetailClick(e) {
            const nop = e.row.data.NOP;

            if (!nop) {
                alert("NOP tidak ditemukan.");
                return;
            }

            $.ajax({
                url: '/PelaporanOP/Detail',
                type: 'GET',
                data: { nop: nop },
                success: function (response) {
                    $("#staticBackdropLargeScrollable .modal-title").html("Detail PELAPORAN");
                    $("#staticBackdropLargeScrollable .modal-body").html(response);
                    $("#staticBackdropLargeScrollable").modal('show');
                },
                error: function () {
                    alert("Gagal memuat detail.");
                }
            });

            e.event.preventDefault(); // mencegah reload halaman
        }
    </script>
}