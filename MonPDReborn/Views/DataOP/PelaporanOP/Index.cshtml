@model MonPDReborn.Models.DataOP.PelaporanOPVM.Index
@{  
    ViewData["Title"] = "Dashboard Rekap Pelaporan Pajak";  
    Layout = "_Layout";
}  

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Pelaporan Pajak
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card crm-widget">
            <div class="card-body p-0">
                <div class="row row-cols-xxl-5 row-cols-md-3 row-cols-1 g-0">
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Total Wajib Pajak</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-group fs-3 text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Total Nilai Laporan</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-money fs-3 text-success"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Masa Pajak Terlapor</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-calendar-check fs-3 text-info"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Masa Pajak Belum Lapor</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-calendar-exclamation fs-3 text-warning"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="py-4 px-3">
                            <h5 class="text-muted text-uppercase fs-13">Tingkat Kepatuhan</h5>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bx bx-check-shield fs-3 text-success"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h2 class="mb-0">
                                        <span class="counter-value" date-target="321">321</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Rekap Pelaporan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id=""></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function onTerapkanClick() {
            const form = $("#filterForm").dxForm("instance");
            const values = form.option("formData");

            $.ajax({
                url: '@Url.Action("Show", "PelaporanOPVM")', // ganti sesuai nama Controller
                type: 'POST',
                data: values,
                success: function (response) {
                    $("#Show").html(response);
                    $("#Show").closest(".card").show(); // tampilkan card hasil pencarian
                },
                error: function () {
                    alert("Gagal memuat data hasil pelaporan.");
                }
            });
        }

        function onResetClick() {
            const form = $("#filterForm").dxForm("instance");
            form.resetValues();
            $("#Show").closest(".card").hide();
        }
    </script>
}

