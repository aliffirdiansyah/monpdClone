@using static MonPDReborn.Models.DataOP.PADSummaryVM.ViewModels
@model MonPDReborn.Models.DataOP.PADSummaryVM.DetailUpayaAll

<div class="table-responsive">
    @(
        Html.DevExtreme().DataGrid<DetailUpayaAll>()
        .ID("detailupayaOPAllGrid")
        .DataSource(Model.Data)
        .ShowBorders(true)
        .ShowColumnHeaders(true)
        .ShowColumnLines(true)
        .ShowRowLines(true)
        .AllowColumnResizing(true)
        .RowAlternationEnabled(true)
        .ColumnAutoWidth(true)
            .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
            .FilterRow(f => f.Visible(true))
            .HeaderFilter(h => h.Visible(true))
            .Sorting(s => s.Mode(GridSortingMode.Multiple))
        .Paging(p => p.PageSize(20))
        .Pager(p => p
            .ShowPageSizeSelector(true)
            .AllowedPageSizes(new[] { 10, 20, 50 })
            .ShowInfo(true)
        )
        .SearchPanel(sp => sp
            .Visible(true)
            .Width(240)
            .Placeholder("Cari...")
        )
        .Export(e => e.Enabled(true).AllowExportSelectedData(false).Formats(new[] { "xlsx", "pdf" }))
        .OnExporting("exportGrid")
        .Columns(columns =>
        {
            columns.AddFor(m => m.FormattedNOP).Caption("NOP").CellTemplate(new JS("detailOPCellTemplate"));
            columns.AddFor(m => m.NamaOP).Caption("Nama OP");
            columns.AddFor(m => m.Alamat).Caption("Alamat OP");
            columns.AddFor(m => m.Wilayah).Caption("Wilayah Pajak");
            columns.AddFor(m => m.Petugas).Caption("Petugas");
            columns.AddFor(m => m.WajibPajak).Caption("Wajib Pajak/Perwakilan");
            columns.AddFor(m => m.TglUpaya).Caption("Tgl Upaya");
            columns.Add()
            .Caption("Aksi")
            .Width("18%")
            .CellTemplate(@<text>
                <button class="btn btn-sm btn-outline-primary me-1"
                        title="Lihat Dokumen"
                        onclick="lihatFile('@Model.Data.FirstOrDefault().Nip','@Model.Data.FirstOrDefault().Nop', <%- data.IdAktifitas %>, <%- data.Seq %>, 'dokumen')">
                    📄 Dokumen
                </button>
                <button class="btn btn-sm btn-outline-success"
                        title="Lihat Foto"
                        onclick="lihatFile('@Model.Data.FirstOrDefault().Nip','@Model.Data.FirstOrDefault().Nop', <%- data.IdAktifitas %>, <%- data.Seq %>, 'foto')">
                    🖼 Foto
                </button>
            </text>);
        })
    @* .Summary(summary =>
        {
            summary.TotalItems(items =>
            {
                items.AddFor(m => m.Alamat)
            .SummaryType(SummaryType.Sum)
            .DisplayFormat("Total");
                items.AddFor(m => m.SudahBayar)
            .SummaryType(SummaryType.Sum)
            .ValueFormat("#,##0")
            .DisplayFormat("{0}");
            });
        }) *@
        )
</div>

<script>
    function lihatFile(nip, nop, idAktifitas, seq, tipe) {
        let inputFile;
        let fileUrl = null;

        // Ambil elemen file input berdasarkan tipe
        if (tipe === 'dokumen') {
            inputFile = document.getElementById('FileData');
        } else if (tipe === 'foto') {
            inputFile = document.getElementById('FotoData');
        }

        // Jika user baru upload file (belum disimpan ke DB)
        if (inputFile && inputFile.files.length > 0) {
            const file = inputFile.files[0];
            fileUrl = URL.createObjectURL(file);
            window.open(fileUrl, '_blank');
            return;
        }

        // Jika belum ada file dari upload, ambil dari server
        fileUrl = `/PADSummary/LihatFile?nip=${nip}&nop=${nop}&idAktifitas=${idAktifitas}&seq=${seq}&tipe=${tipe}`;
        window.open(fileUrl, '_blank');
    }
</script>