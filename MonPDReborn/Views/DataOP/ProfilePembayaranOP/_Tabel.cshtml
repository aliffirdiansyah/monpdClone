@model MonPDReborn.Models.DataOP.ProfilePembayaranOPVM.DataTahunPembayaran

<table class="table table-hover table-bordered align-middle">
    <thead class="table-light text-center">
        <tr>
            <th style="width: 30%;">Bulan</th>
            <th style="width: 35%;">Tanggal SSPD</th>
            <th style="width: 35%;">Realisasi</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataRealisasi != null && Model.DataRealisasi.Any())
        {
            foreach (var item in Model.DataRealisasi)
            {
                <tr>
                    <td class="text-start">@item.Bulan</td>
                    <td class="text-center">
                        @(item.TglSSPD.HasValue
                                        ? item.TglSSPD.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))
                                        : "-")
            </td>
            <td class="text-end fw-semibold text-success">@item.Realisasi.ToString("N0")</td>
        </tr>
                }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">Tidak ada data realisasi untuk tahun ini.</td>
            </tr>
        }
    </tbody>
</table>

