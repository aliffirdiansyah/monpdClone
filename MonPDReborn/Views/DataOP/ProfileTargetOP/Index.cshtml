@using Microsoft.AspNetCore.Html
@{
    ViewBag.Title = "Dashboard Pajak Daerah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@functions {
    public class PajakCardVM
    {
        public string Nama { get; set; }
        public long Realisasi { get; set; }
        public long Target { get; set; }
        public double Persen { get; set; }
        public string Warna { get; set; }
    }
}

@{
    var data = new List<PajakCardVM> {
        new PajakCardVM { Nama = "HOTEL", Realisasi = 157488112804, Target = 405688598057, Persen = 38.82, Warna = "bg-primary" },
        new PajakCardVM { Nama = "Restoran", Realisasi = 350297388845, Target = 736275239787, Persen = 47.58, Warna = "bg-warning" },
        new PajakCardVM { Nama = "Parkir", Realisasi = 26088243125, Target = 62125343640, Persen = 41.99, Warna = "bg-success" },
        new PajakCardVM { Nama = "Hiburan", Realisasi = 42251035335, Target = 102064401727, Persen = 41.40, Warna = "bg-info" },
        new PajakCardVM { Nama = "PPJ", Realisasi = 334208226980, Target = 766551662201, Persen = 43.60, Warna = "bg-primary" },
        new PajakCardVM { Nama = "PBB", Realisasi = 1124097071321, Target = 1738731114918, Persen = 64.65, Warna = "bg-warning" },
        new PajakCardVM { Nama = "BPHTB", Realisasi = 500107235224, Target = 1645077374811, Persen = 30.40, Warna = "bg-success" },
        new PajakCardVM { Nama = "Reklame", Realisasi = 62899164675, Target = 178291170763, Persen = 35.28, Warna = "bg-info" },
        new PajakCardVM { Nama = "AirTanah", Realisasi = 748379710, Target = 1435906440, Persen = 52.12, Warna = "bg-primary" },
        new PajakCardVM { Nama = "OPSEN PKB", Realisasi = 313030965302, Target = 1046318203819, Persen = 29.92, Warna = "bg-warning" },
        new PajakCardVM { Nama = "OPSEN BBNKB", Realisasi = 157562052248, Target = 625192983163, Persen = 25.20, Warna = "bg-success" },
        new PajakCardVM { Nama = "Total Pajak Daerah", Realisasi = 3068777875569, Target = 7307751999326, Persen = 41.99, Warna = "bg-success text-white" }
    };
}

<div class="container-fluid p-3">
    <div class="row">
        @foreach (var item in data)
        {
            <div class="col-md-4 col-lg-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body d-flex">
                        <div class="me-3">
                            <div class="rounded p-2 text-white fw-bold text-center @item.Warna" style="min-width:60px">
                                @item.Persen.ToString("0.00") %
                            </div>
                        </div>
                        <div>
                            <div class="fw-semibold">@item.Nama</div>
                            <div class="small text-muted">@String.Format("{0:N0}", item.Realisasi) / @String.Format("{0:N0}", item.Target)</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
