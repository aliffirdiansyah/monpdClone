                                                                    rumus.Add("((Jumlah Truk/Bus Terparkir Weekdays x Tarif x 22 Hari) + (Jumlah Truk/Bus Terparkir Weekend x Tarif x 8 Hari))");
                                                                }
                                                                if (Model.KapasitasTrailer > 0)
