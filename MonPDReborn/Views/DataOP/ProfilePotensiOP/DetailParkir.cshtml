@using MonPDReborn.Models.DataOP
@model ProfilePotensiOPVM.DetailPotensiPajakParkir

@{
    Layout = "_Layout";
    ViewData["Title"] = "Detail Potensi Parkir";
}
@if (Model != null)
{
    <div class="row">

        <div class="col-lg-12">
            <div class="card border border-secondary border-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="d-flex p-3">
                                <div class="flex-shrink-0">
                                    <div class="avatar-md me-3">
                                        <span class="avatar-title bg-soft-secondary rounded-circle fs-1">
                                            <i class="ri-parking-line text-secondary"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-1">
                                    <h4 class="fs-16 fw-semibold text-dark">
                                        @Model.Nama
                                    </h4>
                                    <p class="fs-16 lh-base text-dark mb-1">
                                        @Model.Alamat
                                    </p>
                                    <p class="fs-16 text-dark">
                                        @Model.FormattedNOP
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-secondary bg-opacity-25">
                                    <div class="d-flex p-3">
                                        <h3 class="fs-16 fw-semibold text-dark">
                                            Potensi Pajak
                                        </h3>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Per Bulan</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-16 fw-bold text-dark">Rp. @Model.PotensiPajakPerBulan.ToString("N0")</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Per Tahun</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-16 fw-bold text-dark">Rp. @Model.PotensiPajakPerTahun.ToString("N0")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0 text-dark">
                            Kapasitas Parkir dan Tarif
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @if (Model.KapasitasMotor > 0)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex p-3">
                                            <div class="flex-shrink-0">
                                                <div class="avatar-sm me-3">
                                                    <span class="avatar-title bg-soft-secondary rounded-circle">
                                                        <i class="ri-e-bike-fill text-secondary" style="font-size: 16px;"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-grow-1 align-items-center">
                                                <div>
                                                    <h4 class="fs-14 fw-semibold mb-1 text-dark">Sepeda Motor</h4>
                                                    <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasMotor Unit</p>
                                                </div>
                                                <div class="ms-auto my-auto">
                                                    <p class="fs-14 fw-semibold mb-0">Rp. @Model.TarifMotor.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.KapasitasMobil > 0)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex p-3">
                                            <div class="flex-shrink-0">
                                                <div class="avatar-sm me-3">
                                                    <span class="avatar-title bg-soft-secondary rounded-circle">
                                                        <i class="ri-car-fill text-secondary" style="font-size: 16px;"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-grow-1 align-items-center">
                                                <div>
                                                    <h4 class="fs-14 fw-semibold mb-1 text-dark">Mobil</h4>
                                                    <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasMobil Unit</p>
                                                </div>
                                                <div class="ms-auto my-auto">
                                                    <p class="fs-14 fw-semibold mb-0">Rp. @Model.TarifMobil.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.KapasitasSepeda > 0)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex p-3">
                                            <div class="flex-shrink-0">
                                                <div class="avatar-sm me-3">
                                                    <span class="avatar-title bg-soft-secondary rounded-circle">
                                                        <i class="ri-bike-line text-secondary" style="font-size: 16px;"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-grow-1 align-items-center">
                                                <div>
                                                    <h4 class="fs-14 fw-semibold mb-1 text-dark">Sepeda</h4>
                                                    <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasSepeda Unit</p>
                                                </div>
                                                <div class="ms-auto my-auto">
                                                    <p class="fs-14 fw-semibold mb-0">Rp. @Model.TarifSepeda.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.KapasitasTrukMini > 0)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex p-3">
                                            <div class="flex-shrink-0">
                                                <div class="avatar-sm me-3">
                                                    <span class="avatar-title bg-soft-secondary rounded-circle">
                                                        <i class="ri-truck-fill text-secondary" style="font-size: 16px;"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-grow-1 align-items-center">
                                                <div>
                                                    <h4 class="fs-14 fw-semibold mb-1 text-dark">Truk Mini</h4>
                                                    <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasTrukMini Unit</p>
                                                </div>
                                                <div class="ms-auto my-auto">
                                                    <p class="fs-14 fw-semibold mb-0">Rp. @Model.TarifTrukMini.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.KapasitasTrukBus > 0)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex p-3">
                                            <div class="flex-shrink-0">
                                                <div class="avatar-sm me-3">
                                                    <span class="avatar-title bg-soft-secondary rounded-circle">
                                                        <i class="ri-bus-fill text-secondary" style="font-size: 16px;"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-grow-1 align-items-center">
                                                <div>
                                                    <h4 class="fs-14 fw-semibold mb-1 text-dark">Truk / Bus</h4>
                                                    <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasTrukBus Unit</p>
                                                </div>
                                                <div class="ms-auto my-auto">
                                                    <p class="fs-14 fw-semibold mb-0">Rp. @Model.TarifTrukBus.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.KapasitasTrailer > 0)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex p-3">
                                            <div class="flex-shrink-0">
                                                <div class="avatar-sm me-3">
                                                    <span class="avatar-title bg-soft-secondary rounded-circle">
                                                        <i class="ri-truck-line text-secondary" style="font-size: 16px;"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-grow-1 align-items-center">
                                                <div>
                                                    <h4 class="fs-14 fw-semibold mb-1 text-dark">Trailer</h4>
                                                    <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasTrailer Unit</p>
                                                </div>
                                                <div class="ms-auto my-auto">
                                                    <p class="fs-14 fw-semibold mb-0">Rp. @Model.TarifTrailer.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-lg-6">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-light bg-opacity-25">
                                    <h4 class="fs-16 fw-semibold mb-3">
                                        Distribusi Kapasitas
                                    </h4>
                                    @{
                                        var persenSepeda = (Model.TotalKapasitas == 0 ? 0 : (decimal)Model.KapasitasSepeda / Model.TotalKapasitas * 100)
                                        .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);

                                        var persenMotor = (Model.TotalKapasitas == 0 ? 0 : (decimal)Model.KapasitasMotor / Model.TotalKapasitas * 100)
                                        .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);

                                        var persenMobil = (Model.TotalKapasitas == 0 ? 0 : (decimal)Model.KapasitasMobil / Model.TotalKapasitas * 100)
                                        .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);

                                        var persenTruckMini = (Model.TotalKapasitas == 0 ? 0 : (decimal)Model.KapasitasTrukMini / Model.TotalKapasitas * 100)
                                        .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);

                                        var persenTrukBus = (Model.TotalKapasitas == 0 ? 0 : (decimal)Model.KapasitasTrukBus / Model.TotalKapasitas * 100)
                                        .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);

                                        var persenTrailer = (Model.TotalKapasitas == 0 ? 0 : (decimal)Model.KapasitasTrailer / Model.TotalKapasitas * 100)
                                        .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);
                                    }
                                    <div class="progress mb-3" style="height: 20px;">
                                        @if (Model.KapasitasSepeda > 0)
                                        {
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar"
                                                 style="width: @persenSepeda%;" aria-valuenow="@Model.KapasitasSepeda"
                                                 aria-valuemin="0" aria-valuemax="@Model.TotalKapasitas">
                                                @persenSepeda%
                                            </div>
                                        }
                                        @if (Model.KapasitasMotor > 0)
                                        {
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar"
                                                 style="width: @persenMotor%;" aria-valuenow="@Model.KapasitasMotor"
                                                 aria-valuemin="0" aria-valuemax="@Model.TotalKapasitas">
                                                @persenMotor%
                                            </div>
                                        }
                                        @if (Model.KapasitasMobil > 0)
                                        {
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar"
                                                 style="width: @persenMobil%;" aria-valuenow="@Model.KapasitasMobil"
                                                 aria-valuemin="0" aria-valuemax="@Model.TotalKapasitas">
                                                @persenMobil%
                                            </div>
                                        }
                                        @if (Model.KapasitasTrukMini > 0)
                                        {
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar"
                                                 style="width: @persenTruckMini%;" aria-valuenow="@Model.KapasitasTrukMini"
                                                 aria-valuemin="0" aria-valuemax="@Model.TotalKapasitas">
                                                @persenTruckMini%
                                            </div>
                                        }
                                        @if (Model.KapasitasTrukBus > 0)
                                        {
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar"
                                                 style="width: @persenTrukBus%;" aria-valuenow="@Model.KapasitasTrukBus"
                                                 aria-valuemin="0" aria-valuemax="@Model.TotalKapasitas">
                                                @persenTrukBus%
                                            </div>
                                        }
                                        @if (Model.KapasitasTrailer > 0)
                                        {
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar"
                                                 style="width: @persenTrailer%;" aria-valuenow="@Model.KapasitasTrailer"
                                                 aria-valuemin="0" aria-valuemax="@Model.TotalKapasitas">
                                                @persenTrailer%
                                            </div>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        @if (Model.KapasitasSepeda > 0)
                                        {
                                            <h6 class="px-3 fs-6">
                                                <span class="badge bg-primary">@persenSepeda%</span> = Sepeda
                                            </h6>
                                        }
                                        @if (Model.KapasitasMotor > 0)
                                        {
                                            <h6 class="px-3 fs-6">
                                                <span class="badge bg-success">@persenMotor%</span> = Motor
                                            </h6>
                                        }
                                        @if (Model.KapasitasMobil > 0)
                                        {
                                            <h6 class="px-3 fs-6">
                                                <span class="badge bg-info">@persenMobil%</span> = Mobil
                                            </h6>
                                        }
                                        @if (Model.KapasitasTrukMini > 0)
                                        {
                                            <h6 class="px-3 fs-6">
                                                <span class="badge bg-warning">@persenTruckMini%</span> = Truk Mini
                                            </h6>
                                        }
                                        @if (Model.KapasitasTrukBus > 0)
                                        {
                                            <h6 class="px-3 fs-6">
                                                <span class="badge bg-danger">@persenTrukBus%</span> = Truk/Bus
                                            </h6>
                                        }
                                        @if (Model.KapasitasTrailer > 0)
                                        {
                                            <h6 class="px-3 fs-6">
                                                <span class="badge bg-secondary">@persenTrailer%</span> = Trailer
                                            </h6>
                                        }
                                    </div>
                                    <br />

                                    <h4 class="fs-14 fw-semibold mb-3 text-center mb-1">
                                        Total Kapasitas @Model.TotalKapasitas.ToString("N0") Kendaraan
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0 text-dark">
                            Detail Kendaraan Terparkir
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-soft-secondary bg-opacity-25">
                                    <div class="text-center">
                                        <h3 class="fs-18 fw-semibold mb-1 text-dark">
                                            @Model.TotalTerparkirWeekdays.ToString("N0")
                                        </h3>
                                        <h4 class="fs-14">
                                            Kendaraan Terparkir Hari Kerja
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card border border-warning border-2">
                                <div class="card-body bg-soft-warning bg-opacity-25">
                                    <div class="text-center">
                                        <h3 class="fs-18 fw-semibold mb-1 text-dark">
                                            @Model.TotalTerparkirWeekend.ToString("N0")
                                        </h3>
                                        <h4 class="fs-14">
                                            Kendaraan Terparkir Akhir Pekan
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <table class="table table-bordered table-striped">
                                        <thead class="table-secondary">
                                            <tr>
                                                <th>Jenis Kendaraan</th>
                                                <th>Kapasitas</th>
                                                <th>Terparkir (WeekDays)</th>
                                                <th>Terparkir (WeekEnd)</th>
                                                <th>Tarif</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.KapasitasMotor > 0)
                                            {
                                                <tr>
                                                    <td class="text-dark">Motor</td>
                                                    <td>@Model.KapasitasMotor.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirMotorWeekdays.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirMotorWeekend.ToString("N0")</td>
                                                    <td class="text-end">Rp. @Model.TarifMotor.ToString("N0")</td>
                                                </tr>
                                            }
                                            @if (Model.KapasitasMobil > 0)
                                            {
                                                <tr>
                                                    <td class="text-dark">Mobil</td>
                                                    <td>@Model.KapasitasMobil.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirMobilWeekdays.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirMobilWeekend.ToString("N0")</td>
                                                    <td class="text-end">Rp. @Model.TarifMobil.ToString("N0")</td>
                                                </tr>
                                            }
                                            @if (Model.KapasitasSepeda > 0)
                                            {
                                                <tr>
                                                    <td class="text-dark">Sepeda</td>
                                                    <td>@Model.KapasitasSepeda.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirSepedaWeekdays.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirSepedaWeekend.ToString("N0")</td>
                                                    <td class="text-end">Rp. @Model.TarifSepeda.ToString("N0")</td>
                                                </tr>
                                            }
                                            @if (Model.KapasitasTrukMini > 0)
                                            {
                                                <tr>
                                                    <td class="text-dark">Truk Mini</td>
                                                    <td>@Model.KapasitasTrukMini.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirTrukMiniWeekdays.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirTrukMiniWeekend.ToString("N0")</td>
                                                    <td class="text-end">Rp. @Model.TarifTrukMini.ToString("N0")</td>
                                                </tr>
                                            }
                                            @if (Model.KapasitasTrukBus > 0)
                                            {
                                                <tr>
                                                    <td class="text-dark">Truk/Bus</td>
                                                    <td>@Model.KapasitasTrukBus.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirTrukBusWeekdays.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirTrukBusWeekend.ToString("N0")</td>
                                                    <td class="text-end">Rp. @Model.TarifTrukBus.ToString("N0")</td>
                                                </tr>
                                            }
                                            @if (Model.KapasitasTrailer > 0)
                                            {
                                                <tr>
                                                    <td class="text-dark">Trailer</td>
                                                    <td>@Model.KapasitasTrailer.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirTrailerWeekdays.ToString("N0")</td>
                                                    <td>@Model.JumlahTerparkirTrailerWeekend.ToString("N0")</td>
                                                    <td class="text-end">Rp. @Model.TarifTrailer.ToString("N0")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="mt-2">
                                        @if (Model.KapasitasMotor > 0)
                                        {
                                            <hr />
                                            <h4 class="fs-16 fw-semibold mb-2">Perhitungan Kapasitas Sepeda Motor Hari Kerja</h4>
                                            <p class="fs-14 text-muted mb-1 font-monospace">
                                                Sepeda Motor Terparkir Hari Kerja = Turnover Hari Kerja x Kapasitas Sepeda Motor
                                            </p>
                                            <p class="fs-14 fw-semibold text-dark">
                                                Sepeda Motor Terparkir Hari Kerja = @Model.TurnoverWeekdays.ToString("N2") x @Model.KapasitasMotor.ToString("N0") = @Model.JumlahTerparkirMotorWeekdays.ToString("N0")
                                            </p>
                                            <h4 class="fs-16 fw-semibold mb-2">Perhitungan Kapasitas Sepeda Motor Akhir Pekan</h4>
                                            <p class="fs-14 text-muted mb-1 font-monospace">
                                                Sepeda Motor Terparkir Akhir Pekan = Turnover Akhir Pekan x Kapasitas Sepeda Motor
                                            </p>
                                            <p class="fs-14 fw-semibold text-dark">
                                                Sepeda Motor Terparkir Akhir Pekan = @Model.TurnoverWeekend.ToString("N2") x @Model.KapasitasMotor.ToString("N0") = @Model.JumlahTerparkirMotorWeekend.ToString("N0")
                                            </p>

                                        }
                                        @if (Model.KapasitasMobil > 0)
                                        {
                                            <hr />
                                            <h4 class="fs-16 fw-semibold mb-2">Perhitungan Kapasitas Mobil Hari Kerja</h4>
                                            <p class="fs-14 text-muted mb-1 font-monospace">
                                                Mobil Terparkir Hari Kerja = Turnover Hari Kerja x Kapasitas Mobil
                                            </p>
                                            <p class="fs-14 fw-semibold text-dark">
                                                Mobil Terparkir Hari Kerja = @Model.TurnoverWeekdays.ToString("N2") x @Model.KapasitasMobil.ToString("N0") = @Model.JumlahTerparkirMobilWeekdays.ToString("N0")
                                            </p>
                                            <h4 class="fs-16 fw-semibold mb-2">Perhitungan Kapasitas Mobil Akhir Pekan</h4>
                                            <p class="fs-14 text-muted mb-1 font-monospace">
                                                Mobil Terparkir Akhir Pekan = Turnover Akhir Pekan x Kapasitas Mobil
                                            </p>
                                            <p class="fs-14 fw-semibold text-dark">
                                                Mobil Terparkir Akhir Pekan = @Model.TurnoverWeekend.ToString("N2") x @Model.KapasitasMobil.ToString("N0") = @Model.JumlahTerparkirMobilWeekend.ToString("N0")
                                            </p>
                                        }
                                        @if (Model.KapasitasSepeda > 0)
                                        {
                                            <hr />
                                            <h4 class="fs-16 fw-semibold mb-2">Perhitungan Kapasitas Sepeda Hari Kerja</h4>
                                            <p class="fs-14 text-muted mb-1 font-monospace">
                                                Sepeda Terparkir Hari Kerja = Turnover Hari Kerja x Kapasitas Sepeda
                                            </p>
                                            <p class="fs-14 fw-semibold text-dark">
                                                Sepeda Terparkir Hari Kerja = @Model.TurnoverWeekdays.ToString("N2") x @Model.KapasitasSepeda.ToString("N0") = @Model.JumlahTerparkirSepedaWeekdays.ToString("N0")
                                            </p>
                                            <h4 class="fs-16 fw-semibold mb-2">Perhitungan Kapasitas Sepeda Akhir Pekan</h4>
                                            <p class="fs-14 text-muted mb-1 font-monospace">
                                                Sepeda Terparkir Akhir Pekan = Turnover Akhir Pekan x Kapasitas Sepeda
