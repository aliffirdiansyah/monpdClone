                                                                    rumus.Add("((Jumlah Mobil Terparkir Weekdays x Tarif x 22 Hari) + (Jumlah Mobil Terparkir Weekend x Tarif x 8 Hari))");
                                                                }
                                                                if (Model.KapasitasTrukMini > 0)
                                                                {
                                                                    rumus.Add("((Jumlah Truk Mini Terparkir Weekdays x Tarif x 22 Hari) + (Jumlah Truk Mini Terparkir Weekend x Tarif x 8 Hari))");
                                                                }
