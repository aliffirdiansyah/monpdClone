@using MonPDReborn.Models.DataOP
@model ProfilePotensiOPVM.DetailPotensiPajakParkir

@{
    Layout = "_Layout";
    ViewData["Title"] = "Detail Potensi Parkir";
}
@if (Model != null)
{
    <div class="row">

        <div class="col-lg-12">
            <div class="card border border-secondary border-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="d-flex p-3">
                                <div class="flex-shrink-0">
                                    <div class="avatar-md me-3">
                                        <span class="avatar-title bg-soft-secondary rounded-circle fs-1">
                                            <i class="ri-parking-line text-secondary"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <h4 class="fs-16 fw-semibold">
                                        @Model.Nama
                                    </h4>
                                    <p class="fs-16 lh-base">
                                        @Model.Alamat
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="d-flex p-3">
                                <h3 class="fs-16 fw-semibold">
                                    Potensi Pajak
                                </h3>
                            </div>
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Per Bulan</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-16 fw-semibold">@Model.PotensiPajakPerBulan.ToString("C")</p>
                                </div>
                            </div>
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Per Tahun</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-16 fw-semibold">@Model.PotensiPajakPerTahun.ToString("C")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="d-flex p-3">
                                <div class="flex-shrink-0 ms-3">
                                    <p class="fs-14 text-muted mb-1">NOP</p>
                                    <p class="fs-14 fw-semibold mb-3">@Model.NOP</p>
                                </div>
                                <div class="flex-shrink-0 ms-5">
                                    <p class="fs-14 text-muted mb-1">Total Kapasitas</p>
                                    <p class="fs-14 fw-semibold mb-3">@Model.TotalKapasitas</p>
                                </div>
                                <div class="flex-shrink-0 ms-3">
                                    <p class="fs-14 text-muted mb-1">Turnover</p>
                                    <p class="fs-14 fw-semibold mb-3">0,00 Hari Kerja | 0,00 Akhir Pekan</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Kapasitas Parkir dan Tarif
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex p-3">
                                        <div class="flex-shrink-0">
                                            <div class="avatar-sm me-3">
                                                <span class="avatar-title bg-soft-secondary rounded-circle">
                                                    <i class="ri-e-bike-fill text-secondary" style="font-size: 16px;"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-grow-1 align-items-center">
                                            <div>
                                                <h4 class="fs-14 fw-semibold mb-1">Sepeda Motor</h4>
                                                <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasMotor Unit</p>
                                            </div>
                                            <div class="ms-auto my-auto">
                                                <p class="fs-14 fw-semibold mb-0">@Model.TarifMotor.ToString("C")</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3">
                                        <div class="flex-shrink-0">
                                            <div class="avatar-sm me-3">
                                                <span class="avatar-title bg-soft-secondary rounded-circle">
                                                    <i class="ri-car-fill text-secondary" style="font-size: 16px;"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-grow-1 align-items-center">
                                            <div>
                                                <h4 class="fs-14 fw-semibold mb-1">Mobil</h4>
                                                <p class="fs-14 lh-base mb-0">Kapasitas : @Model.KapasitasMobil Unit</p>
                                            </div>
                                            <div class="ms-auto my-auto">
                                                <p class="fs-14 fw-semibold mb-0">@Model.TarifMobil.ToString("C")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-light bg-opacity-25">
                                    <h4 class="fs-16 fw-semibold mb-3">
                                        Distribusi Kapasitas
                                    </h4>
                                    <!-- Multiple Bars -->
                                    <div class="progress mb-4" style="height:20px">
                                        <div class="progress-bar" role="progressbar"
                                             style="width: @Model.PersentaseKapasitasMotor.ToString("N0")%;"
                                             aria-valuenow="@Model.KapasitasMotor.ToString("N0")"
                                             aria-valuemin="0" aria-valuemax="100">
                                            @Model.PersentaseKapasitasMotor.ToString("P2")
                                        </div>
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @Model.PersentaseKapasitasMobil.ToString("N0")%;"
                                             aria-valuenow="@Model.KapasitasMobil.ToString("N0")"
                                             aria-valuemin="0" aria-valuemax="100">
                                            @Model.PersentaseKapasitasMobil.ToString("P2")
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <h6 class="px-3 fs-6">
                                            <span class="badge bg-primary">@Model.PersentaseKapasitasMotor.ToString("P2")</span> = Motor
                                        </h6>
                                        <h6 class="px-3 fs-6">
                                            <span class="badge bg-info">@Model.PersentaseKapasitasMobil.ToString("P2")</span> = Mobil
                                        </h6>
                                    </div>
                                    <br />

                                    <h4 class="fs-14 fw-semibold mb-3 text-center mb-1">
                                        Total Kapasitas @Model.TotalKapasitas.ToString("N0") Kendaraan
                                    </h4>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="card border border-secondary border-2">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="avatar-md ri-information-line text-secondary fs-3"></i>
                                        </div>
                                        <div class="flex-grow-1 px-3 mt-2">
                                            <h4 class="fs-16 fw-semibold mb-1">
                                                Informasi Turnover
                                            </h4>
                                        </div>
                                    </div>
                                    <p class="fs-14 text-muted mb-1">
                                        Turnover parkir menunjukan tingkat pergantian kendaraan yang parkir. Tempat parkir memiliki turnover @Model.TurnoverWeekdays pada hari kerja dan @Model.TurnoverWeekend pada akhir pekan. Turnover tersebut menunjukan aktivitas parkir yang lebih tinggi pada akhir pekan.
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Detail Kendaraan Terparkir
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-soft-secondary bg-opacity-25">
                                    <div class="text-center">
                                        <h3 class="fs-18 fw-semibold mb-1">
                                            @Model.TotalTerparkirWeekdays
                                        </h3>
                                        <h4 class="fs-14">
                                            Kendaraan terparkir Hari Kerja
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card border border-warning border-2">
                                <div class="card-body bg-soft-warning bg-opacity-25">
                                    <div class="text-center">
                                        <h3 class="fs-18 fw-semibold mb-1">
                                            @Model.TotalTerparkirWeekend
                                        </h3>
                                        <h4 class="fs-14">
                                            Kendaraan Terparkir Akhir Pekan
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <table class="table table-bordered table-striped">
                                        <thead class="table-secondary">
                                            <tr>
                                                <th>Jenis Kendaraan</th>
                                                <th>Kapasitas</th>
                                                <th>Terparkir (Hari Kerja)</th>
                                                <th>Terparkir (Akhir Pekan)</th>
                                                <th>Tarif</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Motor</td>
                                                <td>@Model.KapasitasMotor.ToString("N0")</td>
                                                <td>@Model.JumlahTerparkirMotorWeekdays.ToString("N0")</td>
                                                <td>@Model.JumlahTerparkirMotorWeekend.ToString("N0")</td>

                                                <td class="text-end">@Model.TarifMotor.ToString("C")</td>
                                            </tr>
                                            <tr>
                                                <td>Mobil</td>
                                                <td>@Model.KapasitasMobil.ToString("N0")</td>
                                                <td>@Model.JumlahTerparkirMobilWeekdays.ToString("N0")</td>
                                                <td>@Model.JumlahTerparkirMobilWeekend.ToString("N0")</td>
                                                <td class="text-end">@Model.TarifMobil.ToString("C")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="flex-grow-1">
                                        <h4 class="card-title fs-14 mb-0">
                                            Sepeda Motor
                                        </h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Kapasitas</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.KapasitasMotor Unit</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Terparkir Hari Kerja</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.JumlahTerparkirMotorWeekdays Unit (@Model.PersentaseMotorWeekdays.ToString("P2"))</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Terparkir Akhir Pekan</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.JumlahTerparkirMotorWeekend Unit (@Model.PersentaseMotorWeekend.ToString("P2"))</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Tarif</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.TarifMotor.ToString("C")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="flex-grow-1">
                                        <h4 class="card-title fs-14 mb-0">
                                            Mobil
                                        </h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Kapasitas</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.KapasitasMobil Unit</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Terparkir Hari Kerja</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.JumlahTerparkirMobilWeekdays Unit (@Model.PersentaseMobilWeekdays.ToString("P2"))</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Terparkir Akhir Pekan</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.JumlahTerparkirMobilWeekend Unit (@Model.PersentaseMobilWeekend.ToString("P2"))</p>
                                        </div>
                                    </div>
                                    <div class="d-flex p-3 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Tarif</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.TarifMobil.ToString("C")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Detail Omzet
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="avatar-sm me-3 mb-2">
                                        <span class="avatar-title bg-soft-secondary rounded-circle">
                                            <i class="ri-e-bike-fill text-secondary" style="font-size: 16px;"></i>
                                        </span>
                                    </div>
                                    <h4 class="fs-14 fw-semibold mb-2">
                                        @Model.OmzetMotor.ToString("C")
                                    </h4>
                                    <p class="fs-12 text-muted mb-1">
                                        Omzet Sepeda Motor
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="avatar-sm me-3 mb-2">
                                        <span class="avatar-title bg-soft-secondary rounded-circle">
                                            <i class="ri-car-fill text-secondary" style="font-size: 16px;"></i>
                                        </span>
                                    </div>
                                    <h4 class="fs-14 fw-semibold mb-2">
                                        @Model.OmzetMobil.ToString("C")
                                    </h4>
                                    <p class="fs-12 text-muted mb-1">
                                        Omzet Mobil
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card border border-secondary border-2 h-100">
                                <div class="card-body bg-soft-secondary bg-opacity-25 d-flex flex-column justify-content-center">
                                    <h4 class="fs-16 fw-semibold mb-3 text-center">
                                        Total Omzet Bulanan
                                    </h4>
                                    <h4 class="fs-22 fw-bold mb-1 text-center">
                                        @Model.TotalOmzet.ToString("C")
                                    </h4>
                                    <p class="fs-14 text-muted mb-1 text-center">Total pendapatan dari parkir</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="card border border-secondary border-2 mt-3">
                                <div class="card-body bg-light bg-opacity-25">
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Perhitungan Omzet Sepeda Motor :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1 font-monospace">
                                        (@Model.JumlahTerparkirMotorWeekdays.ToString("N0") x @Model.TarifMotor.ToString("C") x 22 Hari) + (@Model.JumlahTerparkirMotorWeekend.ToString("N0") x @Model.TarifMotor.ToString("C") x 8 Hari)
                                    </p>
                                    <p class="fs-14 text-muted mb-3 fw-semibold">
                                        = @Model.OmzetMotor.ToString("C")
                                    </p>

                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Perhitungan Omzet Mobil :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1 font-monospace">
                                        (@Model.JumlahTerparkirMobilWeekdays.ToString("N0") x @Model.TarifMobil.ToString("C") x 22 Hari) + (@Model.JumlahTerparkirMobilWeekend.ToString("N0") x @Model.TarifMobil.ToString("C") x 8 Hari)
                                    </p>
                                    <p class="fs-14 text-muted mb-3 fw-semibold">
                                        = @Model.OmzetMobil.ToString("C")
                                    </p>

                                    <hr>

                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Total Omzet Bulanan :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1 font-monospace">
                                        Omzet Sepeda Motor + Omzet Mobil
                                    </p>
                                    <p class="fs-14 text-muted mb-2 fw-semibold">
                                        @Model.OmzetMotor.ToString("C") + @Model.OmzetMobil.ToString("C") = @Model.TotalOmzet.ToString("C")
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Perhitungan Potensi Pajak
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-light bg-opacity-25">
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Rumus Potensi Pajak per Bulan:
                                    </h4>
                                    <p class="fs-14 text-muted mb-1 font-monospace">
                                        Total Omzet Bulanan x Tarif Pajak
                                    </p>
                                    <p class="fs-14 text-muted mb-3 fw-semibold">
                                        @Model.TotalOmzet.ToString("C0") x @Model.TarifPajak.ToString("P0") = @Model.PotensiPajakPerBulan.ToString("C0")
                                    </p>
                                    <hr>
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Rumus Potensi Pajak per Tahun:
                                    </h4>
                                    <p class="fs-14 text-muted mb-1 font-monospace">
                                        Potensi Pajak per Bulan x 12
                                    </p>
                                    <p class="fs-14 text-muted mb-3 fw-semibold">
                                        @Model.PotensiPajakPerBulan.ToString("C0") x 12 = @Model.PotensiPajakPerTahun.ToString("C0")
                                    </p>
                                    <hr>
                                    <h4 class="fs-16 fw-semibold mb-2 text-end">
                                        Total Potensi Pajak per Tahun: <span class="text-success">@Model.PotensiPajakPerTahun.ToString("C0")</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg-4">

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Ringkasan
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">NOP</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.NOP</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Nama Usaha</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.Nama</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Alamat</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.Alamat</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Total Kapasitas</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.TotalKapasitas Kendaraan</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Potensi Pajak
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-secondary bg-opacity-25">
                                    <h4 class="card-title fs-14 mb-4">
                                        Potensi Pajak per Bulan
                                    </h4>
                                    <h4 class="card-title fs-18 mb-0">
                                        @Model.PotensiPajakPerBulan.ToString("C")
                                    </h4>
                                    <p class="fs-12">10% dari omzet bulanan</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="card border border-secondary border-2">
                                <div class="card-body bg-secondary bg-opacity-25">
                                    <h4 class="card-title fs-14 mb-4">
                                        Potensi Pajak per Tahun
                                    </h4>
                                    <h4 class="card-title fs-18 mb-0">
                                        @Model.PotensiPajakPerTahun.ToString("C")
                                    </h4>
                                    <p class="fs-12">Proyeksi untuk 12 bulan</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Visualisasi Parkir
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <h4 class="fs-14 fw-semibold mb-2">
                        Sepeda Motor
                    </h4>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Kapasitas: @Model.KapasitasMotor.ToString("N0") Unit</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">Terpakai @Model.JumlahTerparkirMotorWeekdays.ToString("N0") Unit (Hari Kerja)</p>
                        </div>
                    </div>
                    <div class="progress mb-2" style="height:20px">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar"
                             aria-valuenow="@Model.PersentaseMotorWeekdays.ToString("F0")"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @Model.PersentaseMotorWeekdays.ToString("F0")%">
                            @Model.PersentaseMotorWeekdays.ToString("N0")%
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Kapasitas: @Model.KapasitasMotor.ToString("N0") Unit</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">Terpakai @Model.JumlahTerparkirMotorWeekend.ToString("N0") Unit (Akhir Pekan)</p>
                        </div>
                    </div>
                    <div class="progress" style="height:20px">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar"
                             aria-valuenow="@Model.PersentaseMotorWeekend.ToString("F0")"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @Model.PersentaseMotorWeekend.ToString("F0")%">
                            @Model.PersentaseMotorWeekend.ToString("N0")%
                        </div>
                    </div>
                    <hr class="my-4">

                    <h4 class="fs-14 fw-semibold mb-2">
                        Mobil
                    </h4>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Kapasitas: @Model.KapasitasMobil.ToString("N0") Unit</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">Terpakai @Model.JumlahTerparkirMobilWeekdays.ToString("N0") Unit (Hari Kerja)</p>
                        </div>
                    </div>
                    <div class="progress mb-2" style="height:20px">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar"
                             aria-valuenow="@Model.PersentaseMobilWeekdays.ToString("F0")"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @Model.PersentaseMobilWeekdays.ToString("F0")%">
                            @Model.PersentaseMobilWeekdays.ToString("N0")%
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Kapasitas: @Model.KapasitasMobil.ToString("N0") Unit</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">Terpakai @Model.JumlahTerparkirMobilWeekend.ToString("N0") Unit (Akhir Pekan)</p>
                        </div>
                    </div>
                    <div class="progress" style="height:20px">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar"
                             aria-valuenow="@Model.PersentaseMotorWeekend.ToString("F0")"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width: @Model.PersentaseMotorWeekend.ToString("F0")%">
                            @Model.PersentaseMotorWeekend.ToString("N0")%
                        </div>
                    </div>
                    <hr class="my-4">

                    <h4 class="fs-14 mb-2 text-center">
                        Total Kendaraan Terparkir per Hari
                    </h4>
                    <h4 class="fs-16 fw-semibold mb-2 text-center">
                        @Model.TotalTerparkirWeekdays.ToString("N0") Unit (Hari Kerja) | @Model.TotalTerparkirWeekend.ToString("N0") Unit (Akhir Pekan)
                    </h4>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Parameter Perhitungan
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Turnover Hari Kerja</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.TurnoverWeekdays.ToString("N2") %</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Turnover Akhir Pekan</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.TurnoverWeekend.ToString("N2") %</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Hari Kerja per Bulan</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">22 Hari</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Akhir Pekan per Bulan</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">8 Hari</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Tarif Pajak</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.TarifPajak.ToString("N2") %</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg-12">

            <div class="card">
                <div class="card-header d-flex bg-soft-secondary">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Rumus Lengkap Perhitungan Potensi Pajak
                        </h4>
                    </div>
                </div>
                <div class="col-lg-12">
                        <div class="card-body">

                            <h4 class="fs-16 fw-semibold mb-3">Perhitungan Omzet Parkir</h4>

                            @* Sepeda *@
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Sepeda Weekdays = Turnover Weekdays x Kapasitas Sepeda
                            </p>
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Sepeda Weekend = Turnover Weekend x Kapasitas Sepeda
                            </p>
                            <p class="fs-14 text-muted mb-3 fw-semibold">
                                Omzet Sepeda = (Weekdays x Tarif x 22) + (Weekend x Tarif x 8) = @Model.OmzetSepeda.ToString("C0")
                            </p>

                            @* Motor *@
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Motor Weekdays = Turnover Weekdays x Kapasitas Motor
                            </p>
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Motor Weekend = Turnover Weekend x Kapasitas Motor
                            </p>
                            <p class="fs-14 text-muted mb-3 fw-semibold">
                                Omzet Motor = (Weekdays x Tarif x 22) + (Weekend x Tarif x 8) = @Model.OmzetMotor.ToString("C0")
                            </p>

                            @* Mobil *@
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Mobil Weekdays = Turnover Weekdays x Kapasitas Mobil
                            </p>
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Mobil Weekend = Turnover Weekend x Kapasitas Mobil
                            </p>
                            <p class="fs-14 text-muted mb-3 fw-semibold">
                                Omzet Mobil = (Weekdays x Tarif x 22) + (Weekend x Tarif x 8) = @Model.OmzetMobil.ToString("C0")
                            </p>

                            @* Truk Mini *@
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Truk Mini Weekdays = Turnover Weekdays x Kapasitas Truk Mini
                            </p>
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Truk Mini Weekend = Turnover Weekend x Kapasitas Truk Mini
                            </p>
                            <p class="fs-14 text-muted mb-3 fw-semibold">
                                Omzet Truk Mini = (Weekdays x Tarif x 22) + (Weekend x Tarif x 8) = @Model.OmzetTrukMini.ToString("C0")
                            </p>

                            @* Truk/Bus *@
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Truk/Bus Weekdays = Turnover Weekdays x Kapasitas Truk/Bus
                            </p>
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Truk/Bus Weekend = Turnover Weekend x Kapasitas Truk/Bus
                            </p>
                            <p class="fs-14 text-muted mb-3 fw-semibold">
                                Omzet Truk/Bus = (Weekdays x Tarif x 22) + (Weekend x Tarif x 8) = @Model.OmzetTrukBus.ToString("C0")
                            </p>

                            @* Trailer *@
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Trailer Weekdays = Turnover Weekdays x Kapasitas Trailer
                            </p>
                            <p class="fs-14 text-muted font-monospace mb-1">
                                Jumlah Terparkir Trailer Weekend = Turnover Weekend x Kapasitas Trailer
                            </p>
                            <p class="fs-14 text-muted mb-3 fw-semibold">
                                Omzet Trailer = (Weekdays x Tarif x 22) + (Weekend x Tarif x 8) = @Model.OmzetTrailer.ToString("C0")
                            </p>

                            <hr>

                            <p class="fs-14 text-muted mb-1 fw-semibold">
                                Total Omzet = @Model.TotalOmzet.ToString("C0")
                            </p>

                            <p class="fs-14 text-muted mb-1 font-monospace">
                                Potensi Pajak per Bulan = Total Omzet x Tarif Pajak
                            </p>
                            <p class="fs-14 text-muted mb-1 fw-semibold">
                                = @Model.TotalOmzet.ToString("C0") x @Model.TarifPajak.ToString("P0") = @Model.PotensiPajakPerBulan.ToString("C0")
                            </p>

                            <p class="fs-14 text-muted mb-1 font-monospace">
                                Potensi Pajak per Tahun = Pajak per Bulan x @Model.BulanSisa
                            </p>
                            <p class="fs-14 text-muted fw-semibold">
                                = @Model.PotensiPajakPerBulan.ToString("C0") x 12 = @Model.PotensiPajakPerTahun.ToString("C0")
                            </p>
                        </div>
                </div>
            </div>

        </div>

    </div>
}
else
{
    <h4>Data tidak ditemukan</h4>
}