        <div class="card">
            <div class="card-header d-flex bg-soft-success">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Visualisasi Kunjungan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    <p class="fs-14 text-muted flex-grow-1">Hari Kerja (22 hari/bulan)</p>
                    <div class="flex-shrink-0">
                        <p class="fs-14 fw-semibold mb-1">@Math.Ceiling(Model.JumlahPengunjungWeekdaysLainnya).ToString("N0") Kunjungan</p>
                    </div>
                </div>
                
                @{
                    decimal totalPengunjung = Math.Ceiling(Model.JumlahPengunjungWeekdaysLainnya) + Math.Ceiling(Model.JumlahPengunjungWeekendLainnya);

                    var kunjunganWeekdays = (totalPengunjung == 0 ? 0 : (decimal)Math.Ceiling(Model.JumlahPengunjungWeekdaysLainnya) / totalPengunjung * 100)
                    .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);

                    var kunjunganWeekend = (totalPengunjung == 0 ? 0 : (decimal)Math.Ceiling(Model.JumlahPengunjungWeekendLainnya) / totalPengunjung * 100)
                    .ToString("0.##", System.Globalization.CultureInfo.InvariantCulture);
                }

                <div class="progress mb-2" style="height:20px">
                    <div class="progress-bar progress-bar-striped progress-bar-animated progress-bar-primary"
                         role="progressbar" style="width: @kunjunganWeekdays%"
                         aria-valuenow="@Model.JumlahPengunjungWeekdaysLainnya" aria-valuemin="0"
                         aria-valuemax="@totalPengunjung">
                        @kunjunganWeekdays%
                    </div>
                </div>

                <br />
                <div class="d-flex">
                    <p class="fs-14 text-muted flex-grow-1">Akhir Pekan (8 hari/bulan)</p>
                    <div class="flex-shrink-0">
                        <p class="fs-14 fw-semibold mb-1">@Math.Ceiling(Model.JumlahPengunjungWeekendLainnya).ToString("N0") Kunjungan</p>
                    </div>
                </div>

                <div class="progress mb-2" style="height:20px">
                    <div class="progress-bar progress-bar-striped progress-bar-animated progress-bar-second progress-bar-primary text-dark"
                         role="progressbar" style="width: @kunjunganWeekend%"
                         aria-valuenow="@Math.Ceiling(Model.JumlahPengunjungWeekendLainnya)" aria-valuemin="0"
                         aria-valuemax="@totalPengunjung">
                        @kunjunganWeekend%
                    </div>
                </div>

                <br />
                <h4 class="fs-14 mb-2 text-center">
                    Total Kunjungan per Bulan
                </h4>
                <h4 class="fs-16 fw-semibold mb-2 text-center">
                    @Math.Ceiling(Model.JumlahPengunjungPerBulanLainnya).ToString("N0") Kunjungan
                </h4>
                <h4 class="fs-14 text-muted mb-1 text-center">
                    Rata-rata @Model.RataRataPengunjung.ToString("N0") Kunjungan per Hari
                </h4>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex bg-soft-success">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Parameter Perhitungan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <p class="label">Harga Tiket Hari Kerja</p>                  
                    <p class="value">Rp. @Model.HTMWeekdays.ToString("N0")</p>                   
                </div>
                <div class="info-row">
                    <p class="label">Harga Tiket Akhir Pekan</p>                  
                    <p class="value">Rp. @Model.HTMWeekend.ToString("N0")</p>                   
                </div>
                <div class="info-row">
                    <p class="label">Turnover Hari Kerja</p>                  
                    <p class="value">@Model.TurnoverWeekdays.ToString("N2") Kali</p>                   
                </div>
                <div class="info-row">
                    <p class="label">Turnover Akhir Pekan</p>                  
                    <p class="value">@Model.TurnoverWeekend.ToString("N2") Kali</p>                   
                </div>
                <div class="info-row">
                    <p class="label">Hari Kerja per Bulan</p>                  
                    <p class="value">22 Hari</p>                   
                </div>
                <div class="info-row">
                    <p class="label">Akhir Pekan per Bulan</p>                  
                    <p class="value">8 Hari</p>                   
                </div>
                <div class="info-row">
                    <p class="label">Tarif Pajak</p>                  
                    <p class="value">@Model.TarifPajak.ToString("P0")</p>                   
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex bg-soft-success">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Catatan Khusus
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card border border-warning border-2">
                            <div class="card-body bg-soft-warning bg-opacity-25">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="avatar-md ri-alert-fill text-warning fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1 px-3 mt-2">
                                        <h4 class="fs-16 fw-semibold mb-1">
                                            Tarif Pajak Khusus
                                        </h4>
                                    </div>
                                </div>
                                <p class="fs-14 text-muted mb-1">
                                    Usaha ini dikenakan tarif pajak hiburan khusus sebesar 50% sesuai dengan Peraturan Daerah tentang Pajak Hiburan
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-soft-success">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Rumus Lengkap Potensi Pajak Hiburan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <h4 class="fs-16 fw-semibold mb-3">Perhitungan Omzet</h4>

                <p class="fs-14 text-muted font-monospace mb-1">
                    Jumlah Pengunjung Weekdays = Kapasitas x Turnover Weekdays
                </p>
                <p class="fs-14 mb-2 fw-semibold text-dark">
                    = @Model.Kapasitas.ToString("N0") x @Model.TurnoverWeekdays.ToString("N2") = @Math.Ceiling(Model.JumlahPengunjungWeekdaysLainnya).ToString("N0") orang
                </p>

                <p class="fs-14 text-muted font-monospace mb-1">
                    Jumlah Pengunjung Weekend = Kapasitas x Turnover Weekend
                </p>
                <p class="fs-14 mb-2 fw-semibold text-dark">
                    = @Model.Kapasitas.ToString("N0") x @Model.TurnoverWeekend.ToString("N2") = @Math.Ceiling(Model.JumlahPengunjungWeekendLainnya).ToString("N0") orang
                </p>

                <p class="fs-14 text-muted font-monospace mb-1">
                    Omzet/Bulan = (HTM Weekdays x Pengunjung Weekdays x 22 Hari) + (HTM Weekdays x Pengunjung Weekend x 8 Hari)
                </p>
                <p class="fs-14 mb-3 fw-semibold text-dark">
                    = (Rp. @Model.HTMWeekdays.ToString("N0") x @Math.Ceiling(Model.JumlahPengunjungWeekdaysLainnya).ToString("N0") x 22 Hari) +
                    (Rp. @Model.HTMWeekend.ToString("N0") x @Math.Ceiling(Model.JumlahPengunjungWeekendLainnya).ToString("N0") x 8 Hari) = Rp. @Model.OmzetPerBulanLainnya.ToString("N0")
                </p>

                <hr>

                <h4 class="fs-16 fw-semibold mb-3">Perhitungan Potensi Pajak</h4>

                <p class="fs-14 text-muted font-monospace mb-1">
                    Potensi Pajak/Bulan = Omzet/Bulan x Tarif Pajak
                </p>
                <p class="fs-14 mb-2 fw-semibold text-dark">
                    = Rp. @Model.OmzetPerBulanLainnya.ToString("N0") x @Model.TarifPajak.ToString("P0") = Rp. @Model.PotensiPajakPerBulanLainnya.ToString("N0")
                </p>

                <p class="fs-14 text-muted font-monospace mb-1">
                    Potensi Pajak/Tahun = Potensi Pajak/Bulan x @Model.BulanSisa Bulan
                </p>
                <p class="fs-14 fw-semibold text-dark">
                    = Rp. @Model.PotensiPajakPerBulanLainnya.ToString("N0") x @Model.BulanSisa = Rp. @Model.PotensiPajakPerTahunLainnya.ToString("N0")
                </p>
            </div>
        </div>
    </div>


</div>