@model MonPDReborn.Models.DataOP.ProfilePotensiOPVM.DetailPotensiPajakResto

@{
    Layout = "_Layout";
    ViewBag.Title = "Detail Potensi Pajak Catering";
}
@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card border border-danger border-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="d-flex p-3">
                                <div class="flex-shrink-0">
                                    <div class="avatar-md me-3">
                                        <span class="avatar-title bg-soft-danger rounded-circle fs-1">
                                            <i class="ri-restaurant-line text-danger"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <h4 class="fs-16 fw-semibold">
                                        @Model.Nama
                                    </h4>
                                    <p class="fs-16 lh-base">
                                        @Model.Alamat
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="d-flex p-3">
                                <h3 class="fs-16 fw-semibold">
                                    Potensi Pajak
                                </h3>
                            </div>
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Per Bulan</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-16 fw-semibold">@Model.PotensiPajakPerBulanCatering.ToString("C")</p>
                                </div>
                            </div>
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Per Tahun</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-16 fw-semibold">@Model.PotensiPajakPerTahunCatering.ToString("C")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="d-flex p-3">
                                <div class="flex-shrink-0 ms-3">
                                    <p class="fs-14 text-muted mb-1">NOP</p>
                                    <p class="fs-14 fw-semibold mb-3">@Model.NOP</p>
                                </div>
                                <div class="flex-shrink-0 ms-5">
                                    <p class="fs-14 text-muted mb-1">Rata-rata Transaksi</p>
                                    <p class="fs-14 fw-semibold mb-3">@Model.RataRataBillPerOrang.ToString("C") / Orang</p>
                                </div>
                                <div class="flex-shrink-0 ms-3">
                                    <p class="fs-14 text-muted mb-1">Rata-rata Terjual</p>
                                    <p class="fs-14 fw-semibold mb-3">@Model.RataRataTerjualPerHariCatering / Hari</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex bg-soft-danger">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Detail Tenant / Catering
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="card border border-danger border-2">
                                <div class="card-body bg-soft-danger bg-opacity-25">
                                    <div class="text-center">
                                        <h3 class="fs-18 fw-semibold mb-1">
                                            @Model.RataRataTerjualWeekdaysCatering
                                        </h3>
                                        <h4 class="fs-14">
                                            Rata-rata Terjual Hari Kerja
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card border border-warning border-2">
                                <div class="card-body bg-soft-warning bg-opacity-25">
                                    <div class="text-center">
                                        <h3 class="fs-18 fw-semibold mb-1">
                                            @Model.RataRataTerjualWeekendCatering
                                        </h3>
                                        <h4 class="fs-14">
                                            Rata-rata Terjual Akhir Pekan
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Rata-rata Transaksi per Orang</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-14 fw-semibold">@Model.RataRataBillPerOrang.ToString("C")</p>
                                </div>
                            </div>
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Perputaran Hari Kerja</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-14 fw-semibold">@Model.TurnoverWeekdaysCatering Kali</p>
                                </div>
                            </div>
                            <div class="d-flex p-3 py-0">
                                <p class="fs-14 text-muted flex-grow-1">Perputaran Akhir Pekan</p>
                                <div class="flex-shrink-0">
                                    <p class="fs-14 fw-semibold">@Model.TurnoverWeekendCatering Kali</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card border border-danger border-2">
                                <div class="card-body">
                                    <h4 class="fs-14 fw-semibold mb-2">
                                        Distribusi Transaksi Penjualan
                                    </h4>
                                    <div class="d-flex p-0 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Hari Kerja (22 hari/bulan)</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.RataRataTerjualWeekdaysCatering Terjual</p>
                                        </div>
                                    </div>
                                    <div class="progress mb-4" style="height:20px">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@Model.RataRataTerjualWeekdaysCatering" aria-valuemin="0" aria-valuemax="100" style="width: @Model.RataRataTerjualWeekdaysCatering%">@Model.RataRataTerjualWeekdaysCatering%</div>
                                    </div>
                                    <div class="d-flex p-0 py-0">
                                        <p class="fs-14 text-muted flex-grow-1">Akhir Pekan (8 Hari/bulan)</p>
                                        <div class="flex-shrink-0">
                                            <p class="fs-14 fw-semibold">@Model.RataRataTerjualWeekendCatering Terjual</p>
                                        </div>
                                    </div>
                                    <div class="progress mb-2" style="height:20px">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="@Model.RataRataTerjualWeekendCatering" aria-valuemin="0" aria-valuemax="100" style="width: @Model.RataRataTerjualWeekendCatering%">@Model.RataRataTerjualWeekendCatering%</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="card border border-danger border-2">
                                <div class="card-body bg-light bg-opacity-25">
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Total Terjual Hari Kerja per Bulan :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1">
                                        Rata-rata Terjual Hari Kerja x 22 Hari
                                    </p>
                                    <p class="fs-14 text-muted mb-2">
                                        @Model.RataRataTerjualWeekdaysCatering x 22 = 0 Terjual
                                    </p>
                                    <h4 class="fs-16 fw-semibold mb-1">
                                        Total Terjual Akhir Pekan per Bulan :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1">
                                        Rata-rata Terjual Akhir Pekan x 8 Hari
                                    </p>
                                    <p class="fs-14 text-muted mb-2">
                                        @Model.RataRataTerjualWeekendCatering x 8 = 0 Terjual
                                    </p>
                                    <h4 class="fs-16 fw-semibold mb-1">
                                        Total Terjual per Bulan :
                                    </h4>
                                    <p class="fs-14 text-muted">
                                        0 + 0 = 0 Terjual
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-danger">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Perhitungan Potensi Pajak
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Rumus Perhitungan Potensi Pajak Per Bulan :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1">
                                        @Model.OmzetPerBulanCatering.ToString("C") x 10%
                                    </p>
                                    <p class="fs-14 text-muted mb-2">
                                        Rp 0 x 10% = Rp 0
                                    </p>
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Rumus Perhitungan Potensi Pajak Per Tahun :
                                    </h4>
                                    <p class="fs-14 text-muted mb-1">
                                        @Model.PotensiPajakPerBulanCatering.ToString("C") x 12
                                    </p>
                                    <p class="fs-14 text-muted mb-2">
                                        Rp 0 x 12 = Rp 0
                                    </p>
                                    <h4 class="fs-16 fw-semibold mb-2">
                                        Total Potensi Pajak Per Tahun : @Model.PotensiPajakPerTahunCatering.ToString("C")
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header d-flex bg-soft-danger">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Ringkasan
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">NOP</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.NOP</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Nama Catering</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.Nama</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Alamat</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.Alamat</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Rata-rata Transaksi</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.RataRataBillPerOrang.ToString("C") / Orang</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-danger">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Potensi Pajak
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card border border-danger border-2">
                                <div class="card-body bg-soft-danger bg-opacity-25">
                                    <h4 class="card-title fs-14 mb-4">
                                        Potensi Pajak per Bulan
                                    </h4>
                                    <h4 class="card-title fs-18 mb-0">
                                        @Model.PotensiPajakPerBulanCatering.ToString("C")
                                    </h4>
                                    <p class="fs-12 text-muted">10% dari omzet bulanan</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="card border border-danger border-2">
                                <div class="card-body bg-soft-danger bg-opacity-25">
                                    <h4 class="card-title fs-14 mb-4">
                                        Potensi Pajak per Tahun
                                    </h4>
                                    <h4 class="card-title fs-18 mb-0">
                                        @Model.PotensiPajakPerTahunCatering.ToString("C")
                                    </h4>
                                    <p class="fs-12 text-muted">Proyeksi untuk 12 bulan</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex bg-soft-danger">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Parameter Perhitungan
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Rata-rata Transaksi per Orang</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.RataRataBillPerOrang.ToString("C")</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Perputaran Hari Kerja</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.TurnoverWeekdaysCatering kali</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Perputanran Akhir Pekan</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.TurnoverWeekendCatering kali</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Rata-rata Terjual Hari Kerja</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.RataRataTerjualWeekdaysCatering</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Rata-rata Terjual Akhir Pekan</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">@Model.RataRataTerjualWeekendCatering</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Hari Kerja per Bulan</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">22 Hari</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Hari Kerja per Tahun</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">8 Hari</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <p class="fs-14 text-muted flex-grow-1">Tarif Pajak</p>
                        <div class="flex-shrink-0">
                            <p class="fs-14 fw-semibold mb-1">10%</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex bg-soft-danger">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Rumus Lengkap Perhitungan Potensi Pajak
                        </h4>
                    </div>
                </div>
                //CATERING


                <div class="card-body">

                    <h4 class="fs-16 fw-semibold mb-3">Perhitungan Omzet Tenant/Catering</h4>

                    <p class="fs-14 text-muted font-monospace mb-1">
                        Rata-Rata Terjual (Weekdays) = Kapasitas Tenant/Catering x Turnover Weekdays
                    </p>
                    <p class="fs-14 text-muted mb-2 fw-semibold">
                        = @Model.KapasitasTenantCatering.ToString("N0") x @Model.TurnoverWeekdaysCatering .ToString("N1") = @Model.RataRataTerjualWeekdaysCatering.ToString("N0") orang
                    </p>

                    <p class="fs-14 text-muted font-monospace mb-1">
                        Rata-Rata Terjual (Weekend) = Kapasitas Tenant/Catering x Turnover Weekend
                    </p>
                    <p class="fs-14 text-muted mb-2 fw-semibold">
                        = @Model.KapasitasTenantCatering.ToString("N0") x @Model.TurnoverWeekendCatering .ToString("N1") = @Model.RataRataTerjualWeekendCatering.ToString("N0") orang
                    </p>

                    <p class="fs-14 text-muted font-monospace mb-1">
                        Omzet/Bulan = (Rata-Rata Bill/Orang x Terjual Weekdays x 22) + (Rata-Rata Bill/Orang x Terjual Weekend x 8)
                    </p>
                    <p class="fs-14 text-muted mb-3 fw-semibold">
                        = (@Model.RataRataBillPerOrang.ToString("C0") x @Model.RataRataTerjualWeekdaysCatering.ToString("N0") x 22) +
                        (@Model.RataRataBillPerOrang.ToString("C0") x @Model.RataRataTerjualWeekendCatering.ToString("N0") x 8) =
                        @Model.OmzetPerBulanCatering.ToString("C0")
                    </p>

                    <hr>

                    <h4 class="fs-16 fw-semibold mb-3">Perhitungan Potensi Pajak</h4>

                    <p class="fs-14 text-muted font-monospace mb-1">
                        Potensi Pajak/Bulan = Omzet/Bulan x Tarif Pajak
                    </p>
                    <p class="fs-14 text-muted mb-2 fw-semibold">
                        = @Model.OmzetPerBulanCatering.ToString("C0") x @Model.TarifPajak.ToString("P0") = @Model.PotensiPajakPerBulanCatering.ToString("C0")
                    </p>

                    <p class="fs-14 text-muted font-monospace mb-1">
                        Potensi Pajak/Tahun = Potensi Pajak/Bulan x 12
                    </p>
                    <p class="fs-14 text-muted fw-semibold">
                        = @Model.PotensiPajakPerBulanCatering.ToString("C0") x 12 = @Model.PotensiPajakPerTahunCatering.ToString("C0")
                    </p>

                </div>

            </div>
        </div>
    </div>   
}
else
{
    <h4>Data Tidak Ditemukan</h4>
}

