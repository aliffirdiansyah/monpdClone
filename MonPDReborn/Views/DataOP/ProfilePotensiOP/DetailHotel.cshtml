                                <hr class="my-3">
                                <h5 class="fs-16 fw-semibold">Pajak per Bulan (Banquet)</h5>
                                <h4 class="fs-18 fw-bold text-success">
                                    @Model.DataPotensi.PajakBanquetBulanan.ToString("C0")
                                </h4>
                                <p class="fs-12 text-muted mb-0">@ProfilePotensiOPVM.PotensiPajakHotel.TarifPajak.ToString("P0") dari Omzet</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="card border border-info border-2 mt-3">
                            <div class="card-body">
                                <h4 class="fs-16 fw-semibold mb-2">Perhitungan Omzet Banquet</h4>
