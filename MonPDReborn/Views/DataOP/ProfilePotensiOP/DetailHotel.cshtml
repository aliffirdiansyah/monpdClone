                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiOmzetRoomPerBulanKos.ToString("N0") × @Model.TarifPajak.ToString("P0")
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiPajakPerBulanKos.ToString("N0")
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Potensi Pajak/Tahun</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">Potensi Pajak/Bulan × @Model.BulanSisa Bulan</td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiPajakPerBulanKos.ToString("N0") × @Model.BulanSisa Bulan
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiPajakPerTahunKos.ToString("N0")
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            }
                                            else{
                                                <table class="table mb-0">
                                                    <tbody>
                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Potensi Pajak/Bulan</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">(Potensi Omzet Room + Potensi Omzet Banquet) × Tarif Pajak</td>
                                                        </tr>
                                                       @{
                                                            var rumus = new List<string>();

                                                            if (Model.RataRataPaxBanquetTerjualPerHari > 0)
                                                            {
                                                                rumus.Add("(Harga Rata-rata Banquet/Pax x Rata-rata Pax Terjual/Hari x 8 Hari)");
                                                            }

                                                            var result = string.Join(" + ", rumus);
                                                        }
                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                ((Harga Rata-rata Room x Rata-rata Room Terjual/Hari x 30 Hari)@(string.IsNullOrEmpty(result) ? "" : " + " + result)) x Tarif Pajak
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                (
                                                                @if (Model.HargaRataRataRoom > 0 && Model.RataRataRoomTerjualPerHari > 0)
                                                                {
                                                                    <text>
                                                                        (Rp. @System.Math.Ceiling(Model.HargaRataRataRoom).ToString("N0")
                                                                        x @System.Math.Ceiling(Model.RataRataRoomTerjualPerHari).ToString("N0") Kamar x 30 Hari)
                                                                    </text>
                                                                }

                                                                @if (Model.HargaRataRataBanquetPerPax > 0 && Model.RataRataPaxBanquetTerjualPerHari > 0)
                                                                {
                                                                    if (Model.HargaRataRataRoom > 0 && Model.RataRataRoomTerjualPerHari > 0)
                                                                    {
                                                                        <text> + </text>
                                                                    }
                                                                    <text>
                                                                        (Rp. @System.Math.Ceiling(Model.HargaRataRataBanquetPerPax).ToString("N0")
                                                                        x @System.Math.Ceiling(Model.RataRataPaxBanquetTerjualPerHari).ToString("N0") Pax x 8 Hari)
                                                                    </text>
                                                                }
                                                                ) x Tarif Pajak
                                                            </td>
                                                        </tr>



                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                @if (Model.PotensiOmzetBanquetPerBulan > 0)
                                                                {
                                                                    <text>(</text>
                                                                }

                                                                @if (Model.PotensiOmzetRoomPerBulan > 0)
                                                                {
                                                                    <text>Rp. @Model.PotensiOmzetRoomPerBulan.ToString("N0")</text>
                                                                }

                                                                @if (Model.PotensiOmzetBanquetPerBulan > 0)
                                                                {
                                                                    if (Model.PotensiOmzetRoomPerBulan > 0)
                                                                    {
                                                                        <text> + </text>
                                                                    }
                                                                    <text>Rp. @Model.PotensiOmzetBanquetPerBulan.ToString("N0")</text>
                                                                }

                                                                @if (Model.PotensiOmzetBanquetPerBulan > 0)
                                                                {
                                                                    <text>)</text>
                                                                }

                                                                × @Model.TarifPajak.ToString("P0")
                                                            </td>
                                                        </tr>



                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiPajakPerBulan.ToString("N0")
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Potensi Pajak/Tahun</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">Potensi Pajak/Bulan × @Model.BulanSisa Bulan</td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiPajakPerBulan.ToString("N0") × @Model.BulanSisa Bulan
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Model.PotensiPajakPerTahun.ToString("N0")
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            }
                                        </div>
                                        <div class="tab-pane fade" id="nav-detail" role="tabpanel" aria-labelledby="nav-detail-tab">
                                            @if (Model.HargaRataRataRoomKos > 0)
                                            {
