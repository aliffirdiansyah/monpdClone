                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;"></th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                @Math.Ceiling(Model.RataRataRoomTerjualPerHari).ToString("N0") Kamar
                                                            </td>
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            }
                                            <hr />
                                            @if (Model.KapasitasMaksimalPaxBanquetPerHari >0)
                                            {
                                                <table class="table mb-0">
                                                    <tbody>
                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Kapasitas Banquet</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">@Model.KapasitasMaksimalPaxBanquetPerHari.ToString("N0") Pax</td>
