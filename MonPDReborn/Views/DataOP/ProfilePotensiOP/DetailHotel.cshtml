                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">@Model.JumlahTotalRoom.ToString("N0") Kamar</td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Tarif Rata-rata Kamar</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Math.Ceiling(Model.HargaRataRataRoom).ToString("N0")
