                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Tarif Rata-rata Banquet</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                Rp. @Math.Ceiling(Model.HargaRataRataBanquetPerPax).ToString("N0")
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <th scope="row" style="width: 200px;">Rata-rata Banquet Terjual</th>
                                                            <th scope="row" style="width: 20px;">=</th>
                                                            <td class="text-body fw-medium">
                                                                @Math.Ceiling(Model.RataRataPaxBanquetTerjualPerHari).ToString("N0") Pax
