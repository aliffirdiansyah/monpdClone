@model MonPDReborn.Models.DataOP.ProfilePotensiOPVM.Index

@{
    ViewData["Title"] = "Profile Potensi OP";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Potensi Pajak
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body">
                <h5 class="fw-bold text-primary mb-3">
                    <i class="ri-bar-chart-line"></i> Total Potensi Tahun 2025
                </h5>

                <div class="mb-2">
                    <span class="text-muted">Potensi:</span>
                    <span class="fw-semibold">@ViewBag.Potensi</span>
                </div>

                <div class="mb-2">
                    <span class="text-muted">Realisasi:</span>
                    <span class="fw-semibold">@ViewBag.RealisasiTotal</span>
                </div>

                <div>
                    <span class="text-muted">Capaian:</span>
                    <span class="fw-semibold">@ViewBag.Capaian</span>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body">
                <h5 class="fw-bold text-success mb-3">
                    <i class="ri-building-2-line"></i> Total OP Tahun 2025
                </h5>

                <div class="mb-2">
                    <span class="text-muted">Total OP:</span>
                    <span class="fw-semibold">@ViewBag.TotalOP</span>
                </div>

                <div class="mb-2">
                    <span class="text-muted">Realisasi OP:</span>
                    <span class="fw-semibold">@ViewBag.RealisasiOP</span>
                </div>

                <div>
                    <span class="text-muted">Terealisasi:</span>
                    <span class="fw-semibold">@ViewBag.CapaianOP</span>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Data Kontrol
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="Show"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadShow("");      // Panggil data rekap jumlah
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });

        function loadShow() {
            $.ajax({
                url: '@Url.Action("Show", "ProfilePotensiOP")',
                type: 'GET',
                success: function (result) {
                    $('#Show').html(result);
                },
                error: function () {
                    $('#Show').html('<div class="alert alert-danger">Gagal memuat data Show.</div>');
                }
            });
        }

        function onDetailClick(e) {
            const data = e.row?.data;
            if (!data || !data.NOP || !data.JenisPajak) return;

            const url = `/ProfilePotensiOP/Detail?nop=${encodeURIComponent(data.NOP)}&jenisPajak=${encodeURIComponent(data.JenisPajak)}`;
            window.open(url, '_blank');
        }


    </script>
}

