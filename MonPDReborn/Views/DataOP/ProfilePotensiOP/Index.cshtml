@model MonPDReborn.Models.DataOP.ProfilePotensiOPVM.Index

@{
    ViewData["Title"] = "Profile Potensi OP";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Potensi Pajak
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body d-flex align-items-center">
                <!-- Logo Besar -->
                <div class="flex-shrink-0 me-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="ri-bar-chart-line fs-1"></i>
                    </div>
                </div>

                <!-- Teks Kanan -->
                <div class="flex-grow-1">
                    <h4 class="fw-bold text-primary mb-2">Total Potensi Tahun 2025</h4>

                    <div class="mb-2">
                        <span class="text-muted">Potensi:</span>
                        <span class="fw-semibold float-end">@ViewBag.Potensi</span>
                    </div>

                    <div class="mb-2">
                        <span class="text-muted">Realisasi:</span>
                        <span class="fw-semibold float-end">@ViewBag.RealisasiTotal</span>
                    </div>

                    <div>
                        <span class="text-muted">Capaian:</span>
                        <span class="fw-semibold float-end">@ViewBag.Capaian</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm border-0 card-animate">
            <div class="card-body d-flex align-items-center">
                <!-- Logo Besar -->
                <div class="flex-shrink-0 me-4">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="ri-building-2-line fs-1"></i>
                    </div>
                </div>

                <!-- Teks Kanan -->
                <div class="flex-grow-1">
                    <h4 class="fw-bold text-success mb-2">Total OP Tahun 2025</h4>

                    <div class="mb-2">
                        <span class="text-muted">Total OP:</span>
                        <span class="fw-semibold float-end">@ViewBag.TotalOP</span>
                    </div>

                    <div class="mb-2">
                        <span class="text-muted">Realisasi OP:</span>
                        <span class="fw-semibold float-end">@ViewBag.RealisasiOP</span>
                    </div>

                    <div>
                        <span class="text-muted">Terealisasi:</span>
                        <span class="fw-semibold float-end">@ViewBag.CapaianOP</span>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Rekap Data Potensi
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div id="loading2-ShowRekap" class="spinner-border text-primary" style="display: none">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="ShowRekap"></div>
                <div id="detailModal" class="modal fade" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content shadow-lg border-0 rounded-3">
                            <div class="modal-header">
                                <h5 class="modal-title" id="detailModalLabel">
                                    <i class="bi bi-info-circle me-2"></i> Detail Data
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            <div class="modal-body p-4" id="detailContent">
                                <div class="text-center py-5 text-muted">
                                    <div class="spinner-border text-primary" role="status"></div>
                                    <div class="mt-2">Memuat data detail...</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            fnShowRekap("");
           // loadDetail("");  // Panggil semua data detail saat pertama load
        });


                function onDetail(e) {
            const data = e.row?.data;
            if (!data || !data.NOP || !data.JenisPajak) return;

            let url = `/ProfilePotensiOP/Detail?jenisPajak=${encodeURIComponent(data.JenisPajak)}&nop=${encodeURIComponent(data.NOP)}`;

            // jika hiburan dan kategori tersedia
            if (data.JenisPajak.toLowerCase() === 'hiburan' && data.Kategori) {
                url += `&kategoriHiburan=${encodeURIComponent(data.Kategori)}`;
            }

            window.open(url, '_blank');
        }



        function fnShowRekap() {
            $.ajax({
                url: '@Url.Action("ShowRekap", "ProfilePotensiOP")',
                type: 'GET',
                beforeSend: function () {
                    // Tampilkan spinner, sembunyikan konten
                    $('#loading2-ShowRekap').show();
                    $('#ShowRekap').hide();
                },
                success: function (result) {
                    // Sembunyikan spinner, tampilkan hasil
                    $('#loading2-ShowRekap').hide();
                    $('#ShowRekap').html(result).show();
                },
                error: function () {
                    $('#loading2-ShowRekap').hide();
                    $('#ShowRekap').html('<div class="alert alert-danger">❌ Gagal memuat data Show.</div>').show();
                }
            });
        }

        function showDetail(container, options) {
            var jenisPajak = options.data?.JenisPajak;
            console.log("showDetail - JenisPajak:", jenisPajak);

            // Buat inner container
            var innerContainer = $("<div>").addClass("p-2");
            container.append(innerContainer);

            if (!jenisPajak) {
                innerContainer.html('<div class="text-danger">Jenis Pajak tidak ditemukan.</div>');
                return;
            }

            // Loading spinner
            innerContainer.html(`
                <div class="text-center my-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-2 text-muted">Memuat data sub-detail...</div>
                </div>
            `);

            $.ajax({
                url: '@Url.Action("ShowDetail", "ProfilePotensiOP")',
                type: 'GET',
                data: { JenisPajak: jenisPajak },
                success: function (result) {
                    innerContainer.html(result);
                },
                error: function () {
                    innerContainer.html('<div class="text-danger">❌ Gagal memuat data sub-detail.</div>');
                }
            });
        }

        function onDetailClick(e) {
            // Pastikan tidak submit default tombol
            e.event.preventDefault();

            // Ambil data baris terkait
            const data = e.row?.data;

            if (!data) {
                DevExpress.ui.notify("Data tidak ditemukan", "error", 2000);
                return;
            }

            const jenisPajak = data.JenisPajak;
            const kategori = data.Kategori;

            if (!jenisPajak || !kategori) {
                DevExpress.ui.notify("Jenis Pajak atau Kategori kosong", "error", 2000);
                return;
            }

            console.log("onDetailClick:", jenisPajak, kategori);

            // Tampilkan spinner atau loading
            const targetDiv = $("#detailContent");
            targetDiv.html(`
                <div class="text-center my-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-2 text-muted">Memuat data detail...</div>
                </div>
            `);

            // Panggil server
            $.ajax({
                url: '/ProfilePotensiOP/ShowData', // ganti dengan nama action & controller yg benar
                type: 'GET',
                data: {
                    JenisPajak: jenisPajak,
                    Kategori: kategori
                },
                success: function (result) {
                    targetDiv.html(result);
                },
                error: function () {
                    targetDiv.html('<div class="text-danger">❌ Gagal memuat data detail.</div>');
                }
            });

            // Kalau pakai modal
            $('#detailModal').modal('show');
        }



        // function fnShowData() {
        //     $.ajax({
        //         url: '@Url.Action("ShowData", "ProfilePotensiOP")',
        //         type: 'GET',
        //         success: function (result) {
        //             $('#Show').html(result);
        //         },
        //         error: function () {
        //             $('#Show').html('<div class="alert alert-danger">Gagal memuat data Show.</div>');
        //         }
        //     });
        // }
    </script>
}

