@model MonPDReborn.Models.DataOP.ProfilePotensiOPVM.DetailPotensiPajakHiburan

@{
    Layout = "_Layout";
    ViewBag.Title = "Detail Potensi Pajak Fitnes";
}

<style>
    .bg-color-soft{
        background-color: #d4edda;
    }
</style>

@if (Model != null)
{

    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row gx-lg-5">

                        <div class="col-xl-12">
                            <div class="mt-xl-0 mt-5">
                                <div class="d-flex align-items-center mb-3">
                                    <!-- Logo di kiri -->
                                    <div class="me-3">
                                        <img src="/icon/hiburan.png" alt="Logo" style="height:56px; width:auto;">
                                    </div>

                                    <!-- Teks di kanan -->
                                    <div class="flex-grow-1">
                                        <h4 class="text-primary d-block fs-20 fw-bold">@Model.Nama</h4>
                                        <div class="hstack gap-3 flex-wrap">
                                            <div class="text-body fw-medium fs-14">@Model.FormattedNOP</div>
                                            <div class="vr"></div>
                                            <div class="text-body fw-medium fs-14">@Model.Alamat</div>
                                            <div class="vr"></div>
                                            <div class="text-body fw-medium fs-14 text-decoration-underline" style="cursor: pointer" onclick="window.open('/ProfileOP/Detail?nop=@Model.NOP&pajak=5', '_blank')">
                                                <i class="ri-external-link-line align-middle me-1"></i> Realisasi
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Card baris bawah -->
                                <div class="row mt-4">
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="p-2 border border-success rounded">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <div class="avatar-title rounded bg-transparent text-success fs-24">
                                                        <i class="ri-exchange-line"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="text-muted mb-1">Potensi per Bulan :</p>
                                                    <div class="text-body fw-medium fs-14">Rp. @Model.PotensiPajakPerBulanFitnes.ToString("N0")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- lanjut col lainnya... -->
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="p-2 border border-success rounded">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <div class="avatar-title rounded bg-transparent text-success fs-24">
                                                        <i class="ri-file-copy-2-fill"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="text-muted mb-1">Potensi per Tahun :</p>
                                                    <div class="text-body fw-medium fs-14">Rp. @Model.PotensiPajakPerTahunFitnes.ToString("N0")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end col -->
                                </div>

                                <hr />

                                <div class="product-content mt-2">
                                    <nav>
                                        <ul class="nav nav-tabs nav-tabs-custom nav-success" id="nav-tab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="nav-speci-tab" data-bs-toggle="tab" href="#nav-speci" role="tab" aria-controls="nav-speci" aria-selected="true">
                                                    <i class="ri-wallet-line align-middle me-1"></i>Potensi
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="nav-detail-tab" data-bs-toggle="tab" href="#nav-detail" role="tab" aria-controls="nav-detail" aria-selected="false">
                                                    <i class="ri-shield-user-line align-middle me-1"></i>Detail
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                    <div class="tab-content border border-top-0 p-4" id="nav-tabContent">
                                        <div class="tab-pane fade show active" id="nav-speci" role="tabpanel" aria-labelledby="nav-speci-tab">
                                            <table class="table mb-0">
                                                <tbody>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Potensi Pajak/Bulan</th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Omzet Bulanan x Tarif Pajak</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Jumlah Member x Harga Membership Bulanan x Tarif Pajak</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">@Model.EstimasiJumlahMemberFitnes.ToString("N0") Orang x Rp. @Model.HargaMemberFitness.ToString("N0") x @Model.TarifPajak.ToString("P0")</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rp. @Model.PotensiPajakPerBulanFitnes.ToString("N0")</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Potensi Pajak/Tahun</th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Potensi Pajak/Bulan x @Model.BulanSisa Bulan</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rp. @Model.PotensiPajakPerBulanFitnes.ToString("N0") x @Model.BulanSisa Bulan</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rp. @Model.PotensiPajakPerTahunFitnes.ToString("N0")</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="tab-pane fade" id="nav-detail" role="tabpanel" aria-labelledby="nav-detail-tab">
                                            <table class="table mb-0">
                                                <tbody>
                                                    <tr>
                                                        <th scope="row" style="width: 250px;">Kapasitas Pengunjung</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.Kapasitas.ToString("N0") Orang</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 250px;">Rata-rata Member Bulanan</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.EstimasiJumlahMemberFitnes.ToString("N0") Orang</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 250px;">Turnover Hari Kerja</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.TurnoverWeekdays.ToString("N2") Kali</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 250px;">Turnover Akhir Pekan</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.TurnoverWeekend.ToString("N2") Kali</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                            <hr />
                                            <table class="table mb-0">
                                                <tbody>
                                                    <tr>
                                                        <th scope="row" style="width: 250px;">Perhitungan Rata-rata Member Bulanan</th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">((Kapasitas x TurnoverWeekdays x 22 Hari) + (Kapasitas x TurnoverWeekend x 8 Hari)) / Rata-Rata Kunjungan per Bulan</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 250px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">((@Model.Kapasitas Orang x @Model.TurnoverWeekdays.ToString("N2") x 22 Hari) + (@Model.Kapasitas Orang x @Model.TurnoverWeekend.ToString("N2") x 8 Hari)) / 12 Kali</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 250px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">@Model.EstimasiJumlahMemberFitnes.ToString("N0") Orang</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
}
else
{
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="card text-center shadow-sm border-0">
                    <div class="card-body">
                        <img src="~/assets/images/coming-soon-img.png" alt="Tidak Ada Data" class="img-fluid mb-4" style="max-width: 180px;" />
                        <h5 class="card-title text-danger">Data Tidak Ditemukan</h5>
                        <p class="card-text text-muted">
                            Maaf, data yang Anda cari belum tersedia atau tidak ditemukan.
                            @* Coba ubah filter atau periksa kembali input Anda. *@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
