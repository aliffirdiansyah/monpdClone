@using MonPDReborn.Models.DataOP
@model ProfilePotensiOPVM.DetailPotensiPPJ

@{
    Layout = "_Layout";
    ViewBag.Title = "Detail Potensi Pajak Tenaga Listrik";

}
@if (Model !=null)
{
    
    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row gx-lg-5">

                        <div class="col-xl-12">
                            <div class="mt-xl-0 mt-5">
                                <div class="d-flex align-items-center mb-3">
                                    <!-- Logo di kiri -->
                                    <div class="me-3">
                                        <img src="/icon/listrik.png" alt="Logo" style="height:56px; width:auto;">
                                    </div>

                                    <!-- Teks di kanan -->
                                    <div class="flex-grow-1">
                                        <h4 class="text-primary d-block fs-20 fw-bold">@Model.NamaWp</h4>
                                        <div class="hstack gap-3 flex-wrap">
                                            <div class="text-body fw-medium fs-14">@Model.FormattedNOP</div>
                                            <div class="vr"></div>
                                            <div class="text-body fw-medium fs-14">@Model.Alamat</div>
                                            <div class="vr"></div>
                                            <div class="text-body fw-medium fs-14 text-decoration-underline" style="cursor: pointer" onclick="window.open('/ProfileOP/Detail?nop=@Model.NOP&pajak=2', '_blank')">
                                                <i class="ri-external-link-line align-middle me-1"></i> Realisasi
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Card baris bawah -->
                                <div class="row mt-4">
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="p-2 border border-success rounded">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <div class="avatar-title rounded bg-transparent text-success fs-24">
                                                        <i class="ri-exchange-line"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="text-muted mb-1">Rata - rata NJTL 6 Bulan :</p>
                                                    <div class="text-body fw-medium fs-14">Rp. @Model.RataRataNJTL.ToString("N0")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @{
                                        var total = Model.TotalPajak * 12;
                                    }
                                    <!-- lanjut col lainnya... -->
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="p-2 border border-success rounded">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <div class="avatar-title rounded bg-transparent text-success fs-24">
                                                        <i class="ri-file-copy-2-fill"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="text-muted mb-1">Total Pajak per Tahun :</p>
                                                    <div class="text-body fw-medium fs-14">Rp. @total.ToString("N0") / 1 tahun</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end col -->
                                </div>

                                <hr />

                                <div class="product-content mt-2">
                                    <nav>
                                        <ul class="nav nav-tabs nav-tabs-custom nav-success" id="nav-tab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="nav-speci-tab" data-bs-toggle="tab" href="#nav-speci" role="tab" aria-controls="nav-speci" aria-selected="true">
                                                    <i class="ri-wallet-line align-middle me-1"></i>Potensi
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="nav-detail-tab" data-bs-toggle="tab" href="#nav-detail" role="tab" aria-controls="nav-detail" aria-selected="false">
                                                    <i class="ri-shield-user-line align-middle me-1"></i>Detail
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                    <div class="tab-content border border-top-0 p-4" id="nav-tabContent">
                                        <div class="tab-pane fade show active" id="nav-speci" role="tabpanel" aria-labelledby="nav-speci-tab">
                                            <table class="table mb-0">
                                                <tbody>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Pajak</th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rata-rata NJTL x 1.5%</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rp. @Model.RataRataNJTL.ToString("N0") x @Model.TarifPajak.ToString("P1")</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rp. @Model.TotalPajak.ToString("N0")</td>
                                                    </tr>

                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Total Pajak Penerangan Jalan</th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Total Pajak x 12 Bulan</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;"></th>
                                                        <th scope="row" style="width: 20px;">=</th>
                                                        <td class="text-body fw-medium">Rp. @total.ToString("N0") / 1 tahun</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="tab-pane fade" id="nav-detail" role="tabpanel" aria-labelledby="nav-detail-tab">
                                            <table class="table mb-0">
                                                <tbody>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Status</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.Status</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Periode Data</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.PeriodeData</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Tarif Pajak</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.TarifPajak.ToString("P1")</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Konsistensi NJTL</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.KonsistensiNJTL</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row" style="width: 200px;">Tanggal Perhitungan</th>
                                                        <th scope="row" style="width: 20px;">:</th>
                                                        <td class="text-body fw-medium">@Model.TanggalPerhitungan</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
}
else
{
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="card text-center shadow-sm border-0">
                    <div class="card-body">
                        <img src="~/assets/images/coming-soon-img.png" alt="Tidak Ada Data" class="img-fluid mb-4" style="max-width: 180px;" />
                        <h5 class="card-title text-danger">Data Tidak Ditemukan</h5>
                        <p class="card-text text-muted">
                            Maaf, data yang Anda cari belum tersedia atau tidak ditemukan.
                            @* Coba ubah filter atau periksa kembali input Anda. *@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

