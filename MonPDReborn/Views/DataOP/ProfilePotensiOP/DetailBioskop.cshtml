@model MonPDReborn.Models.DataOP.ProfilePotensiOPVM.DetailPotensiPajakHiburan

@{
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card border border-warning border-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="d-flex p-3">
                            <div class="flex-shrink-0">
                                <div class="avatar-md me-3">
                                    <span class="avatar-title bg-soft-warning rounded-circle fs-1">
                                        <i class="ri-film-line text-warning"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="mt-2">
                                <h4 class="fs-16 fw-semibold">
                                    @Model.Nama
                                </h4>
                                <p class="fs-16 lh-base">
                                    @Model.Alamat
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="d-flex p-3">
                            <h3 class="fs-16 fw-semibold">Potensi Pajak</h3>
                        </div>
                        <div class="d-flex p-3 py-0">
                            <p class="fs-14 text-muted flex-grow-1">Per Bulan</p>
                            <div class="flex-shrink-0">
                                <p class="fs-16 fw-semibold">Rp @Model.PotensiPajakPerBulanBioskop.ToString("N0")</p>
                            </div>
                        </div>
                        <div class="d-flex p-3 py-0">
                            <p class="fs-14 text-muted flex-grow-1">Per Tahun</p>
                            <div class="flex-shrink-0">
                                <p class="fs-16 fw-semibold">Rp @Model.PotensiPajakPerTahunBioskop.ToString("N0")</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="d-flex p-3">
                            <div class="flex-shrink-0 ms-3">
                                <p class="fs-14 text-muted mb-1">NOP</p>
                                <p class="fs-14 fw-semibold mb-3">@Model.NOP</p>
                            </div>
                            <div class="flex-shrink-0 ms-5">
                                <p class="fs-14 text-muted mb-1">Kapasitas Kursi Studio</p>
                                <p class="fs-14 fw-semibold mb-3">@Model.KapasitasStudio.ToString("N0") Kursi</p>
                            </div>
                            <div class="flex-shrink-0 ms-3">
                                <p class="fs-14 text-muted mb-1">Kursi Terjual per Hari</p>
                                <p class="fs-14 fw-semibold mb-3">0 Tiket</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex bg-soft-warning"><h4 class="card-title fs-16 mb-0">Detail Kunjungan Bioskop</h4></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card border border-danger border-2 h-100">
                            <div class="card-body bg-soft-danger bg-opacity-25 text-center">
                                <h3 class="fs-18 fw-semibold mb-1">@Model.JumlahPengunjungWeekdaysBioskop.ToString("N0")</h3>
                                <h4 class="fs-14">Rata-rata Pengunjung Hari Kerja</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card border border-warning border-2 h-100">
                            <div class="card-body bg-soft-warning bg-opacity-25 text-center">
                                <h3 class="fs-18 fw-semibold mb-1">@Model.JumlahPengunjungWeekendBioskop.ToString("N0")</h3>
                                <h4 class="fs-14">Rata-rata Pengunjung Akhir Pekan</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex bg-soft-warning"><h4 class="card-title fs-16 mb-0">Detail Omzet Bulanan</h4></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex"><p class="fs-14 text-muted flex-grow-1">Harga Tiket Hari Kerja</p><div class="flex-shrink-0"><p class="fs-14 fw-semibold">Rp @Model.HTMWeekdays.ToString("N0")</p></div></div>
                                    <div class="d-flex"><p class="fs-14 text-muted flex-grow-1">Harga Tiket Akhir Pekan</p><div class="flex-shrink-0"><p class="fs-14 fw-semibold">Rp @Model.HTMWeekend.ToString("N0")</p></div></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card border border-warning border-2 h-100">
                                <div class="card-body bg-soft-warning bg-opacity-25 text-center">
                                    <h5 class="fs-16 fw-semibold mb-3">Omzet Bulanan</h5>
                                    <h3 class="fs-22 fw-bold mb-1">Rp @Model.OmzetPerBulanBioskop.ToString("N0")</h3>
                                    <p class="fs-12 text-muted mb-1">Total pendapatan dari penjualan tiket</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header d-flex bg-soft-warning"><h4 class="card-title fs-16 mb-0">Ringkasan</h4></div>
            <div class="card-body">
                <div class="info-row">
                    <p class="label">NOP</p>                    
                    <p class="value">@Model.NOP</p>                    
                </div>
                <div class="info-row">
                    <p class="label">Nama Bioskop</p>                    
                    <p class="value">@Model.Nama</p>                    
                </div>
                <div class="info-row">
                    <p class="label">Alamat</p>                    
                    <p class="value">@Model.Alamat</p>                    
                </div>
                <hr class="my-2">
                <div class="info-row">
                    <p class="label">Kapasitas Kursi Studio</p>                    
                    <p class="value">@Model.KapasitasStudio.ToString("N0") Kursi</p>                    
                </div>
                <div class="info-row">
                    <p class="label">Kursi Terjual per Hari Kerja</p>                    
                    <p class="value">@Model.JumlahPengunjungWeekdaysBioskop Tiket</p>                    
                </div>
                <div class="info-row">
                    <p class="label">Kursi Terjual per Akhir Pekan</p>                    
                    <p class="value">@Model.JumlahPengunjungWeekendBioskop Tiket</p>                    
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-soft-warning">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Rumus Lengkap Perhitungan Potensi Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <h4 class="fs-14 fw-semibold mb-2">
                    P = (((Harga Tiket Masuk Hari Kerja x Kursi Studio Terjual per Hari x Turnover Hari Kerja x 22) + (Harga Tiket Masuk Akhir Pekan x Kursi Studi Terjual per Hari x Turnover Akhir Pekan x 8)) x Tarif Pajak) x 12
                </h4>
                <h4 class="fs-14 fw-semibold mb-2">
                    P = (((f x d x l x 22) + (g x d x j x 8)) x Tarif Pajak) x 12
                </h4>
                <h4 class="fs-14 fw-semibold mb-2">
                    P = (((0 x 0 x 0 x 22) + (0 x 0 x 0 x 8)) x Tarif Pajak) x 12
                </h4>
                <h4 class="fs-14 fw-semibold mb-2">
                    P = ((0 + 0) x 0,00) x 12
                </h4>
                <h4 class="fs-14 fw-semibold mb-2">
                    P = (0 x 0,00) x 12
                </h4>
                <h4 class="fs-14 fw-semibold mb-2">
                    P = 0 x 12
                </h4>
                <h4 class="fs-14 fw-semibold mb-2">
                    P = Rp 0
                </h4>
            </div>
        </div>
    </div>
</div>