<div class="table-responsive">

    @(Html.DevExtreme().DataGrid<object>()
        .ID("detailWilayahOPGrid")
        .DataSource(new JS("[]")) // Awalnya kosong
        .ShowColumnLines(true)
        .ShowRowLines(true)
        .ShowBorders(true)
        .ShowColumnHeaders(true)
        .RowAlternationEnabled(true)
        .ColumnAutoWidth(true)
        .SearchPanel(s => s.Visible(true).HighlightCaseSensitive(false))
        .FilterRow(f => f.Visible(true))
        .HeaderFilter(h => h.Visible(true))
        .Sorting(s => s.Mode(GridSortingMode.Multiple))
        .Paging(p => p.PageSize(10))
        .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 10, 20, 50 })
        .ShowInfo(true)
        )
        .SearchPanel(sp => sp
        .Visible(true)
        .Width(240)
        .Placeholder("Cari...")
        )
        .Export(e => e.Enabled(true).AllowExportSelectedData(false).Formats(new[] { "xlsx", "pdf" }))
        .OnExporting("exportGrid")
        .Columns(columns =>
        {
                @* columns.Add().DataField("NOP").Caption("NOP"); *@
                columns.Add().DataField("FormattedNOP").Caption("NOP");
                columns.Add().DataField("NamaOP").Caption("Nama OP");
                columns.Add().DataField("Alamat").Caption("Alamat");
                columns.Add().DataField("Wilayah").Caption("Wilayah");
                columns.Add()
                .Type(GridCommandColumnType.Buttons)
                .Buttons(b =>
                {
                        b.Add()
                .Text("Detail")
                .Icon("search")
                .OnClick("onDetail");
                });
        })
        )
</div>