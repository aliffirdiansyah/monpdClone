@model MonPDReborn.Models.DataOP.ProfileOPVM.ShowRekap

<div class="table-responsive">
    @(
        Html.DevExtreme().DataGrid<MonPDReborn.Models.DataOP.ProfileOPVM.RekapOP>()
                .ID("RekapOPGrid")
                .DataSource(Model.DataRekapOPList)
                .ShowBorders(true)
                .ShowRowLines(true)
                .ShowColumnLines(true)
                .ShowColumnHeaders(true)
                .RowAlternationEnabled(true)
                .AllowColumnResizing(true)
                .Paging(p => p.PageSize(10))
                .Pager(p => p
                .ShowInfo(true)
                .ShowPageSizeSelector(true)
                .AllowedPageSizes(new[] { 5, 10, 20 })
                )
                .Columns(columns =>
                {
                    columns.AddFor(m => m.JenisPajak).Caption("Jenis Pajak").CssClass("fw-bold");
                    columns.AddFor(m => m.OPAwal).Caption("OP Awal");
                    columns.AddFor(m => m.TutupSementara).Caption("Tutup Sementara");
                    columns.AddFor(m => m.TutupPermanen).Caption("Tutup Permanen");
                    columns.AddFor(m => m.OPBaru).Caption("OP Baru");
                    columns.AddFor(m => m.Buka).Caption("Buka");
                })
                .Summary(summary =>
                {
                    summary.TotalItems(items =>
                    {
                        items.AddFor(m => m.JenisPajak).SummaryType(SummaryType.Custom).DisplayFormat("Total");
                        items.AddFor(m => m.OPAwal).SummaryType(SummaryType.Sum).DisplayFormat("{0}");
                        items.AddFor(m => m.TutupSementara).SummaryType(SummaryType.Sum).DisplayFormat("{0}");
                        items.AddFor(m => m.TutupPermanen).SummaryType(SummaryType.Sum).DisplayFormat("{0}");
                        items.AddFor(m => m.OPBaru).SummaryType(SummaryType.Sum).DisplayFormat("{0}");
                        items.AddFor(m => m.Buka).SummaryType(SummaryType.Sum).DisplayFormat("{0}");
                    });
                })
                .MasterDetail(md =>
                {
                md.Enabled(true);
                md.Template(
                @<text>
                    @{
                        ViewData["JenisPajak"] = new JS("data.EnumPajak");
                        ViewData["tahun"] = new JS("data.Tahun");
                    }
                @await Html.PartialAsync("/Views/DataOP/ProfileOP/_RekapDetail.cshtml")
            </text>);
                })
       )
</div>


