@model MonPDReborn.Models.DataOP.ProfileOPVM.Index

@{
    ViewData["Title"] = "Profil Objek Pajak";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Profil Objek Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-border-top nav-border-top-primary mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#op-rekap" role="tab">
                            Rekap Jumlah OP
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#op-series" role="tab" onclick="fnShowSeries()">
                            Series Jumlah OP
                        </a>
                    </li>
                </ul>

                <div class="tab-content text-muted">
                    <div class="tab-pane active" id="op-rekap" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowRekap" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title fs-16 mb-0">Rekap Jumlah Objek Pajak</h4>
                            <div class="dropdown">
                                <select id="ddlTahun" class="form-select form-select mb-3 w-auto"
                                        style="background-color: #f0f8ff; color: #333; border-color: #0d6efd;">
                                    <!-- Tahun akan diisi dengan JavaScript -->
                                </select>
                            </div>
                        </div>

                        <div id="ShowRekap"></div>
                    </div>

                    <div class="tab-pane" id="op-series" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowSeries" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div id="ShowSeries"></div>
                    </div>
                </div>

            </div>
        </div> 
    </div>
</div>

<!-- ✅ Detail RekapMaster di luar tab -->
<div class="row">
    <div class="col-lg-12" id="detailWrapper" style="display: none;">
        <div class="card">
            <div class="card-body">
                <div id="detailContainer" class="mt-4">
                    @Html.Partial("~/Views/DataOP/ProfileOP/_RekapMaster.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Detail SeriesMaster di luar tab -->
<div class="row">
    <div class="col-lg-12" id="detailWrapperSeries" style="display: none;">
        <div class="card">
            <div class="card-body">
                <div id="detailContainerSeries" class="mt-4">
                    @Html.Partial("~/Views/DataOP/ProfileOP/_SeriesMaster.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
            // Mendapatkan tahun sekarang
        const currentYear = new Date().getFullYear();
        const startYear = 2021;
        const endYear = 2025;
        const ddlTahun = document.getElementById("ddlTahun");

        for (let year = startYear; year <= endYear; year++) {
            const option = document.createElement("option");
            option.value = year;
            option.text = year;
            if (year === currentYear) {
                option.selected = true;
            }
            ddlTahun.appendChild(option);
        }

        $('#ddlTahun').on('change', function () {
            var tahun = $(this).val();
            fnShowRekap("", tahun); // Kirim tahun dan kosongkan keyword jika tidak dipakai
        });

        $(document).ready(function () {
            var tahun = $('#ddlTahun').val(); // ambil default tahun saat page load
            fnShowRekap("", tahun);
            fnShowSeries();
        });

        function fnShowRekap(keyword, tahun)
        {
            $.ajax({
                url: '@(Url.Action("ShowRekap"))',
                type: 'GET',
                data: {
                    keyword: keyword || "",   // aman walau undefined/null
                    tahun: tahun || new Date().getFullYear()  // fallback
                },
                beforeSend: function () {
                    $('#loading2-ShowRekap').show();
                    $('#ShowRekap').hide();
                },
                success: function (response) {
                    $('#loading2-ShowRekap').hide();
                    $('#ShowRekap').show().html(response);
                },
                error: function (xhr) {
                    $('#loading2-ShowRekap').hide();
                    $('#ShowRekap').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
                }
            });
        }



        function fnShowSeries()
        {
            $.ajax({
              url: '@(Url.Action("ShowSeries"))',
              type: 'GET',
              beforeSend: function () {
                 $('#loading2-ShowSeries').show();
                 $('#ShowSeries').hide();
              },
              success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowSeries').hide();
                        $('#ShowSeries').show();
                        $('#ShowSeries').html(response);
                    }
                    else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        })
                    }
              },
              error: function (xhr, status, error) {
                 $('#loading2-ShowSeries').hide();
                 $('#ShowSeries').hide();
                 $('#ShowSeries').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
              }
           });
        }

        function onDetailClick(enumPajak, kategori, status) {
            $.ajax({
                url: '/ProfileOP/RekapMaster',
                type: 'GET',
                data: {
                    enumPajak: enumPajak,
                    kategori: kategori,
                    status: status
                },
                success: function (data) {
                    const grid = $("#detailGrid").dxDataGrid("instance");
                    grid.option("dataSource", data);

                    // Tampilkan Rekap, Sembunyikan Series
                    $("#detailWrapper").show();
                    $("#detailWrapperSeries").hide();
                },
                error: function () {
                    alert("❌ Gagal memuat data Rekap.");
                }
            });
        }


         function onDetail(e) {
             
             window.open(url, '_blank');
         }

        function onSeriesClick(enumPajak, kategori, status) {
            $.ajax({
                url: '@(Url.Action("SeriesMaster"))',
                type: 'GET',
                data: {
                    enumPajak: enumPajak,
                    kategori: kategori,
                    status: status
                },
                success: function (data) {
                    const grid = $("#SeriesGrid").dxDataGrid("instance"); // ✅ harus grid Series
                    grid.option("dataSource", data);

                    $("#detailWrapperSeries").show(); // ✅ pastikan ini bagian Series
                    $("#detailWrapper").hide();

                },
                error: function () {
                    alert("❌ Gagal memuat data detail.");
                }
            });
        }



          function onDetailSeries(e) {

              window.open(url, '_blank');
          }
          

    </script>
}