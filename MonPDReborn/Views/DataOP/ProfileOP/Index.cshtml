        function fnShowSeries()
        {
            $.ajax({
              url: '@(Url.Action("JmlSeries"))',
              type: 'GET',
              beforeSend: function () {
                 $('#loading2-ShowSeries').show();
                 $('#ShowSeries').hide();
              },
              success: function (response) {
                    if (response.Status === undefined) {
                        $('#loading2-ShowSeries').hide();
                        $('#ShowSeries').show();
                        $('#ShowSeries').html(response);
                    }
                    else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: response.Message
                        })
                    }
              },
              error: function (xhr, status, error) {
                 $('#loading2-ShowSeries').hide();
                 $('#ShowSeries').hide();
                 $('#ShowSeries').html('<p class="text-danger">Terjadi kesalahan saat memuat data.</p>');
              }
           });
        }
        function onDetail(e) {
            var nop = e.row.data.NOP;
            var pajak = e.row.data.EnumPajak;
            var url = '@Url.Action("Detail", "ProfileOP")'
                        + '?nop=' + nop
                        + '&pajak=' + pajak;
            window.open(url, '_blank');
        }
        // 📌 Rekap Master
        function onDetailClick(enumPajak, kategori, status, tahun) {
            // Tampilkan wrapper & spinner dulu
            $('#detailModal').modal('show');
            $('#detailLoading').show();
            $('#detailContainer').hide();

            $.ajax({
                url: '/ProfileOP/RekapMaster',
                type: 'GET',
                data: {
                    enumPajak: enumPajak,
                    kategori: kategori,
                    status: status,
                    tahun:tahun
                },
                success: function (data) {
                    const grid = $("#detailGrid").dxDataGrid("instance");

                    grid.option("dataSource", data);

                    setTimeout(function () {
                        $("#detailLoading").fadeOut(300, function () {
                            $("#detailContainer").fadeIn(300);
                        });
                    }, 500);

                    // Sembunyikan panel Series
                    $("#detailWrapperSeries").hide();
                },
                error: function () {
                    swal.fire({
                        icon: 'error',
                        title: '<b style="color:orange">Peringatan</b>',
                        text: "❌ Gagal memuat data Rekap."
                    });
                    hideDetail();
                }

            });
        }

        function hideDetail() {
            $("#detailWrapper").slideUp();
        }

        // 📌 Series Master
                function onSeriesClick(enumPajak, kategori, tahun, status ) {
            const $modal = $('#detailModalSeries');
            const $loading = $("#detailLoadingSeries");
            const $container = $("#detailContainerSeries");
            const $wrapper = $("#detailWrapper");

            $modal.modal('show');
            $container.hide();
            $loading.show();

            $.ajax({
                url: '/ProfileOP/DetailOP',
                method: 'GET',
                data: {
                    enumPajak,
                    kategori,
                    tahun,
                    status
                },
                success: function (data) {
                    const grid = $("#detailOPGrid").dxDataGrid("instance");
                    if (grid) {
                        grid.option("dataSource", data);
                    }

                    setTimeout(() => {
                        $loading.fadeOut(300, () => {
                            $container.fadeIn(300);
                        });
                    }, 500);

                    // Sembunyikan panel Rekap
                    $wrapper.hide();
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: '<b style="color:orange">Peringatan</b>',
                        html: "❌ Gagal memuat data Series."
                    });
                    hideDetailSeries?.();
                }
            });
        }

        function hideDetailSeries() {
            $("#detailWrapperSeries").slideUp();
        }

        $(document).ready(function () {
            $("#btnCloseDetail").on("click", hideDetail);
            $("#btnCloseDetailSeries").on("click", hideDetailSeries);
        });


