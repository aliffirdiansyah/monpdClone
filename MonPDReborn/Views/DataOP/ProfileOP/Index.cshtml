@model MonPDReborn.Models.DataOP.ProfileOPVM.Index

@{
   
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-dark fs-16 mb-0">
                        Dashboard Profil Objek Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-border-top nav-border-top-primary mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#op-rekap" role="tab">
                            Rekap Jumlah OP
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#op-series" role="tab" onclick="fnShowSeries()">
                            Series Jumlah OP
                        </a>
                    </li>
                </ul>

                <div class="tab-content text-muted">
                    <div class="tab-pane active" id="op-rekap" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowRekap" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title fs-16 mb-0">Rekap Jumlah Objek Pajak</h4>
                            <div class="dropdown">
                                <select id="ddlTahun" class="form-select form-select mb-3 w-auto"
                                        style="background-color: #f0f8ff; color: #333; border-color: #0d6efd;">
                                    <!-- Tahun akan diisi dengan JavaScript -->
                                </select>
                            </div>
                        </div>

                        <div id="ShowRekap"></div>

                        <div class="modal fade" id="detailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="detailModalLabel">
                                            Detail Rekap
                                        </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div id="detailLoading" class="text-center my-4">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>

                                        <div id="detailContainer" class="mt-4" style="display: none;">
                                            @Html.Partial("~/Views/DataOP/ProfileOP/_RekapMaster.cshtml")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="op-series" role="tabpanel">
                        <div class="text-center">
                            <div id="loading2-ShowSeries" class="spinner-border text-primary" style="display: none">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                        <div id="ShowSeries"></div>

                        <div class="modal fade" id="detailModalSeries" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="detailModalSeriesLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="detailModalSeriesLabel">
                                            Detail Series
                                        </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                                    </div>

                                    <div class="modal-body">
                                        <div id="detailLoadingSeries" class="text-center my-4">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>

                                        <div id="detailContainerSeries" class="mt-4" style="display: none;">
                                            @Html.Partial("~/Views/DataOP/ProfileOP/_DetailOP.cshtml")
                                        </div>
                                    </div>

                                    
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div> 
    </div>

</div>



