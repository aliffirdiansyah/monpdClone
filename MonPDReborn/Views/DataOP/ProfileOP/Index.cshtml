@model MonPDReborn.Models.DataOP.ProfileOPVM.Index

@{
    ViewData["Title"] = "Profil Objek Pajak";
    Layout = "_Layout";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title fs-16 mb-0">
                        Dashboard Profil Objek Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <ul class="nav nav-pills justify-content-start profile-tab rounded-0" id="profile-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-rekap" type="button" role="tab" aria-controls="pills-rekap" aria-selected="true">
                            <i class="ti ti-user-circle fs-5 me-2"></i>Rekap Jumlah OP
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-lokasi-tab" data-bs-toggle="pill" data-bs-target="#pills-series" type="button" role="tab" aria-controls="pills-series" aria-selected="false">
                            <i class="ti ti-map fs-5 me-2"></i>Series Jumlah OP
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-lg-12 tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-rekap" role="tabpanel" aria-labelledby="pills-rekap-tab">
            <div class="card">
                <div class="card-header d-flex">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Rekap Jumlah Objek Pajak
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-lg-4">
                            <div class="card border border-danger border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fs-14 text-muted mb-3">Total Objek Pajak</h4>
                                            <h4 class="fs-16 fw-bold mb-0">0</h4>
                                        </div>
                                        <i class="ri-group-fill fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="card border border-danger border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fs-14 text-muted mb-3">Pertumbuhan</h4>
                                            <h4 class="fs-16 fw-bold mb-0">0</h4>
                                        </div>
                                        <i class="ri-funds-box-fill fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="card border border-danger border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fs-14 text-muted mb-3">Penutupan</h4>
                                            <h4 class="fs-16 fw-bold mb-0">0</h4>
                                        </div>
                                        <i class="ri-close-circle-fill  fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div id="Show" class="mb-5"></div>
                    
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-series" role="tabpanel" aria-labelledby="pills-series-tab">
            <div class="card">
                <div class="card-header d-flex">
                    <div class="flex-grow-1">
                        <h4 class="card-title fs-16 mb-0">
                            Series Jumlah Objek Pajak
                        </h4>
                    </div>
                </div>
                <div class="card-body">

                    <div class="row">

                        <div class="col-lg-4">
                            <div class="card border border-danger border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fs-14 text-muted mb-3">Total Objek Pajak Tahun Ini</h4>
                                            <h4 class="fs-16 fw-bold mb-0">0</h4>
                                        </div>
                                        <i class="ri-group-fill fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="card border border-danger border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fs-14 text-muted mb-3">Pertumbuhan Objek Pajak Tahun Ini</h4>
                                            <h4 class="fs-16 fw-bold mb-0">+ 0</h4>
                                        </div>
                                        <i class="ri-funds-box-fill fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="card border border-danger border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="fs-14 text-muted mb-3">Kenaikan Tertinggi</h4>
                                            <h4 class="fs-16 fw-bold mb-0">Pajak</h4>
                                        </div>
                                        <i class="ri-trophy-fill  fs-2 text-danger"></i> <!-- Ikon di kanan -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div id="ShowSeries"></div>

                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            loadShowRekap("");      // Panggil data rekap jumlah
            loadShowSeries("");
        });

        function loadShowRekap() {
            console.log("Memuat ShowRekap...");
            $.ajax({
                url: '@Url.Action("ShowRekap", "ProfileOP")',
                type: 'GET',
                success: function (result) {
                    console.log("Sukses load:", result);
                    $('#Show').html(result);
                },
                error: function (xhr) {
                    console.error("Gagal:", xhr.responseText);
                    $('#Show').html('<div class="alert alert-danger">Gagal memuat data Show.</div>');
                }
            });
        }

        function subRekapTemplate(container, options) {
            var jenisPajak = options.data?.JenisPajak;
            console.log("subRekapTemplate - JenisPajak:", jenisPajak);

            var innerContainer = $("<div>").addClass("p-2").text("Memuat data...");
            container.append(innerContainer);

            if (!jenisPajak) {
                innerContainer.html('<div class="text-danger">Jenis Pajak tidak ditemukan.</div>');
                return;
            }

            $.ajax({
                url: '@Url.Action("SubDetail", "PemasanganAlat")',
                type: 'GET',
                data: { jenisPajak: jenisPajak },
                success: function (result) {
                    innerContainer.html(result);
                },
                error: function () {
                    innerContainer.html('<div class="text-danger">Gagal memuat data sub-detail.</div>');
                }
            });
        }

        function loadShowSeries() {
            console.log("Memuat ShowSeries...");
            $.ajax({
                url: '@Url.Action("ShowSeries", "ProfileOP")',
                type: 'GET',
                success: function (result) {
                    console.log("Sukses load:", result);
                    $('#ShowSeries').html(result);
                },
                error: function (xhr) {
                    console.error("Gagal:", xhr.responseText);
                    $('#ShowSeries').html('<div class="alert alert-danger">Gagal memuat data Show.</div>');
                }
            });
        }


        function subSeriesTemplate(container, options) {
            var jenisPajak = options.data?.JenisPajak;
            console.log("subRekapTemplate - JenisPajak:", jenisPajak);

            var innerContainer = $("<div>").addClass("p-2").text("Memuat data...");
            container.append(innerContainer);

            if (!jenisPajak) {
                innerContainer.html('<div class="text-danger">Jenis Pajak tidak ditemukan.</div>');
                return;
            }

            $.ajax({
                url: '@Url.Action("SubDetail", "PemasanganAlat")',
                type: 'GET',
                data: { jenisPajak: jenisPajak },
                success: function (result) {
                    innerContainer.html(result);
                },
                error: function () {
                    innerContainer.html('<div class="text-danger">Gagal memuat data sub-detail.</div>');
                }
            });
        }
    </script>
}