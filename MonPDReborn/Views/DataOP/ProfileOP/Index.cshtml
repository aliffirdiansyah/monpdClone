@model MonPDReborn.Models.DataOP.ProfileOPVM.Index

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex">
            <div class="flex-grow-1">
                <h4 class="card-title fs-16 mb-0">
                    Profil Objek Pajak
                </h4>
            </div>
        </div>
        <div class="card-body">
            @{
                Html.DevExtreme().TextBox()
                    .ID("searchBox")
                    .Placeholder("Cari Objek Pajak atau NOP....")
                    .ShowClearButton(true)
                    .Value("")
                    .Render();
            }
        </div>
    </div>
</div>
<div class="card position-relative overflow-hidden mb-4">
    <!-- Header Background Image -->
    <div class=" position-relative">
        <img src="~/assets/images/comingsoon.png" alt="" class="img-fluid w-100" style="height: 500px; object-fit: cover;">
    </div>

    <!-- Profile Avatar & Info -->
    <div class="container position-relative" style="margin-top: -100px;">
        <div class="d-flex flex-column align-items-center">
            <div class="avatar-xxl mb-3 position-relative">
                <img src="~/assets/images/user-illustarator-1.png" alt="" class="rounded-circle avatar-xl border border-3 border-white shadow">
            </div>
            <div class="text-center">
                <h5 class="mb-1">THE WESTIN SURABAYA</h5>
                <p class="text-muted mb-0">Puncak Indah Lontar No. 2</p>
            </div>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="card bg-info-subtle shadow-none border-0 mt-4">
        <div class="card-body px-4 py-3">
            <ul class="nav nav-pills justify-content-center profile-tab rounded-0" id="profile-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="true">
                        <i class="ti ti-user-circle fs-5 me-2"></i> Profil
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-lokasi-tab" data-bs-toggle="pill" data-bs-target="#pills-lokasi" type="button" role="tab" aria-controls="pills-lokasi" aria-selected="false">
                        <i class="ti ti-map fs-5 me-2"></i> Lokasi
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-gallery-tab" data-bs-toggle="pill" data-bs-target="#pills-gallery" type="button" role="tab" aria-controls="pills-gallery" aria-selected="false">
                        <i class="ti ti-photo-plus fs-5 me-2"></i> Gallery
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-detail-tab" data-bs-toggle="pill" data-bs-target="#pills-detail" type="button" role="tab" aria-controls="pills-detail" aria-selected="false">
                        <i class="ti ti-photo-plus fs-5 me-2"></i> Detail
                    </button>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Tab Content Container -->
<div class="tab-content" id="pills-tabContent">
    <!-- Profil Tab -->
    <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <!-- Identitas Objek Pajak Card -->
        <div class="card mb-4">
            <div class="card bg-soft-secondary border-0 mb-0">
                <div class="card-body px-4 py-3">
                    <h4 class="fw-semibold mb-0">Identitas Objek Pajak</h4>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Nama Objek Pajak</span>
                    <span>@Model.IdentitasPajak.NamaObjekPajak</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Alamat Lengkap</span>
                    <span>@Model.IdentitasPajak.AlamatLengkap</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Kecamatan – Kelurahan</span>
                    <span>@Model.IdentitasPajak.Kecamatan_Kelurahan</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">NOP</span>
                    <span>@Model.IdentitasPajak.NamaObjekPajak</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Telp</span>
                    <span>@Model.IdentitasPajak.Telepon</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Tanggal Buka</span>
                    <span>@Model.IdentitasPajak.TanggalBuka</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-semibold">Jenis Objek Pajak</span>
                    <span>@Model.IdentitasPajak.JenisObjekPajak</span>
                </li>
            </ul>
        </div>

        <!-- Card Row -->
        <div class="row g-3">
            <!-- Data Perizinan -->
            <div class="col-md-6 col-lg-6">
                <div class="card mb-4">
                    <div class="card bg-soft-secondary border-0">
                        <div class="card-body px-4 py-3">
                            <h4 class="fw-semibold mb-0">Data Perizinan</h4>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Nomor IMB</span><span>@Model.Perizinan.NomorIMB</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Tanggal IMB</span><span>@Model.Perizinan.TanggalIMB</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Nomor SITU/NIB</span><span>@Model.Perizinan.NomorSITU_NIB</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Nomor Izin Operasional</span><span>@Model.Perizinan.NomorIzinOperasional</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Sarana Pendukung -->
            <div class="col-md-6 col-lg-6">
                <div class="card mb-4">
                    <div class="card bg-soft-secondary border-0">
                        <div class="card-body px-4 py-3">
                            <h4 class="fw-semibold mb-0">Sarana Pendukung</h4>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Jumlah Karyawan</span><span>@Model.FasilitasPendukung.JumlahKaryawan</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">MetodePembayaran</span><span>@Model.FasilitasPendukung.MetodePembayaran</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">MetodePenjualan</span><span>@Model.FasilitasPendukung.MetodePenjualan</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Lokasi Tab -->
    <div class="tab-pane fade" id="pills-lokasi" role="tabpanel" aria-labelledby="pills-lokasi-tab">
        <div class="card mb-4">
            <div class="card bg-info-subtle border-0 mb-0">
                <div class="card-body px-4 py-3">
                    <h4 class="fw-semibold mb-0">Lokasi Objek Pajak</h4>
                </div>
            </div>
            <div class="card-body px-0 py-3">
                <iframe src="https://www.google.com/maps/embed?pb=..." width="100%" height="400" style="border:0;" allowfullscreen loading="lazy"></iframe>
            </div>
        </div>
    </div>

    <!-- Gallery Tab -->
    <div class="tab-pane fade" id="pills-gallery" role="tabpanel" aria-labelledby="pills-gallery-tab">
        <div class="card mb-4">
            <div class="card-body px-4 py-3">
                <h4 class="fw-semibold mb-0">
                    Gallery <span class="badge bg-secondary ms-2">5</span>
                </h4>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-md-6 col-lg-4">
                <div class="card overflow-hidden hover-img">
                    <img src="~/assets/images/comingsoon.png" class="card-img-top object-fit-cover" alt="...">
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card overflow-hidden hover-img">
                    <img src="~/assets/images/comingsoon.png" class="card-img-top object-fit-cover" alt="...">
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card overflow-hidden hover-img">
                    <img src="~/assets/images/comingsoon.png" class="card-img-top object-fit-cover" alt="...">
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card overflow-hidden hover-img">
                    <img src="~/assets/images/comingsoon.png" class="card-img-top object-fit-cover" alt="...">
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card overflow-hidden hover-img">
                    <img src="~/assets/images/comingsoon.png" class="card-img-top object-fit-cover" alt="...">
                </div>
            </div>
        </div>
    </div>

    <!-- Detail Tab -->
    <div class="tab-pane fade" id="pills-detail" role="tabpanel" aria-labelledby="pills-detail-tab">
        <div class="card mb-4">
            <div class="card bg-info-subtle border-0 mb-0">
                <div class="card-body px-4 py-3">
                    <h4 class="fw-semibold mb-0">Detail</h4>
                </div>
            </div>
            <div class="card-body px-0 py-3">
                <div class="row">
                    <!-- Detail Banquet -->
                    <div class="col-lg-12 mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold">Detail Banquet</h5>
                            <table class="table table-bordered">
                                <thead class="table-light text-center">
                                    <tr>
                                        <th>Nama</th>
                                        <th>Jumlah</th>
                                        <th>Jenis</th>
                                        <th>Kapasitas</th>
                                        <th>Harga Sewa</th>
                                        <th>Harga Paket</th>
                                        <th>Okupansi (%)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.BanquetDetail.Nama</td>
                                        <td class="text-center">@Model.BanquetDetail.Jumlah</td>
                                        <td class="text-center">
                                            @{
                                                var jenis = Model.BanquetDetail.JenisBanquet switch
                                                {
                                                    1 => "Kecil",
                                                    2 => "Sedang",
                                                    3 => "Besar",
                                                    _ => "Lainnya"
                                                };
                                            }
                                            @jenis
                                        </td>
                                        <td class="text-center">@Model.BanquetDetail.Kapasitas</td>
                                        <td class="text-end">@Model.BanquetDetail.HargaSewa.ToString("C0")</td>
                                        <td class="text-end">@Model.BanquetDetail.HargaPaket.ToString("C0")</td>
                                        <td class="text-center">@Model.BanquetDetail.Okupansi</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Detail Fasilitas -->
                    <div class="col-lg-12 mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold">Detail Fasilitas</h5>
                            <table class="table table-bordered">
                                <thead class="table-light text-center">
                                    <tr>
                                        <td>Nama</td>
                                        <td>Jumlah</td>
                                        <td>Kapasitas</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fasilitas in Model.FasilitasDetail)
                                    {
                                        <tr>
                                            <td>@fasilitas.Nama</td>
                                            <td class="text-center">@fasilitas.Jumlah</td>
                                            <td class="text-center">@fasilitas.Kapasitas</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Detail Kamar -->
                    <div class="col-lg-12 mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold">Detail Kamar</h5>
                            <table class="table table-bordered">
                                <thead class="table-light text-center">
                                    <tr>
                                        <th>Tipe Kamar</th>
                                        <th>Jumlah</th>
                                        <th>Tarif per Malam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kamar in Model.KamarDetail)
                                    {
                                        <tr>
                                            <td>@kamar.Kamar</td>
                                            <td class="text-center">@kamar.Jumlah</td>
                                            <td class="text-end">@kamar.Tarif.ToString("C0")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

