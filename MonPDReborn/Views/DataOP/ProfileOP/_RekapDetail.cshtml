@(Html.DevExtreme().DataGrid<MonPDReborn.Models.DataOP.ProfileOPVM.RekapDetail>()
    .ID(string.Concat("RekapDetailGrid_", ViewData["JenisPajak"].ToString(), "_", ViewData["Tahun"].ToString()))
    .DataSource(d => d.Mvc()
    .LoadAction("GetAkunKelompok")
    .Key("Kategori")
    .LoadParams(new
    {
        JenisPajak = ViewData["JenisPajak"],
        Tahun = ViewData["Tahun"]
    })
    )
    .ShowColumnLines(true)
    .ShowRowLines(true)
    .ShowBorders(true)
    .ShowColumnHeaders(true)
    .RowAlternationEnabled(true)
    .Paging(p => p.PageSize(10))
    .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 5, 10, 20 })
        .ShowInfo(true)
    )
    .Columns(columns =>
    {

        columns.AddFor(m => m.Kategori).Caption("Kategori").Alignment(HorizontalAlignment.Center);
        columns.AddFor(m => m.OPAwal).Caption("OP Awal").Alignment(HorizontalAlignment.Center);
        columns.AddFor(m => m.TutupSementara).Caption("Tutup Sementara").Alignment(HorizontalAlignment.Center);
        columns.AddFor(m => m.TutupPermanen).Caption("Tutup Permanen").Alignment(HorizontalAlignment.Center);
        columns.AddFor(m => m.OPBaru).Caption("OP Baru").Alignment(HorizontalAlignment.Center);
        columns.AddFor(m => m.Buka).Caption("Buka").Alignment(HorizontalAlignment.Center);
    })
    .Summary(summary =>
    {
        summary.TotalItems(items =>
        {
            items.AddFor(m => m.Kategori).SummaryType(SummaryType.Custom).DisplayFormat("Total").Alignment(HorizontalAlignment.Center);
            items.AddFor(m => m.OPAwal).SummaryType(SummaryType.Sum).DisplayFormat("{0}").Alignment(HorizontalAlignment.Center);
            items.AddFor(m => m.TutupSementara).SummaryType(SummaryType.Sum).DisplayFormat("{0}").Alignment(HorizontalAlignment.Center);
            items.AddFor(m => m.TutupPermanen).SummaryType(SummaryType.Sum).DisplayFormat("{0}").Alignment(HorizontalAlignment.Center);
            items.AddFor(m => m.OPBaru).SummaryType(SummaryType.Sum).DisplayFormat("{0}").Alignment(HorizontalAlignment.Center);
            items.AddFor(m => m.Buka).SummaryType(SummaryType.Sum).DisplayFormat("{0}").Alignment(HorizontalAlignment.Center);
        });
    })
)
)