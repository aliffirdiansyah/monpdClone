@using MonPDReborn.Models.DataOP
@model ProfilePotensiOPVM.DetailPotensiPPJ

@{
    Layout = "_Layout";
    ViewBag.Title = "Detail Potensi Pajak Tenaga Listrik";

}
@if (Model !=null)
{
    
<div class="row">

    <div class="col-lg-12">
        <div class="card border border-primary border-2">
            <div class="card-body">
                <div class="row">

                    <div class="col-lg-8">
                        <div class="d-flex p-3">
                            <div class="flex-shrink-0">
                                <div class="avatar-md me-3">
                                    <span class="avatar-title bg-soft-primary rounded-circle fs-1">
                                        <i class="mdi mdi-lightbulb-on text-primary"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="mt-2">
                                <h4 class="fs-16 fw-semibold">
                                    Dashboard Pajak Reklame
                                </h4>
                                <p class="fs-16 lh-base">
                                    NOP : @Model.FormattedNOP
                                </p>
                                <p class="fs-16 lh-base">
                                    Status : @Model.Status
                                </p>
                                <p class="fs-16 lh-base">
                                    Periode : @Model.PeriodeData
                                </p>
                            </div>
                        </div>
                    </div>

                    @* <div class="col-lg-4">
                        <div class="card border border-primary border-2">
                            <div class="d-flex p-3">
                                <h3 class="fs-16 fw-semibold">Status : </h3>
                            </div>
                            <div class="d-flex p-3">
                                <h3 class="fs-16 fw-semibold">Periode : </h3>
                            </div>
                        </div>
                    </div> *@

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card bg-soft-primary">
            <div class="card-body">
                <h4 class="fs-14">RATA - RATA NJTL 6 BULAN</h4>
                <h3 class="fs-18 fw-semibold mb-1">RP. @Model.RataRataNJTL.ToString("N0")</h3>
                <h4 class="fs-14">Nilai Jual Tenaga Listrik rata-rata</h4>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card bg-soft-primary">
            <div class="card-body">
                <h4 class="fs-14">TOTAL PAJAK PENERANGAN JALAN</h4>
                <h3 class="fs-18 fw-semibold mb-1">Rp. @Model.TotalPajak.ToString("N0")</h3>
                <h4 class="fs-14">@Model.TarifPajak.ToString("P1") dari rata-rata NJTL</h4>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Detail NJTL Bulanan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.DetailNJTLBulanan.Count; i++)
                {
                    var item = Model.DetailNJTLBulanan[i];
                    <div class="d-flex p-3 py-0">
                        <p class="fs-14 text-muted flex-grow-1">Bulan ke-@(i + 1)</p>
                        <div class="flex-shrink-0">
                            <p class="fs-16 fw-semibold">Rp @item.NJTL.ToString("N0")</p>
                        </div>
                    </div>
                    @if (i < Model.DetailNJTLBulanan.Count - 1)
                    {
                        <hr />
                    }
                }
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex p-3 py-0">
                                    <p class="fs-14 text-muted flex-grow-1">Rata-rata NJTL</p>
                                    <div class="flex-shrink-0">
                                        <p class="fs-16 fw-semibold">Rp. @Model.RataRataNJTL.ToString("N0") </p>
                                    </div>
                                </div>
                                <small class="text-dark-50">Rata-rata Nilai Jual Tenaga Listrik dari 6 bulan terakhir</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Perhitungan Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="flex-grow-1">
                                    <h4 class="card-title text-black fs-16 mb-0">
                                        Komponen Perhitungan
                                    </h4>
                                </div>
                                <div class="d-flex p-3 py-0">
                                    <p class="fs-14 text-muted flex-grow-1">Rata-rata NJTL</p>
                                    <div class="flex-shrink-0">
                                        <p class="fs-16 fw-semibold">Rp. @Model.RataRataNJTL.ToString("N0") </p>
                                    </div>
                                </div>
                                <div class="d-flex p-3 py-0">
                                    <p class="fs-14 text-muted flex-grow-1">Tarif Pajak</p>
                                    <div class="flex-shrink-0">
                                        <p class="fs-16 fw-semibold">@Model.TarifPajak</p>
                                    </div>
                                </div><hr />
                                <div class="d-flex p-3 py-0">
                                    <p class="fs-14 text-muted flex-grow-1">Total Pajak</p>
                                    <div class="flex-shrink-0">
                                        <p class="fs-16 fw-semibold">Rp. @Model.TotalPajak.ToString("N0") </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="flex-grow-1">
                                    <h4 class="card-title text-black fs-16 mb-0">
                                        Rumus Perhitungan
                                    </h4>
                                </div>
                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <div class="flex-grow-1">
                                                    <h4 class="card-title text-black font-monospace fs-16 mb-0">
                                                        Pajak = Rata-rata NJTL x 1.5%
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <div class="flex-grow-1">
                                                    <h4 class="card-title text-black font-monospace fs-16 mb-0">
                                                      = Rp. @Model.RataRataNJTL.ToString("N0") x @Model.TarifPajak.ToString("P1") = Rp. @Model.TotalPajak.ToString("N0")
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Ringkasan Data
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex p-3 py-0">
                    <p class="fs-14 text-muted flex-grow-1">NOP</p>
                    <div class="flex-shrink-0">
                        <p class="fs-16 fw-semibold">@Model.FormattedNOP</p>
                    </div>
                </div>
                <div class="d-flex p-3 py-0">
                    <p class="fs-14 text-muted flex-grow-1">Status</p>
                    <div class="flex-shrink-0">
                        <p class="fs-16 fw-semibold">@Model.Status</p>
                    </div>
                </div>
                <div class="d-flex p-3 py-0">
                    <p class="fs-14 text-muted flex-grow-1">Periode Data</p>
                    <div class="flex-shrink-0">
                        <p class="fs-16 fw-semibold">@Model.PeriodeData</p>
                    </div>
                </div>
                <div class="d-flex p-3 py-0">
                    <p class="fs-14 text-muted flex-grow-1">Tarif Pajak</p>
                    <div class="flex-shrink-0">
                        <p class="fs-16 fw-semibold">@Model.TarifPajak.ToString("P1")</p>
                    </div>
                </div>
                <div class="d-flex p-3 py-0">
                    <p class="fs-14 text-muted flex-grow-1">Konsistensi NJTL</p>
                    <div class="flex-shrink-0">
                        <p class="fs-16 fw-semibold">@Model.KonsistensiNJTL</p>
                    </div>
                </div>
                <div class="d-flex p-3 py-0">
                    <p class="fs-14 text-muted flex-grow-1">Tanggal Perhitungan</p>
                    <div class="flex-shrink-0">
                        <p class="fs-16 fw-semibold">@Model.TanggalPerhitungan</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Tren NJTL 6 Bulan Terakhir
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="line_chart_gradient" data-colors='["--vz-success"]' class="apex-charts" dir="ltr"></div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Perbandingan NJTL dan Pajak
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div id="column_chart" data-colors='["--vz-danger", "--vz-primary", "--vz-success"]' class="apex-charts" dir="ltr"></div>
            </div>
        </div>
    </div> *@

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex bg-header-color align-items-center">
                <div class="flex-grow-1">
                    <h4 class="card-title text-black fs-16 mb-0">
                        Informasi Tambahan
                    </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header d-flex bg-header-color align-items-center">
                                <div class="flex-grow-1">
                                    <h4 class="card-title text-black fs-16 mb-0">
                                        Tentang Pajak Penerangan Jalan
                                    </h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="fs-14">
                                    Pajak Penerangan Jalan adalah pajak atas penggunaan tenaga listrik, 
                                    baik yang dihasilkan sendiri maupun diperoleh dari sumber lain. Tarif 
                                    pajak ditetapkan sebesar 1,5% dari nilai jual tenaga listrik.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header d-flex bg-header-color align-items-center">
                                <div class="flex-grow-1">
                                    <h4 class="card-title text-black fs-16 mb-0">
                                        Dasar Hukum
                                    </h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <i class="ri-checkbox-blank-circle-fill"></i>
                                        Peraturan Daerah tentang Pajak Daerah
                                    </li>
                                    <li class="list-group-item">
                                        <i class="ri-checkbox-blank-circle-fill"></i>
                                        Peraturan Bupati/Walikota tentang Pajak Penerangan Jalan
                                    </li>
                                    <li class="list-group-item">
                                        <i class="ri-checkbox-blank-circle-fill"></i>
                                        UU No. 28 Tahun 2009 tentang Pajak Daerah dan Retribusi Daerah
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header d-flex bg-header-color align-items-center">
                                <div class="flex-grow-1">
                                    <h4 class="card-title text-black fs-16 mb-0">
                                        Keterangan
                                    </h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="info-row">
                                    <p class="label">NJTL</p>
                                    <p class="value">Nilai Jual Tenaga Listrik</p>
                                </div>
                                <div class="info-row">
                                    <p class="label">NOP</p>
                                    <p class="value">Nomor Objek Pajak</p>
                                </div>
                                <div class="info-row">
                                    <p class="label">Bulan ke-1</p>
                                    <p class="value">Bulan terakhir sebelum perhitungan</p>
                                </div>
                                <div class="info-row">
                                    <p class="label">Bulan ke-6</p>
                                    <p class="value">Enam bulan sebelum perhitungan</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
}
else
{
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="card text-center shadow-sm border-0">
                    <div class="card-body">
                        <img src="~/assets/images/coming-soon-img.png" alt="Tidak Ada Data" class="img-fluid mb-4" style="max-width: 180px;" />
                        <h5 class="card-title text-danger">Data Tidak Ditemukan</h5>
                        <p class="card-text text-muted">
                            Maaf, data yang Anda cari belum tersedia atau tidak ditemukan.
                            @* Coba ubah filter atau periksa kembali input Anda. *@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

