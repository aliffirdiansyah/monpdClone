@model MonPDReborn.Models.ReklamePublic.ReklamePublicVM.Show

@if (!Model.Data.Any())
{
    <div class="text-center py-5">
        <svg class="mb-3 text-secondary" width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.29-1.009-5.824-2.562M15 6.306a7.962 7.962 0 00-6 0m6 0a7.962 7.962 0 105.824 8.132M9.172 16.172L6.343 19M15.828 16.172L18.657 19"></path>
        </svg>
        <h3 class="h5 fw-bold text-dark">Tidak ada data ditemukan</h3>
        <p class="text-muted">Coba ubah kriteria pencarian Anda</p>
    </div>
}
else
{
    <div class="d-lg-none mb-4">
        @foreach (var item in Model.Data)
        {
            <div class="bg-white border border-secondary rounded-3 p-3 shadow-sm mb-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="fw-semibold text-dark mb-0">@item.Jalan</h5>
                    <span class="badge bg-primary bg-opacity-10 text-primary fw-bold">
                        Jumlah: @item.Jumlah
                    </span>
                </div>

                <div class="small">
                    <div class="d-flex mb-1">
                        <span class="text-muted me-2 fw-semibold" style="min-width: 70px;">Alamat:</span>
                        <span class="text-dark">@item.Alamat</span>
                    </div>

                    <div class="d-flex mb-1">
                        <span class="text-muted me-2 fw-semibold" style="min-width: 70px;">Jenis:</span>
                        <span class="badge bg-primary bg-opacity-10 text-primary text-wrap">@item.JenisReklame</span>
                    </div>

                    <div class="d-flex mb-1">
                        <span class="text-muted me-2 fw-semibold" style="min-width: 70px;">Isi Reklame:</span>
                        <span class="badge bg-primary bg-opacity-10 text-primary text-wrap">@item.IsiReklame</span>
                    </div>

                    <div class="d-flex mb-1">
                        <span class="text-muted me-2 fw-semibold" style="min-width: 70px;">Kategori:</span>
                        <span class="text-dark">@item.Kategori</span>
                    </div>

                    <div class="d-flex">
                        <span class="text-muted me-2 fw-semibold" style="min-width: 70px;">Tayang:</span>
                        <div class="d-flex align-items-start">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar me-1 text-muted" viewBox="0 0 16 16">
                                <path d="M3.5 0a.5.5 0 0 0 0 1H4v1a.5.5 0 0 0 1 0V1h6v1a.5.5 0 0 0 1 0V1h.5a.5.5 0 0 0 0-1H12V0h-1v1H5V0H4v1h-.5zM1 3.5A1.5 1.5 0 0 1 2.5 2h11A1.5 1.5 0 0 1 15 3.5V5H1V3.5zM0 6v6.5A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5V6H0zm1 1h14v6.5a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5V7z" />
                            </svg>
                            <span class="text-dark text-wrap">@($"{item.tglMulai:dd MMM yyyy} - {item.tglAkhir:dd MMM yyyy}")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <div class="container-fluid mb-5">
        <div class="d-none d-lg-block">
            <div class="table-responsive">
                @(Html.DevExtreme().DataGrid<MonPDReborn.Models.ReklamePublic.ReklamePublicVM.ReklameJalan>()
                            .ID("hasilReklameGrid")
                            .DataSource(Model.Data)
                            .ShowBorders(true)
                            .ShowColumnLines(true)
                            .RowAlternationEnabled(true)
                            .ColumnAutoWidth(true)
                            .AllowColumnResizing(true)
                            .Paging(p => p.PageSize(10))
                            .Pager(p => p
                            .ShowPageSizeSelector(true)
                            .AllowedPageSizes(new[] { 5, 10, 20 })
                            .ShowInfo(true)
                            )
                            .Columns(columns =>
                            {
                                columns.AddFor(m => m.Jalan)
                            .Caption("Jalan");

                                columns.AddFor(m => m.Alamat)
                            .Caption("Alamat");

                                columns.AddFor(m => m.JenisReklame)
                            .Caption("Jenis Reklame")
                            .CellTemplate(@<text>
                                               <span class="badge bg-info text-dark"><%- value %></span>
                                           </text>);

                            columns.AddFor(m => m.IsiReklame)
                            .Caption("Isi Reklame");

                                columns.AddFor(m => m.Kategori)
                            .Caption("Kategori Reklame");

                                columns.AddFor(m => m.tglMulai)
                            .Caption("Tanggal Mulai");

                                columns.AddFor(m => m.tglAkhir)
                            .Caption("Tanggal Akhir");

                                columns.AddFor(m => m.Jumlah)
                            .Caption("Jumlah")
                            .Alignment(HorizontalAlignment.Center)
                            .CssClass("fw-bold text-primary");
                            })
                            )
            </div>

            
        </div>
    </div>
}


