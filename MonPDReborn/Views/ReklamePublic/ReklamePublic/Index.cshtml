@section Scripts{
    <script>
            let captchaText = '';

        function generateCaptcha() {
            const canvas = document.getElementById('captchaCanvas');
            const ctx = canvas.getContext('2d');
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            captchaText = Math.random().toString(36).substring(2, 8).toUpperCase();
            ctx.font = '24px Arial';
            ctx.fillStyle = '#000';
            ctx.fillText(captchaText, 10, 30);
        }

        function searchData() {
            const captchaInput = document.getElementById('captchaInput').value.toUpperCase();

            if (captchaInput !== captchaText) {
                alert('Kode CAPTCHA tidak sesuai! Silakan coba lagi.');
                generateCaptcha();
                document.getElementById('captchaInput').value = '';
                return;
            }

            const namaJalan = document.getElementById('namaJalanSearch').value;

            // Tampilkan loading
            $('#loadingIndicator').removeClass('hidden');
            $('#resultsSection').removeClass('hidden');
            $('#resultsContent').html('');

            $.ajax({
                url: '@Url.Action("Show", "ReklamePublic")',
                type: 'GET',
                data: { namaJalan },
                success: function (result) {
                    // Delay 2 detik sebelum menampilkan hasil
                    setTimeout(function () {
                        $('#loadingIndicator').addClass('hidden');
                        $('#resultsContent').html(result);
                        document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
                    }, 1000);
                },
                error: function () {
                    $('#loadingIndicator').addClass('hidden');
                    alert('Terjadi kesalahan saat mengambil data.');
                }
            });
        }



        document.addEventListener('DOMContentLoaded', function() {
            generateCaptcha();
            document.getElementById('currentDate').textContent = new Date().toLocaleDateString('id-ID', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        });

        window.onload = generateCaptcha;
    </script>
}
    

