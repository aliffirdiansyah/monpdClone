@model MonPDReborn.Models.ReklamePublic.ReklamePublicVM.Index
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    Layout = "~/Views/Shared/_LayoutNon.cshtml";
    var siteKey = Configuration["RecaptchaSettings:SiteKey"];
    // Layout = "~/Views/Shared/_DevExtremeLayout.cshtml";
}
<div class="row">
    
    <center>
        <div class="col-lg-8 col-sm-12">
            <div class="card">
                <div class="card-header d-flex bg-primary align-items-center">
                    <div class="flex-grow-1">
                        <h2 class="h5 mb-1 d-flex align-items-center text-white">
                            <svg class="me-2" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Pencarian Data
                        </h2>
                    </div>
                </div>
                <div class="card-body">
                    <form id="formPencarian" onsubmit="event.preventDefault(); searchData();">
                        @Html.AntiForgeryToken()

                        <div class="row gy-2">

                            <div class="col-lg-12">
                                <label for="namaJalanSearch" class="form-label d-flex align-items-center fs-14">Nama Jalan</label>
                                @* <input type="text" id="namaJalanSearch" name="namaJalanSearch" placeholder="Cari nama jalan..."
                               class="form-control"> *@
                                @(Html.DevExtreme().SelectBoxFor(m => m.selectedUpaya)
                                                                .ID("namaJalanView")
                                                                .ValueExpr("Value")
                                                                .DisplayExpr("Text")
                                                                .DataSource(d => d.Mvc()
                                                                .Controller("ReklamePublic")
                                                                .LoadAction("GetNama").Key("filter"))
                                                                .SearchExpr("Text")
                                                                .SearchEnabled(true)
                                                                .MinSearchLength(3)
                                                                )
                            </div>

                            <div class="col-lg-12">
                                <div class="form-control p-0 d-flex align-items-center" id="html_element" style="height: auto;"></div>
                            </div>

                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary w-100 py-2">
                                    🔍 Cari Data Reklame
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
        <div class="col-lg-8 col-sm-12">
            <div id="resultsSection" class="d-none">

                <div class="card shadow-sm">
                    <!-- Header Card -->
                    <div class="card-header bg-primary d-flex align-items-center">
                        <h2 class="h5 fw-semibold text-white mb-0">
                            Hasil Pencarian Data Reklame
                        </h2>
                    </div>

                    <!-- Body Card -->
                    <div class="card-body">
                        <!-- Loading Indicator -->
                        <div id="loadingIndicator" class="text-center py-3 d-none">
                            <div class="spinner-border text-primary mb-2" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted small mb-0">Memuat data, mohon tunggu...</p>
                        </div>

                        <!-- Hasil AJAX akan dimuat di sini -->
                        <div id="resultsContent"></div>
                    </div>
                </div>
            </div>
        </div>
    </center>

</div>

@section Scripts {
    <script type="text/javascript">
        var widgetId; // simpan ID reCAPTCHA untuk digunakan nanti

        var onloadCallback = function () {
           grecaptcha.render('html_element', {
              'sitekey': '@(siteKey)'
           });
        };


        function onSubmit(event) {
           var token = grecaptcha.getResponse();
           document.getElementById("RecaptchaToken").value = token
        }
    </script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
            async defer>
    </script>
    <script>
        function searchData() {
            const namaJalan = $("#namaJalanView").dxSelectBox("instance").option("value");
            const recaptchaToken = grecaptcha.getResponse(widgetId); // Ambil token dari widget

            if (!recaptchaToken) {
                alert("⚠ Silakan verifikasi CAPTCHA terlebih dahulu.");
                return;
            }

            // Ambil token antiforgery dari form
            const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();

            $('#loadingIndicator').removeClass('d-none');
            $('#resultsSection').removeClass('d-none');
            $('#resultsContent').html('');

            $.ajax({
                url: '@Url.Action("Show", "ReklamePublic")',
                type: 'POST',
                data: {
                    __RequestVerificationToken: antiForgeryToken,
                    namaJalan: namaJalan,
                    recaptchaToken: recaptchaToken
                },
                success: function (result) {
                    console.log(result);
                    $('#loadingIndicator').addClass('d-none');

                    // Kalau result.Status undefined → berarti yang dikembalikan adalah PartialView
                    if (result.Status === undefined) {
                        $('#resultsContent').html(result);
                    } else {
                        $('#resultsContent').html(`<p class="text-danger">⚠ ${result.Message}</p>`);
                    }

                    document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });

                    // Refresh CAPTCHA setelah submit
                    grecaptcha.reset(widgetId);
                },
                error: function () {
                    $('#loadingIndicator').addClass('d-none');
                    $('#resultsContent').html('<p class="text-danger">⚠ Gagal memuat data. Silakan coba lagi.</p>');

                    // Refresh CAPTCHA saat error
                    grecaptcha.reset(widgetId);
                }
            });
        }



    </script>
    
    <script>
        function refreshCaptcha() {
            $.get('@Url.Action("GetNewCaptcha", "ReklamePublic")', function (data) {
                $('#number1').text(data.number1);
                $('#number2').text(data.number2);
                $('#userAnswer').val('');
            });
        }
    </script>


}


