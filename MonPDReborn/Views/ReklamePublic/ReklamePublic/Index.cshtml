@model MonPDReborn.Models.ReklamePublic.ReklamePublicVM.Index
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    Layout = "~/Views/Shared/_LayoutNon.cshtml";
    var siteKey = Configuration["RecaptchaSettings:SiteKey"];
    // Layout = "~/Views/Shared/_DevExtremeLayout.cshtml";
}
<div class="row">
    
    <center>
        <div class="col-lg-8 col-sm-12">
            <div class="card">
                <div class="card-header d-flex bg-primary align-items-center">
                    <div class="flex-grow-1">
                        <h2 class="h5 mb-1 d-flex align-items-center text-white">
                            <svg class="me-2" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Pencarian Data Reklame Aktif
                        </h2>
                    </div>
                </div>
                <div class="card-body">
                    <form id="formPencarian" onsubmit="event.preventDefault(); searchData();">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-warning py-2 mb-3" role="alert">
                            ⚠️ Silakan pilih Nama Jalan atau Detail Lokasi Reklame.
                        </div>

                        <div class="row gy-2">

                            <div class="col-lg-8">
                                @(Html.DevExtreme().SelectBoxFor(m => m.selectedUpaya)
                                                                .ID("namaJalanView")
                                                                .ValueExpr("Value")
                                                                .DisplayExpr("Text")
                                                                .DataSource(d => d.Mvc()
                                                                .Controller("ReklamePublic")
                                                                .LoadAction("GetNama").Key("filter"))
                                                                .SearchExpr("Text")
                                                                .SearchEnabled(true)
                                                                .Placeholder("Pilih Nama Jalan")
                                                                .MinSearchLength(3)
                                                                )
                            </div>

                            <div class="col-lg-4">
                                @(Html.DevExtreme().SelectBoxFor(m => m.lokasiUpaya)
                                                                .ID("lokasiReklameView")
                                                                .ValueExpr("Value")
                                                                .DisplayExpr("Text")
                                                                .DataSource(d => d.Mvc()
                                                                .Controller("ReklamePublic")
                                                                .LoadAction("GetLokasi").Key("filter"))
                                                                .SearchExpr("Text")
                                                                .SearchEnabled(true)
                                                                .Placeholder("Pilih Detail Lokasi")
                                                                .MinSearchLength(2)
                                                                )
                            </div>

                            <div class="col-lg-12">
                                <div class="form-control p-0 d-flex align-items-center" id="html_element" style="height: auto;"></div>
                            </div>

                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary w-100 py-2">
                                    🔍 Cari Data Reklame
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
        <div class="col-lg-8 col-sm-12">
            <div id="resultsSection" class="d-none">

                <div class="card shadow-sm">
                    <!-- Header Card -->
                    <div class="card-header bg-primary d-flex align-items-center">
                        <h2 class="h5 fw-semibold text-white mb-0">
                            Hasil Pencarian Data Reklame
                        </h2>
                    </div>

                    <!-- Body Card -->
                    <div class="card-body">
                        <!-- Loading Indicator -->
                        <div id="loadingIndicator" class="text-center py-3 d-none">
                            <div class="spinner-border text-primary mb-2" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted small mb-0">Memuat data, mohon tunggu...</p>
                        </div>

                        <!-- Hasil AJAX akan dimuat di sini -->
                        <div id="resultsContent"></div>
                    </div>
                </div>
            </div>
        </div>
    </center>
    <!-- Harus diletakkan di View -->
    <div id="popupImageContainer"></div>


</div>

@section Scripts {
    <script type="text/javascript">
        var widgetId; // simpan ID reCAPTCHA untuk digunakan nanti

        var onloadCallback = function () {
           grecaptcha.render('html_element', {
              'sitekey': '@(siteKey)'
           });
        };


        function onSubmit(event) {
           var token = grecaptcha.getResponse();
           document.getElementById("RecaptchaToken").value = token
        }
    </script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
            async defer>
    </script>
    <script>
        function searchData() {
            const namaJalan = $("#namaJalanView").dxSelectBox("instance").option("value");
            const detailLokasi = $("#lokasiReklameView").dxSelectBox("instance").option("value");
            const recaptchaToken = grecaptcha.getResponse(widgetId); // Ambil token dari widget

            if (!recaptchaToken) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Verifikasi CAPTCHA',
                    text: '⚠ Silakan verifikasi CAPTCHA terlebih dahulu.',
                    confirmButtonText: 'OK'
                });
                return;
            }

            // Normalisasi input (kalau kosong → null)
            const namaJalanVal = (namaJalan && namaJalan.trim() !== "") ? namaJalan : null;
            const detailLokasiVal = (detailLokasi && detailLokasi.trim() !== "") ? detailLokasi : null;

            // Validasi minimal salah satu terisi
            if (!namaJalanVal && !detailLokasiVal) {
                $('#resultsSection').removeClass('d-none');
                $('#resultsContent').html('<p class="text-danger">⚠ Isi minimal Nama Jalan atau Detail Lokasi!</p>');
                return;
            }

            // Ambil token antiforgery dari form
            const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();

            $('#loadingIndicator').removeClass('d-none');
            $('#resultsSection').removeClass('d-none');
            $('#resultsContent').html('');

            $.ajax({
                url: '@Url.Action("Show", "ReklamePublic")',
                type: 'POST',
                data: {
                    __RequestVerificationToken: antiForgeryToken,
                    namaJalan: namaJalanVal,
                    detailLokasi: detailLokasiVal,
                    recaptchaToken: recaptchaToken
                },
                success: function (result) {
                    console.log(result);
                    $('#loadingIndicator').addClass('d-none');

                    // Kalau result.Status undefined → berarti yang dikembalikan adalah PartialView
                    if (result.Status === undefined) {
                        $('#resultsContent').html(result);
                    } else {
                        $('#resultsContent').html(`<p class="text-danger">⚠ ${result.Message}</p>`);
                    }

                    document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });

                    // Refresh CAPTCHA setelah submit
                    grecaptcha.reset(widgetId);
                },
                error: function () {
                    $('#loadingIndicator').addClass('d-none');
                    $('#resultsContent').html('<p class="text-danger">⚠ Gagal memuat data. Silakan coba lagi.</p>');

                    // Refresh CAPTCHA saat error
                    grecaptcha.reset(widgetId);
                }
            });
        }




    </script>
    
    <script>
        function refreshCaptcha() {
            $.get('@Url.Action("GetNewCaptcha", "ReklamePublic")', function (data) {
                $('#number1').text(data.number1);
                $('#number2').text(data.number2);
                $('#userAnswer').val('');
            });
        }

        function lampiranCellTemplate(container, options) {
            if (!options.data || !options.data.FOTO) {
                container.append($("<span>").text("Tidak ada foto"));
                return;
            }

            const base64Image = `data:image/jpeg;base64,${options.data.FOTO}`;

            const thumbnail = $("<img>")
                .attr("src", base64Image)
                .css({
                    width: "60px",
                    height: "60px",
                    objectFit: "cover",
                    borderRadius: "6px",
                    cursor: "pointer",
                    boxShadow: "0 0 4px rgba(0,0,0,0.3)"
                })
                .on("click", function () {
                    showImagePopup(base64Image);
                });

            container.append(thumbnail);
        }

        // ✅ Perbaikan fungsi popup
        function showImagePopup(imageSrc) {
            // Jika popup belum pernah dibuat
            if (!$("#popupImageContainer").data("dxPopup")) {
                $("#popupImageContainer").dxPopup({
                    title: "Foto Lampiran",
                    width: 700,
                    height: 600,
                    visible: false,
                    showCloseButton: true,
                    dragEnabled: true,
                    shading: true,
                    shadingColor: "rgba(0,0,0,0.7)",
                    contentTemplate: function (contentElement) {
                        $("<img>")
                            .attr("id", "popupImageElement")
                            .css({
                                width: "100%",
                                height: "100%",
                                objectFit: "contain",
                                borderRadius: "8px"
                            })
                            .appendTo(contentElement);
                    }
                });
            }

            // ✅ Ambil instance popup setelah pasti terbuat
            const popup = $("#popupImageContainer").dxPopup("instance");

            // Update src gambar sebelum tampil
            $("#popupImageElement").attr("src", imageSrc);

            // Tampilkan popup
            popup.show();
        }


        function onDetailClick(e) {
            const noFormulir = (e.row.data.NoFormulir || '').split(' ')[0];

            $.ajax({
                url: '/ReklamePublic/Detail',
                type: 'GET',
                data: { noFormulir },
                beforeSend: function () {
                    $("#loader").show();

                    const $modal = $("#staticBackdropExtraLargeScrollableCenter");
                    $modal.find(".modal-title").text("");
                    $modal.find(".modal-body").html("");
                },
                success: function (response) {
                    const $modal = $("#staticBackdropExtraLargeScrollableCenter");
                    if (response.Status === undefined) {
                        $modal.find(".modal-title").html("Detail Upaya – " + noFormulir);
                        $modal.find(".modal-body").html(response);
                        $modal.modal('show');
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Peringatan',
                            text: response.Message
                        });
                    }
                },
                error: function () {
                    const $modal = $("#staticBackdropExtraLargeScrollableCenter");
                    $modal.find(".modal-title").html("Error");
                    $modal.find(".modal-body").html('<p class="text-danger text-center">Terjadi kesalahan saat memuat data.</p>');
                    $modal.modal('show');
                },
                complete: function () {
                    $("#loader").hide();
                }
            });
        }
    </script>


}


