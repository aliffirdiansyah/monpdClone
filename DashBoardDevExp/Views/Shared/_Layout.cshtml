    @* <script src="~/assets/js/modernizr-2.8.3.js"></script> *@
    <style type="text/css">
        .card-preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: #ffffff;
        }

        #spiner {
            position: absolute;
            left: 50%;
            top: 40%;
            transform: translate(-50%,-50%);
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg)
            }
        }

        .required-star:after {
            content: " *";
            color: red;
        }

        #loading1 {
            background-color: black;
            opacity: 0.5;
            z-index: 9999;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            position: fixed;
        }

        .spinner, .spinner::before, .spinner::after {
            content: '';
            display: block;
            border: 4px solid transparent;
            border-radius: 50%;
            animation: spin infinite linear 2s;
            position: absolute;
        }

        .spinner {
            width: 100px;
            height: 100px;
            border-top-color: orange;
            top: calc(50% - 50px);
            left: calc(50% - 50px);
        }

        .teks h2 {
            font-family: Calibri;
            color: #a9a4ff;
            position: fixed;
            margin-top: 15px;
            margin-left: -20px;
            top: calc(50% - 50px);
            left: calc(50% - 50px);
            text-align: center;
        }

        .spinner::before {
            border-top-color: magenta;
            animation-duration: 4s;
            top: 2px;
            bottom: 2px;
            left: 2px;
            right: 2px;
        }

        .spinner::after {
            border-top-color: cyan;
            top: 8px;
            bottom: 8px;
            left: 8px;
            right: 8px;
        }
    </style>
</head>
